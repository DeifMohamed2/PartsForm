<%- include('Landing/partials/header') %>
    <%- include('Landing/partials/navbar') %>

    <!-- ====================================
         ERROR PAGE
         ==================================== -->
    <section class="error-section" style="min-height: 80vh; display: flex; align-items: center; justify-content: center; padding: 4rem 0;">
        <div class="container">
            <div style="text-align: center; max-width: 600px; margin: 0 auto;">
                <div style="margin-bottom: 2rem;">
                    <i data-lucide="alert-circle" style="width: 80px; height: 80px; color: #EF4444; margin: 0 auto;"></i>
                </div>
                <h1 style="font-size: 3rem; font-weight: 700; color: #1A2B3D; margin-bottom: 1rem;">
                    <%= typeof error !== 'undefined' && error ? error : 'Something went wrong' %>
                </h1>
                <p style="font-size: 1.125rem; color: #64748B; margin-bottom: 2rem;">
                    We're sorry, but something unexpected happened. Please try again later or contact support if the problem persists.
                </p>
                <div style="display: flex; gap: 1rem; justify-content: center;">
                    <a href="/" class="btn-primary" style="text-decoration: none; display: inline-flex; align-items: center; gap: 0.5rem;">
                        <i data-lucide="home"></i>
                        <span>Go to Home</span>
                    </a>
                    <a href="javascript:history.back()" class="btn-secondary" style="text-decoration: none; display: inline-flex; align-items: center; gap: 0.5rem;">
                        <i data-lucide="arrow-left"></i>
                        <span>Go Back</span>
                    </a>
                </div>
            </div>
        </div>
    </section>

    <script>
        // Initialize Lucide icons
        if (typeof lucide !== 'undefined') {
            lucide.createIcons();
        }
    </script>

    <%- include('Landing/partials/footer') %>

