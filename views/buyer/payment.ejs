<%- include('partials/header') %>
<link rel="stylesheet" href="/css/buyerCSS/buyer-main.css">

<%- include('partials/navbar') %>

<div class="buyer-page">
  <div class="buyer-container">
    <div style="padding: 4rem 0; text-align: center;">
      <div style="max-width: 600px; margin: 0 auto;">
        <div style="width: 100px; height: 100px; margin: 0 auto 2rem; background: linear-gradient(135deg, #10b981, #059669); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
          <i data-lucide="credit-card" style="width: 50px; height: 50px; color: white;"></i>
        </div>
        <h1 style="font-size: 2.5rem; color: #1a2b3d; margin-bottom: 1rem;">Payment</h1>
        <p style="font-size: 1.1rem; color: #64748b; margin-bottom: 2rem;">
          Manage your payment methods and transactions
        </p>
        <div class="buyer-card" style="padding: 3rem; text-align: center;">
          <i data-lucide="wallet" style="width: 60px; height: 60px; color: #cbd5e1; margin: 0 auto 1.5rem;"></i>
          <h3 style="font-size: 1.5rem; color: #1a2b3d; margin-bottom: 1rem;">Payment Center</h3>
          <p style="color: #64748b; margin-bottom: 2rem;">
            This page is under construction. Payment features coming soon.
          </p>
          <a href="/buyer" class="buyer-btn buyer-btn-primary">
            <i data-lucide="arrow-left"></i>
            <span>Back to Main</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

