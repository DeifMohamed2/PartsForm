<!-- ====================================
    AUTOMOTIVE SEARCH PAGE - PROFESSIONAL DESIGN
        ==================================== -->
<div class="search2-page automotive-theme">
  <!-- Hero Section - Automotive Theme -->
  <div class="search2-hero automotive-hero">
    <!-- Animated Car Icons Background -->
    <div class="automotive-icons-bg">
      <i data-lucide="car-front" class="floating-icon icon-1"></i>
      <i data-lucide="car" class="floating-icon icon-2"></i>
      <i data-lucide="truck" class="floating-icon icon-3"></i>
      <i data-lucide="fuel" class="floating-icon icon-4"></i>
      <i data-lucide="gauge" class="floating-icon icon-5"></i>
      <i data-lucide="settings" class="floating-icon icon-6"></i>
    </div>

    <div class="container">
      <div class="search2-hero-content">
        <div class="search2-badge automotive-badge">
          <i data-lucide="car-front"></i>
          <span>Automotive Parts Search</span>
        </div>

        <h1 class="search2-hero-title">
          Find <span class="highlight">Automotive Parts</span><br>
          From Global Suppliers
        </h1>

        <p class="search2-hero-subtitle">
          Access premium OEM and aftermarket automotive components with verified quality
        </p>

        <!-- Enhanced Search Bar -->
        <div class="search2-bar-wrapper">
          <div class="search2-bar">
            <div class="search2-input-group">
              <i data-lucide="search" class="search2-icon"></i>
              <input type="text" class="search2-input" id="search2-input" placeholder="Enter part number (or multiple: CAF-000267, SAF-000033, ICL-000013)" autocomplete="off">
              <button class="search2-clear-btn" id="search2-clear" style="display: none;">
                <i data-lucide="x"></i>
              </button>
            </div>

            <button class="search2-btn" id="search2-btn">
              <span>Search</span>
              <i data-lucide="arrow-right"></i>
            </button>

            <button class="search2-reset-btn" id="search2-reset-btn" style="display: none;">
              <i data-lucide="rotate-ccw"></i>
              <span>Reset</span>
            </button>
          </div>

          <div class="search2-autocomplete" id="search2-autocomplete"></div>
        </div>

        <!-- Quick Actions - Enhanced with AI -->
        <div class="search2-quick-actions">
          <button class="quick-action-btn" id="excel-upload-trigger">
            <i data-lucide="file-spreadsheet"></i>
            <span>Upload Excel</span>
          </button>
          <button class="quick-action-btn ai-filter-btn" id="ai-filter-trigger">
            <div class="ai-glow"></div>
            <i data-lucide="sparkles"></i>
            <span>AI Smart Filter</span>
          </button>
          <button class="quick-action-btn" id="advanced-filter-trigger">
            <i data-lucide="sliders-horizontal"></i>
            <span>Advanced Filters</span>
          </button>
          <button class="quick-action-btn" id="recent-searches-trigger">
            <i data-lucide="clock"></i>
            <span>Recent Searches</span>
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Results Section -->
  <%- include('partials/search-results') %>
</div>

<!-- Quick Search Modal -->
<%- include('partials/quick-search') %>

<!-- ====================================
     AI SMART FILTER MODAL - PROFESSIONAL AIUX DESIGN
     ==================================== -->
<!-- AI Smart Filter Modal - Light Mode -->
<div class="ai-filter-modal ai-filter-light" id="ai-filter-modal">
  <div class="ai-filter-backdrop" id="ai-filter-backdrop"></div>
  <div class="ai-filter-container">
    <!-- Decorative Background Elements -->
    <div class="ai-light-bg-elements">
      <div class="ai-light-circle circle-1"></div>
      <div class="ai-light-circle circle-2"></div>
      <div class="ai-light-circle circle-3"></div>
    </div>

    <!-- AI Filter Header -->
    <div class="ai-filter-header">
      <div class="ai-filter-title-wrapper">
        <div class="ai-icon-wrapper">
          <i data-lucide="sparkles" class="ai-icon"></i>
        </div>
        <div class="ai-title-content">
          <h2 class="ai-filter-title"><span class="title-ai">AI</span> Smart Filter</h2>
          <p class="ai-filter-subtitle">Tell me what you're looking for and I'll help you find it</p>
        </div>
      </div>
      <button class="ai-filter-close" id="ai-filter-close">
        <i data-lucide="x"></i>
      </button>
    </div>

    <!-- AI Chat Interface -->
    <div class="ai-filter-body">
      <!-- AI Input Section - Moved to Top -->
      <div class="ai-input-section">
        <div class="ai-input-wrapper">
          <textarea 
            class="ai-input" 
            id="ai-filter-input" 
            placeholder="Example: Find me Bosch brake pads under $500 from German suppliers..."
            rows="2"
          ></textarea>
          <button class="ai-submit-btn" id="ai-submit-btn" title="Find Parts">
            <i data-lucide="search"></i>
          </button>
        </div>
        
        <!-- Quick Suggestion Chips -->
        <div class="ai-input-hints">
          <span class="hint-label">Try:</span>
          <div class="ai-hints-container">
            <button class="ai-hint-chip" data-hint="Find OEM brake parts under $500 from verified suppliers">
              OEM parts under $500
            </button>
            <button class="ai-hint-chip" data-hint="Show bearings from SKF in stock with express delivery">
              SKF bearings with fast delivery
            </button>
            <button class="ai-hint-chip" data-hint="German suppliers with ISO certification">
              German certified suppliers
            </button>
          </div>
        </div>
      </div>

      <!-- AI Response Section -->
      <div class="ai-response-section" id="ai-response-section" style="display: none;">
        <div class="ai-response-header">
          <div class="ai-thinking-indicator" id="ai-thinking">
            <div class="thinking-dots">
              <span></span>
              <span></span>
              <span></span>
            </div>
            <span class="thinking-text">Analyzing your request...</span>
          </div>
          <div class="ai-response-title" id="ai-response-title" style="display: none;">
            <i data-lucide="check-circle"></i>
            <span>Found the perfect filters!</span>
          </div>
        </div>

        <!-- AI Generated Filters Preview -->
        <div class="ai-filters-preview" id="ai-filters-preview" style="display: none;">
          <div class="ai-filters-grid" id="ai-filters-grid">
            <!-- Dynamic filter cards will be inserted here -->
          </div>
        </div>
      </div>

      <!-- AI Features Info -->
      <div class="ai-features-info">
        <div class="ai-feature-item">
          <div class="ai-feature-icon">
            <i data-lucide="brain"></i>
          </div>
          <div class="ai-feature-content">
            <h4>Smart Search</h4>
            <p>Understands natural language queries</p>
          </div>
        </div>
        <div class="ai-feature-item">
          <div class="ai-feature-icon">
            <i data-lucide="sliders-horizontal"></i>
          </div>
          <div class="ai-feature-content">
            <h4>Auto Filters</h4>
            <p>Automatically applies relevant filters</p>
          </div>
        </div>
        <div class="ai-feature-item">
          <div class="ai-feature-icon">
            <i data-lucide="zap"></i>
          </div>
          <div class="ai-feature-content">
            <h4>Save Time</h4>
            <p>Find parts faster than manual filtering</p>
          </div>
        </div>
      </div>
    </div>

    <!-- AI Filter Footer -->
    <div class="ai-filter-footer">
      <div class="ai-footer-info">
        <i data-lucide="info"></i>
        <span>Use sidebar for manual filters</span>
      </div>
      <div class="ai-filter-actions">
        <button class="ai-btn-secondary" id="ai-clear-all">
          <i data-lucide="rotate-ccw"></i>
          <span>Reset</span>
        </button>
        <button class="ai-btn-primary" id="ai-apply-filters">
          <i data-lucide="search"></i>
          <span>Apply Filters</span>
          <span class="results-count" id="results-preview">0</span>
        </button>
      </div>
    </div>
  </div>
</div>

<!-- ====================================
     SIGN IN MODAL
     ==================================== -->
<div class="modal" id="sign-in-modal">
  <div class="modal-backdrop" id="modal-backdrop"></div>
  <div class="modal-content">
    <button class="modal-close" id="modal-close">
      <i data-lucide="x"></i>
    </button>

    <div class="modal-body">
      <!-- Header Badge -->
      <div class="modal-badge">
        <i data-lucide="sparkles"></i>
        <span>WELCOME BACK</span>
      </div>

      <h3 class="modal-title">Sign In</h3>
      <p class="modal-description">
        Continue your industrial sourcing journey
      </p>

      <form class="sign-in-form" id="sign-in-form">
        <div class="form-group">
          <label class="form-label">Email Address</label>
          <div class="input-wrapper">
            <i data-lucide="mail" class="input-icon"></i>
            <input type="email" class="form-input" id="login-email" placeholder="your@email.com" required>
          </div>
        </div>

        <div class="form-group">
          <label class="form-label">Password</label>
          <div class="input-wrapper">
            <i data-lucide="lock" class="input-icon"></i>
            <input type="password" class="form-input" id="login-password" placeholder="••••••••" required>
          </div>
        </div>

        <div class="form-footer">
          <a href="#" class="forgot-password">Forgot password?</a>
        </div>

        <button type="submit" class="btn-primary btn-full">
          <span>Sign In</span>
          <i data-lucide="arrow-right"></i>
        </button>
      </form>

      <!-- Sign Up Link -->
      <div class="modal-footer">
        <span>Don't have an account?</span>
        <a href="#" class="sign-up-link">Sign Up</a>
      </div>

      <!-- Divider -->
      <div class="modal-divider">
        <span>or continue with</span>
      </div>

      <!-- Social Login -->
      <div class="social-login">
        <button class="social-btn">Google</button>
        <button class="social-btn">LinkedIn</button>
      </div>
    </div>
  </div>
</div>

