<%- include('partials/header') %>
<link rel="stylesheet" href="/css/buyerCSS/buyer-main.css">
<link rel="stylesheet" href="/css/buyerCSS/contacts.css">

<%- include('partials/navbar') %>

<!-- ====================================
     CONTACT PAGE - PROFESSIONAL HERO DESIGN
     ==================================== -->
<div class="contacts-page">
  <!-- Hero Section -->
  <div class="contacts-hero">
    <div class="contacts-hero-content">
      <div class="contact-badge">
        <i data-lucide="headphones"></i>
        <span><%= t('contacts.badge') %></span>
      </div>

      <h1 class="contacts-hero-title"><%= t('contacts.title') %></h1>
      <p class="contacts-hero-subtitle">
        <%= t('contacts.subtitle') %>
      </p>
    </div>
  </div>

  <!-- Main Content -->
  <div class="buyer-container">
    <div class="contacts-section">
      <div class="contacts-two-column">
        <!-- Left Column - Company Information -->
        <div class="company-info-card-main">
          <h2 class="company-name">PARTSFORM</h2>
          <div class="company-details">
            <div class="company-detail-item">
              <span class="detail-label"><%= t('contacts.address') %></span>
              <span class="detail-value">Office 159, 4th Floor, Building A1, Dubai South<br>Executive Hub, P.O. Box: 713870, Dubai, United Arab Emirates.</span>
            </div>
            <div class="company-detail-item">
              <span class="detail-label"><%= t('contacts.email') %></span>
              <a href="mailto:info@partsform.com" class="detail-value link">info@partsform.com</a>
            </div>
            <div class="company-detail-item">
              <span class="detail-label"><%= t('contacts.website') %></span>
              <a href="https://www.partsform.com" class="detail-value link" target="_blank">www.partsform.com</a>
            </div>
          </div>
        </div>

        <!-- Right Column - Google Maps -->
        <div class="maps-card-main">
          <div class="maps-container-main">
            <iframe 
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d462560.6828164278!2d54.947330799999995!3d25.0762!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3e5f43496ad9c645%3A0xbde66e5084295162!2sDubai%20-%20United%20Arab%20Emirates!5e0!3m2!1sen!2s!4v1234567890123!5m2!1sen!2s"
              width="100%" 
              height="100%" 
              style="border:0;" 
              allowfullscreen="" 
              loading="lazy" 
              referrerpolicy="no-referrer-when-downgrade"
              title="PARTSFORM Office Location - Dubai, UAE"
            ></iframe>
          </div>
        </div>
      </div>

      <!-- Social Media Section -->
      <div class="social-media-card">
        <div class="social-media-container">
          <a href="#" class="social-media-link linkedin" title="LinkedIn" target="_blank" rel="noopener noreferrer">
            <i data-lucide="linkedin"></i>
          </a>
          <a href="#" class="social-media-link twitter" title="Twitter" target="_blank" rel="noopener noreferrer">
            <i data-lucide="twitter"></i>
          </a>
          <a href="#" class="social-media-link facebook" title="Facebook" target="_blank" rel="noopener noreferrer">
            <i data-lucide="facebook"></i>
          </a>
          <a href="#" class="social-media-link instagram" title="Instagram" target="_blank" rel="noopener noreferrer">
            <i data-lucide="instagram"></i>
          </a>
          <a href="#" class="social-media-link youtube" title="YouTube" target="_blank" rel="noopener noreferrer">
            <i data-lucide="youtube"></i>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/quick-search') %>
<%- include('partials/footer') %>

<script src="/js/main.js"></script>
<script src="/js/quick-search.js"></script>
<script src="/js/cart.js"></script>
<script src="/js/cart-badge-updater.js"></script>
<script>
  lucide.createIcons();
  window.addEventListener('load', () => lucide.createIcons());
</script>