<!-- Initialize Lucide Icons -->
<script>
  lucide.createIcons();
  
  // Smooth scroll to the clicked card when clicking Learn More
  document.addEventListener('DOMContentLoaded', () => {
    const learnMoreButtons = document.querySelectorAll('.tier-action');
    
    learnMoreButtons.forEach(button => {
      button.addEventListener('click', () => {
        const card = button.closest('.tier-card');
        if (card) {
          card.scrollIntoView({ 
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });
  });
</script>