<!-- ====================================
     AOG QUOTE COMPARISON - SIMPLIFIED
     ==================================== -->
<div class="aog-quote-page">
  <!-- Hero Header -->
  <div class="quote-hero">
    <div class="quote-hero-content">
      <div class="quote-badge">
        <i data-lucide="file-text"></i>
        <span>QUOTE COMPARISON</span>
      </div>

      <h1 class="quote-hero-title">Compare Supplier Quotes</h1>
      <p class="quote-hero-subtitle">
        Select the best supplier for your AOG parts based on delivery time, price, and reliability
      </p>

      <div class="quote-hero-meta">
        <div class="meta-item">
          <i data-lucide="hash"></i>
          <span>Case <%= caseId %></span>
        </div>
        <div class="meta-item">
          <i data-lucide="plane"></i>
          <span>Boeing 737-800</span>
        </div>
        <div class="meta-item">
          <i data-lucide="package"></i>
          <span>3 Parts Required</span>
        </div>
        <a href="/buyer/aog/command-center/<%= caseId %>" class="meta-item back-link">
          <i data-lucide="arrow-left"></i>
          <span>Back to Command Center</span>
        </a>
      </div>
    </div>
  </div>

  <div class="quote-container">

    <!-- Recommended Badge -->
    <div class="recommended-badge">
      <i data-lucide="star"></i>
      <span>Our Recommendation: <strong>Premier Aviation Supply</strong> - Fastest delivery with excellent reliability</span>
    </div>

    <!-- Quote Cards Grid -->
    <div class="quotes-grid">
      
      <!-- Quote Card 1 - Recommended -->
      <div class="quote-card recommended">
        <div class="quote-card-header">
          <div class="supplier-info">
            <div class="supplier-avatar">PA</div>
            <div class="supplier-details">
              <h3 class="supplier-name">Premier Aviation Supply</h3>
              <div class="supplier-location">
                <i data-lucide="map-pin"></i>
                <span>United States</span>
              </div>
            </div>
          </div>
          <div class="recommended-tag">
            <i data-lucide="star"></i>
            <span>Recommended</span>
          </div>
        </div>

        <div class="quote-card-body">
          <!-- Part Info -->
          <div class="info-row">
            <div class="info-label">Part Number</div>
            <div class="info-value">P/N: 7825934</div>
          </div>
          <div class="info-row">
            <div class="info-label">Condition</div>
            <div class="info-value">
              <span class="badge-certified">
                <i data-lucide="shield-check"></i>
                New - Certified
              </span>
            </div>
          </div>

          <!-- Delivery -->
          <div class="delivery-section">
            <div class="delivery-time-large">10 Days</div>
            <div class="delivery-date">
              <i data-lucide="calendar"></i>
              <span>Arrives by Jan 2, 2026</span>
            </div>
            <div class="delivery-badge fastest">
              <i data-lucide="zap"></i>
              <span>Fastest Option</span>
            </div>
          </div>

          <!-- Price -->
          <div class="price-section">
            <div class="price-main">$5,200</div>
            <div class="price-shipping">+ $450 shipping</div>
            <div class="price-total">Total: $5,650</div>
          </div>

          <!-- Rating -->
          <div class="rating-section">
            <div class="rating-score">98%</div>
            <div class="rating-stars">
              <i data-lucide="star" class="star-filled"></i>
              <i data-lucide="star" class="star-filled"></i>
              <i data-lucide="star" class="star-filled"></i>
              <i data-lucide="star" class="star-filled"></i>
              <i data-lucide="star" class="star-filled"></i>
            </div>
            <div class="rating-label">Excellent Reliability</div>
          </div>
        </div>

        <div class="quote-card-footer">
          <button class="btn-select">
            <i data-lucide="check-circle"></i>
            <span>Select This Quote</span>
          </button>
        </div>
      </div>

      <!-- Quote Card 2 -->
      <div class="quote-card">
        <div class="quote-card-header">
          <div class="supplier-info">
            <div class="supplier-avatar">SA</div>
            <div class="supplier-details">
              <h3 class="supplier-name">Skyline Aviation Parts</h3>
              <div class="supplier-location">
                <i data-lucide="map-pin"></i>
                <span>United States</span>
              </div>
            </div>
          </div>
          <div class="best-price-tag">
            <i data-lucide="dollar-sign"></i>
            <span>Best Price</span>
          </div>
        </div>

        <div class="quote-card-body">
          <!-- Part Info -->
          <div class="info-row">
            <div class="info-label">Part Number</div>
            <div class="info-value">P/N: 7825934</div>
          </div>
          <div class="info-row">
            <div class="info-label">Condition</div>
            <div class="info-value">
              <span class="badge-certified">
                <i data-lucide="shield-check"></i>
                New - Certified
              </span>
            </div>
          </div>

          <!-- Delivery -->
          <div class="delivery-section">
            <div class="delivery-time-large">14 Days</div>
            <div class="delivery-date">
              <i data-lucide="calendar"></i>
              <span>Arrives by Jan 6, 2026</span>
            </div>
            <div class="delivery-badge standard">
              <i data-lucide="clock"></i>
              <span>Standard Delivery</span>
            </div>
          </div>

          <!-- Price -->
          <div class="price-section">
            <div class="price-main">$4,850</div>
            <div class="price-shipping">+ $380 shipping</div>
            <div class="price-total">Total: $5,230</div>
          </div>

          <!-- Rating -->
          <div class="rating-section">
            <div class="rating-score">95%</div>
            <div class="rating-stars">
              <i data-lucide="star" class="star-filled"></i>
              <i data-lucide="star" class="star-filled"></i>
              <i data-lucide="star" class="star-filled"></i>
              <i data-lucide="star" class="star-filled"></i>
              <i data-lucide="star" class="star-empty"></i>
            </div>
            <div class="rating-label">Good Reliability</div>
          </div>
        </div>

        <div class="quote-card-footer">
          <button class="btn-select">
            <i data-lucide="check-circle"></i>
            <span>Select This Quote</span>
          </button>
        </div>
      </div>

      <!-- Quote Card 3 -->
      <div class="quote-card">
        <div class="quote-card-header">
          <div class="supplier-info">
            <div class="supplier-avatar">GA</div>
            <div class="supplier-details">
              <h3 class="supplier-name">Global Aerospace Trading</h3>
              <div class="supplier-location">
                <i data-lucide="map-pin"></i>
                <span>United Kingdom</span>
              </div>
            </div>
          </div>
        </div>

        <div class="quote-card-body">
          <!-- Part Info -->
          <div class="info-row">
            <div class="info-label">Part Number</div>
            <div class="info-value">P/N: 7825934</div>
          </div>
          <div class="info-row">
            <div class="info-label">Condition</div>
            <div class="info-value">
              <span class="badge-certified">
                <i data-lucide="shield-check"></i>
                New - Premium
              </span>
            </div>
          </div>

          <!-- Delivery -->
          <div class="delivery-section">
            <div class="delivery-time-large">21 Days</div>
            <div class="delivery-date">
              <i data-lucide="calendar"></i>
              <span>Arrives by Jan 13, 2026</span>
            </div>
            <div class="delivery-badge standard">
              <i data-lucide="clock"></i>
              <span>Standard Delivery</span>
            </div>
          </div>

          <!-- Price -->
          <div class="price-section">
            <div class="price-main">$6,500</div>
            <div class="price-shipping">+ $620 shipping</div>
            <div class="price-total">Total: $7,120</div>
          </div>

          <!-- Rating -->
          <div class="rating-section">
            <div class="rating-score">92%</div>
            <div class="rating-stars">
              <i data-lucide="star" class="star-filled"></i>
              <i data-lucide="star" class="star-filled"></i>
              <i data-lucide="star" class="star-filled"></i>
              <i data-lucide="star" class="star-filled"></i>
              <i data-lucide="star" class="star-empty"></i>
            </div>
            <div class="rating-label">Good Reliability</div>
          </div>
        </div>

        <div class="quote-card-footer">
          <button class="btn-select">
            <i data-lucide="check-circle"></i>
            <span>Select This Quote</span>
          </button>
        </div>
      </div>

    </div>

    <!-- Quick Summary -->
    <div class="quick-summary">
      <h2 class="summary-title">
        <i data-lucide="info"></i>
        Quick Summary
      </h2>
      <div class="summary-grid">
        <div class="summary-card">
          <div class="summary-icon fastest">
            <i data-lucide="zap"></i>
          </div>
          <div class="summary-content">
            <div class="summary-label">Fastest Delivery</div>
            <div class="summary-value">10 Days</div>
            <div class="summary-supplier">Premier Aviation</div>
          </div>
        </div>

        <div class="summary-card">
          <div class="summary-icon cheapest">
            <i data-lucide="dollar-sign"></i>
          </div>
          <div class="summary-content">
            <div class="summary-label">Lowest Total Cost</div>
            <div class="summary-value">$5,230</div>
            <div class="summary-supplier">Skyline Aviation</div>
          </div>
        </div>

        <div class="summary-card">
          <div class="summary-icon rated">
            <i data-lucide="star"></i>
          </div>
          <div class="summary-content">
            <div class="summary-label">Highest Rated</div>
            <div class="summary-value">98%</div>
            <div class="summary-supplier">Premier Aviation</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Why We Recommend -->
    <div class="recommendation-box">
      <div class="recommendation-header">
        <i data-lucide="lightbulb"></i>
        <h2>Why We Recommend Premier Aviation Supply</h2>
      </div>
      <div class="recommendation-points">
        <div class="point">
          <i data-lucide="check"></i>
          <span><strong>Fastest delivery:</strong> 4 days faster than alternatives, minimizing aircraft downtime</span>
        </div>
        <div class="point">
          <i data-lucide="check"></i>
          <span><strong>Excellent track record:</strong> 98% on-time delivery rate based on historical performance</span>
        </div>
        <div class="point">
          <i data-lucide="check"></i>
          <span><strong>Best value for AOG:</strong> Small price difference ($420 more) is offset by reduced downtime costs</span>
        </div>
      </div>
    </div>

  </div>
</div>

<!-- Quick Search Modal -->
<%- include('partials/quick-search') %>

