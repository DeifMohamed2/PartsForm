    if (isLoggedIn && userRole) {
      // User is logged in - show profile dropdown
      if (guestActions) guestActions.style.display = 'none';
      if (userDropdown) userDropdown.style.display = 'flex';
      if (userNameEl) userNameEl.textContent = userName || 'User';

      // Update links based on user role
      if (userRole === 'admin') {
        if (dashboardLink) dashboardLink.href = '/admin';
        if (profileLink) profileLink.href = '/admin/settings';
        if (settingsLink) settingsLink.href = '/admin/settings';
      } else {
        if (dashboardLink) dashboardLink.href = '/buyer';
        if (profileLink) profileLink.href = '/buyer/profile';
        if (settingsLink) settingsLink.href = '/buyer/settings';
      }
    } else {
      // User is not logged in - show guest actions
      if (guestActions) guestActions.style.display = 'flex';
      if (userDropdown) userDropdown.style.display = 'none';
    }
  }

  // Toggle user dropdown
  function setupDropdown() {
    const userProfileBtn = document.getElementById('userProfileBtnLanding');
    const userDropdown = document.getElementById('userProfileDropdownLanding');
    const userDropdownMenu = document.getElementById('userDropdownMenuLanding');

    if (userProfileBtn && userDropdown) {
      userProfileBtn.addEventListener('click', function(e) {
        e.stopPropagation();
        userDropdown.classList.toggle('active');
      });

      // Close on outside click
      document.addEventListener('click', function(e) {
        if (!userDropdown.contains(e.target)) {
          userDropdown.classList.remove('active');
        }
      });
    }
  }

  // Handle logout
  function setupLogout() {
    const logoutBtn = document.getElementById('logoutBtnLanding');
    
    if (logoutBtn) {
      logoutBtn.addEventListener('click', function(e) {
        e.preventDefault();
        
        // Call server to logout (clear cookie)
        fetch('/logout', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          }
        })
        .then(response => {
          // Clear all session data regardless of response
          localStorage.removeItem('isLoggedIn');
          localStorage.removeItem('userRole');
          localStorage.removeItem('userName');
          localStorage.removeItem('userEmail');
          localStorage.removeItem('buyerSession');
          localStorage.removeItem('adminSession');
          
          // Redirect to home or reload if already on home
          window.location.href = '/';
        })
        .catch(err => {
          console.error('Logout error:', err);
          // Force client-side logout anyway
          localStorage.removeItem('isLoggedIn');
          window.location.href = '/';
        });
      });
    }
  }

  // Initialize on DOM ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', function() {
      checkLoginState();
      setupDropdown();
      setupLogout();
    });
  } else {
    checkLoginState();
    setupDropdown();
    setupLogout();
  }

  // Also check on storage change (for multi-tab support)
  window.addEventListener('storage', function(e) {
    if (e.key === 'isLoggedIn' || e.key === 'userRole' || e.key === 'userName') {
      checkLoginState();
    }
  });
})();
</script>