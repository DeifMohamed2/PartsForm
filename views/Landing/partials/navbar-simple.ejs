<!-- ====================================
     SIMPLE NAVIGATION BAR - For Auth Pages
     ==================================== -->
<nav class="nav-bar-simple" id="navbar">
  <div class="container nav-container-simple">
    <!-- Logo - Links to Home -->
    <a href="/" class="nav-logo-simple">
      <img src="/images/PARTSFORM-LOGO.webp" alt="PartsForm Logo" class="logo-image-simple">
    </a>

    <!-- Right Side Actions -->
    <div class="nav-actions-simple">
      <!-- Guest Actions (shown when not logged in) -->
      <div class="guest-actions-simple" id="guestActionsSimple" style="display: <%= (typeof user !== 'undefined' && user) ? 'none' : 'flex' %>;">
        <% if (typeof showLogin !== 'undefined' && showLogin) { %>
          <button class="btn-sign-in-simple" id="sign-in-btn">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"/>
              <polyline points="10 17 15 12 10 7"/>
              <line x1="15" y1="12" x2="3" y2="12"/>
            </svg>
            <span>Sign In</span>
          </button>
        <% } %>
        <% if (typeof showRegister !== 'undefined' && showRegister) { %>
          <a href="/register" class="btn-register-simple">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
              <circle cx="9" cy="7" r="4"/>
              <line x1="19" y1="8" x2="19" y2="14"/>
              <line x1="22" y1="11" x2="16" y2="11"/>
            </svg>
            <span>Create Account</span>
          </a>
        <% } %>
      </div>

      <!-- User Profile Dropdown (shown when logged in) -->
      <div class="user-profile-dropdown-simple" id="userProfileDropdownSimple" style="display: <%= (typeof user !== 'undefined' && user) ? 'flex' : 'none' %>;">
        <button type="button" class="user-profile-btn-simple" id="userProfileBtnSimple">
          <div class="user-avatar-simple">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
              <circle cx="12" cy="7" r="4"/>
            </svg>
          </div>
          <span class="user-name-simple" id="userNameSimple"><%= (typeof user !== 'undefined' && user && user.firstName) ? user.firstName : 'User' %></span>
          <svg class="user-chevron-simple" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="6 9 12 15 18 9"/>
          </svg>
        </button>
        <div class="user-dropdown-menu-simple" id="userDropdownMenuSimple">
          <a href="/buyer" class="user-dropdown-item-simple" id="dashboardLinkSimple">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="3" width="7" height="9"/>
              <rect x="14" y="3" width="7" height="5"/>
              <rect x="14" y="12" width="7" height="9"/>
              <rect x="3" y="16" width="7" height="5"/>
            </svg>
            <span>Dashboard</span>
          </a>
          <a href="/buyer/profile" class="user-dropdown-item-simple" id="profileLinkSimple">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
              <circle cx="12" cy="7" r="4"/>
            </svg>
            <span>Profile</span>
          </a>
          <div class="user-dropdown-divider-simple"></div>
          <button class="user-dropdown-item-simple logout-btn-simple" id="logoutBtnSimple">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/>
              <polyline points="16 17 21 12 16 7"/>
              <line x1="21" y1="12" x2="9" y2="12"/>
            </svg>
            <span>Logout</span>
          </button>
        </div>
      </div>
    </div>
  </div>
</nav>

<!-- Simple Navbar Styles -->
<style>
  .nav-bar-simple {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 10000;
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(43, 82, 120, 0.08);
    padding: 1rem 0;
    animation: slideDown 0.6s ease-out;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .nav-container-simple {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 2rem;
    max-width: 1440px;
    margin: 0 auto;
  }

  .nav-logo-simple {
    display: flex;
    align-items: center;
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  .nav-logo-simple:hover {
    opacity: 0.8;
  }

  .logo-image-simple {
    height: 38px;
    width: auto;
  }

  .nav-actions-simple {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .guest-actions-simple {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .btn-sign-in-simple,
  .btn-register-simple {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1.25rem;
    border-radius: 10px;
    font-size: 0.9375rem;
    font-weight: 500;
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .btn-sign-in-simple {
    background: transparent;
    color: #2B5278;
    border: 1.5px solid rgba(43, 82, 120, 0.2);
  }

  .btn-sign-in-simple:hover {
    background: rgba(43, 82, 120, 0.05);
    border-color: #2B5278;
  }

  .btn-register-simple {
    background: linear-gradient(135deg, #2B5278 0%, #3B82F6 100%);
    color: white;
    box-shadow: 0 4px 12px rgba(43, 82, 120, 0.15);
  }

  .btn-register-simple:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(43, 82, 120, 0.25);
  }

  .btn-sign-in-simple svg,
  .btn-register-simple svg {
    width: 18px;
    height: 18px;
    stroke-width: 2;
  }

  /* User Profile Dropdown Styles */
  .user-profile-dropdown-simple {
    position: relative;
  }

  .user-profile-btn-simple {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 8px 14px;
    background: #ffffff;
    border: 1.5px solid rgba(43, 82, 120, 0.15);
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-family: inherit;
    font-size: 0.9rem;
    font-weight: 500;
    color: #2B5278;
  }

  .user-profile-btn-simple:hover {
    border-color: #3B82F6;
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.12);
  }

  .user-avatar-simple {
    width: 28px;
    height: 28px;
    background: linear-gradient(135deg, #2B5278 0%, #3B82F6 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .user-avatar-simple svg {
    color: #ffffff;
  }

  .user-name-simple {
    max-width: 100px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .user-chevron-simple {
    transition: transform 0.3s ease;
    color: #6B7280;
  }

  .user-profile-dropdown-simple.active .user-chevron-simple {
    transform: rotate(180deg);
  }

  .user-dropdown-menu-simple {
    position: absolute;
    top: calc(100% + 8px);
    right: 0;
    min-width: 180px;
    background: #ffffff;
    border-radius: 12px;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
    border: 1px solid rgba(0, 0, 0, 0.06);
    padding: 6px;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-8px);
    transition: all 0.25s ease;
    z-index: 10001;
  }

  .user-profile-dropdown-simple.active .user-dropdown-menu-simple {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .user-dropdown-item-simple {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 10px 12px;
    color: #374151;
    text-decoration: none;
    border-radius: 8px;
    transition: all 0.2s ease;
    font-size: 0.875rem;
    font-weight: 500;
    background: none;
    border: none;
    width: 100%;
    cursor: pointer;
    text-align: left;
  }

  .user-dropdown-item-simple:hover {
    background: rgba(59, 130, 246, 0.08);
    color: #2B5278;
  }

  .user-dropdown-item-simple svg {
    color: #6B7280;
    transition: color 0.2s ease;
  }

  .user-dropdown-item-simple:hover svg {
    color: #3B82F6;
  }

  .user-dropdown-divider-simple {
    height: 1px;
    background: rgba(0, 0, 0, 0.06);
    margin: 6px 0;
  }

  .logout-btn-simple:hover {
    background: rgba(239, 68, 68, 0.08);
    color: #DC2626;
  }

  .logout-btn-simple:hover svg {
    color: #DC2626;
  }

  @media (max-width: 768px) {
    .nav-container-simple {
      padding: 0 1rem;
    }

    .logo-image-simple {
      height: 32px;
    }

    .btn-sign-in-simple span,
    .btn-register-simple span {
      display: none;
    }

    .btn-sign-in-simple,
    .btn-register-simple {
      padding: 0.625rem;
    }

    .user-name-simple {
      display: none;
    }

    .user-profile-btn-simple {
      padding: 6px 10px;
    }
  }
</style>

<!-- Simple Navbar Auth Handler -->
<script>
(function() {
  'use strict';

  function checkLoginStateSimple() {
    <% if (typeof user !== 'undefined' && user) { %>
    // Sync server-side auth state
    if (localStorage.getItem('isLoggedIn') !== 'true') {
      localStorage.setItem('isLoggedIn', 'true');
      localStorage.setItem('userName', '<%= user.firstName %>');
      localStorage.setItem('userRole', 'buyer');
    }
    <% } %>
    const isLoggedIn = localStorage.getItem('isLoggedIn') === 'true';
    const userRole = localStorage.getItem('userRole');
    const userName = localStorage.getItem('userName');

    const guestActions = document.getElementById('guestActionsSimple');
    const userDropdown = document.getElementById('userProfileDropdownSimple');
    const userNameEl = document.getElementById('userNameSimple');
    const dashboardLink = document.getElementById('dashboardLinkSimple');
    const profileLink = document.getElementById('profileLinkSimple');

    if (isLoggedIn && userRole) {
      if (guestActions) guestActions.style.display = 'none';
      if (userDropdown) userDropdown.style.display = 'flex';
      if (userNameEl) userNameEl.textContent = userName || 'User';

      if (userRole === 'admin') {
        if (dashboardLink) dashboardLink.href = '/admin';
        if (profileLink) profileLink.href = '/admin/settings';
      } else {
        if (dashboardLink) dashboardLink.href = '/buyer';
        if (profileLink) profileLink.href = '/buyer/profile';
      }
    } else {
      if (guestActions) guestActions.style.display = 'flex';
      if (userDropdown) userDropdown.style.display = 'none';
    }
  }

  function setupDropdownSimple() {
    const userProfileBtn = document.getElementById('userProfileBtnSimple');
    const userDropdown = document.getElementById('userProfileDropdownSimple');

    if (userProfileBtn && userDropdown) {
      userProfileBtn.addEventListener('click', function(e) {
        e.stopPropagation();
        userDropdown.classList.toggle('active');
      });

      document.addEventListener('click', function(e) {
        if (!userDropdown.contains(e.target)) {
          userDropdown.classList.remove('active');
        }
      });
    }
  }

  function setupLogoutSimple() {
    const logoutBtn = document.getElementById('logoutBtnSimple');
    
    if (logoutBtn) {
      logoutBtn.addEventListener('click', function(e) {
        e.preventDefault();
        
        // Call server to logout (clear cookie)
        fetch('/logout', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          }
        })
        .then(response => {
          // Clear all session data regardless of response
          localStorage.removeItem('isLoggedIn');
          localStorage.removeItem('userRole');
          localStorage.removeItem('userName');
          localStorage.removeItem('userEmail');
          localStorage.removeItem('buyerSession');
          localStorage.removeItem('adminSession');

          // Redirect to home after logout
          window.location.href = '/';
        })
        .catch(err => {
          console.error('Logout error:', err);
          // Force client-side logout anyway
          localStorage.removeItem('isLoggedIn');
          window.location.href = '/';
        });
      });
    }
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', function() {
      checkLoginStateSimple();
      setupDropdownSimple();
      setupLogoutSimple();
    });
  } else {
    checkLoginStateSimple();
    setupDropdownSimple();
    setupLogoutSimple();
  }

  window.addEventListener('storage', function(e) {
    if (e.key === 'isLoggedIn' || e.key === 'userRole' || e.key === 'userName') {
      checkLoginStateSimple();
    }
  });
})();
</script>
