<!-- ====================================
     SIGN IN MODAL
     ==================================== -->
<div class="modal" id="sign-in-modal">
  <div class="modal-backdrop" id="modal-backdrop"></div>
  <div class="modal-content">
    <button class="modal-close" id="modal-close">
      <i data-lucide="x"></i>
    </button>

    <div class="modal-body">
      <!-- Header Badge -->
      <div class="modal-badge">
        <i data-lucide="sparkles"></i>
        <span>WELCOME BACK</span>
      </div>

      <h3 class="modal-title">Sign In</h3>
      <p class="modal-description">
        Continue your industrial sourcing journey
      </p>

      <!-- Error Message -->
      <div class="modal-error" id="modal-error" style="display: none;">
        <i data-lucide="alert-circle"></i>
        <span id="modal-error-message"></span>
      </div>

      <!-- Success Message -->
      <div class="modal-success" id="modal-success" style="display: none;">
        <i data-lucide="check-circle"></i>
        <span id="modal-success-message"></span>
      </div>

      <form class="sign-in-form" id="sign-in-form">
        <div class="form-group">
          <label class="form-label">Email Address</label>
          <div class="input-wrapper">
            <i data-lucide="mail" class="input-icon"></i>
            <input type="email" id="modal-email" name="email" class="form-input" placeholder="your@email.com" required>
          </div>
        </div>

        <div class="form-group">
          <label class="form-label">Password</label>
          <div class="input-wrapper">
            <i data-lucide="lock" class="input-icon"></i>
            <input type="password" id="modal-password" name="password" class="form-input" placeholder="••••••••" required>
            <button type="button" class="password-toggle-modal" onclick="toggleModalPassword()">
              <i data-lucide="eye" class="eye-icon"></i>
              <i data-lucide="eye-off" class="eye-off-icon" style="display: none;"></i>
            </button>
          </div>
        </div>

        <div class="form-footer">
          <label class="remember-me">
            <input type="checkbox" name="rememberMe">
            <span>Remember me</span>
          </label>
          <a href="/forgot-password" class="forgot-password">Forgot password?</a>
        </div>

        <button type="submit" class="btn-primary btn-full" id="modal-submit-btn">
          <span class="btn-text">Sign In</span>
          <span class="btn-loader" style="display: none;">
            <svg class="spinner" viewBox="0 0 24 24">
              <circle class="spinner-circle" cx="12" cy="12" r="10" fill="none" stroke-width="3"></circle>
            </svg>
          </span>
          <i data-lucide="arrow-right" class="btn-icon"></i>
        </button>
      </form>

      <!-- Sign Up Link -->
      <div class="modal-footer">
        <span>Don't have an account?</span>
        <a href="/register" class="sign-up-link">Create Account</a>
      </div>
    </div>
  </div>
</div>

<!-- Login Modal Styles -->
<style>
  .modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 100000;
    display: none;
    align-items: center;
    justify-content: center;
    padding: 1rem;
  }

  .modal.active {
    display: flex;
  }

  .modal-backdrop {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    animation: fadeIn 0.3s ease-out;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  .modal-content {
    position: relative;
    background: white;
    border-radius: 20px;
    max-width: 480px;
    width: 100%;
