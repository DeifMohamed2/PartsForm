<%- include('partials/header') %>
<link rel="stylesheet" href="/css/adminCSS/admin-dashboard.css">
<style>
  .settings-grid {
    display: grid;
    grid-template-columns: 280px 1fr;
    gap: 2rem;
  }
  .settings-nav {
    background: var(--admin-bg-primary);
    border: 1px solid var(--admin-border);
    border-radius: var(--admin-radius-xl);
    padding: 1rem;
    height: fit-content;
    box-shadow: var(--admin-shadow-sm);
  }
  .settings-nav-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.875rem 1rem;
    border-radius: var(--admin-radius-md);
    color: var(--admin-text-secondary);
    font-size: 0.9rem;
    font-weight: 500;
    cursor: pointer;
    transition: var(--admin-transition-fast);
  }
  .settings-nav-item:hover {
    background: var(--admin-bg-tertiary);
    color: var(--admin-text-primary);
  }
  .settings-nav-item.active {
    background: var(--module-bg-accent);
    color: var(--module-primary);
  }
  .settings-nav-item i {
    width: 20px;
    height: 20px;
  }
  .settings-content {
    background: var(--admin-bg-primary);
    border: 1px solid var(--admin-border);
    border-radius: var(--admin-radius-xl);
    padding: 2rem;
    box-shadow: var(--admin-shadow-sm);
  }
  .settings-section {
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--admin-border);
  }
  .settings-section:last-child {
    margin-bottom: 0;
    padding-bottom: 0;
    border-bottom: none;
  }
  .settings-section-title {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--admin-text-primary);
    margin-bottom: 0.5rem;
  }
  .settings-section-desc {
    font-size: 0.85rem;
    color: var(--admin-text-muted);
    margin-bottom: 1.5rem;
  }
  .settings-form-group {
    margin-bottom: 1.25rem;
  }
  .settings-label {
    display: block;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--admin-text-secondary);
    margin-bottom: 0.5rem;
  }
  .settings-input {
    width: 100%;
    max-width: 400px;
    padding: 0.75rem 1rem;
    background: var(--admin-bg-tertiary);
    border: 1px solid var(--admin-border);
    border-radius: var(--admin-radius-md);
    color: var(--admin-text-primary);
    font-size: 0.9rem;
  }
  .settings-input:focus {
    outline: none;
    border-color: var(--module-primary);
    box-shadow: 0 0 0 3px var(--module-bg-accent);
  }
  .settings-toggle {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem;
    background: var(--admin-bg-tertiary);
    border-radius: var(--admin-radius-md);
    margin-bottom: 0.75rem;
  }
  .settings-toggle-info h4 {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--admin-text-primary);
    margin-bottom: 0.25rem;
  }
  .settings-toggle-info p {
    font-size: 0.8rem;
    color: var(--admin-text-muted);
    margin: 0;
  }
  .toggle-switch {
    position: relative;
    width: 50px;
    height: 28px;
    background: var(--admin-border-medium);
    border-radius: 14px;
    cursor: pointer;
    transition: var(--admin-transition-fast);
  }
  .toggle-switch.active {
    background: var(--module-primary);
  }
  .toggle-switch::after {
    content: '';
    position: absolute;
    top: 3px;
    left: 3px;
    width: 22px;
    height: 22px;
    background: white;
    border-radius: 50%;
    transition: var(--admin-transition-fast);
    box-shadow: var(--admin-shadow-sm);
  }
  .toggle-switch.active::after {
    left: 25px;
  }
  .settings-actions {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
  }
  @media (max-width: 1024px) {
    .settings-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
</head>
<body>
  <div class="admin-wrapper">
    <%- include('partials/sidebar', { activePage: 'settings', currentModule: null }) %>
    
    <main class="admin-main">
      <%- include('partials/topbar', { pageTitle: 'Settings', currentModule: null }) %>
      
      <div class="admin-content">
        <div class="page-header">
          <h2>Admin Settings</h2>
        </div>

        <div class="settings-grid">
          <!-- Settings Navigation -->
          <nav class="settings-nav">
            <div class="settings-nav-item active">
              <i data-lucide="settings"></i>
              <span>General</span>
            </div>
            <div class="settings-nav-item">
              <i data-lucide="bell"></i>
              <span>Notifications</span>
            </div>
            <div class="settings-nav-item">
              <i data-lucide="shield"></i>
              <span>Security</span>
            </div>
            <div class="settings-nav-item">
              <i data-lucide="mail"></i>
              <span>Email</span>
            </div>
            <div class="settings-nav-item">
              <i data-lucide="credit-card"></i>
              <span>Payment</span>
            </div>
            <div class="settings-nav-item">
              <i data-lucide="database"></i>
              <span>Backup</span>
            </div>
          </nav>

          <!-- Settings Content -->
          <div class="settings-content">
            <!-- General Settings -->
            <div class="settings-section">
              <h3 class="settings-section-title">General Settings</h3>
              <p class="settings-section-desc">Configure the basic settings for your admin panel.</p>
              
              <div class="settings-form-group">
                <label class="settings-label">Site Name</label>
                <input type="text" class="settings-input" value="PARTSFORM">
              </div>
              <div class="settings-form-group">
                <label class="settings-label">Admin Email</label>
                <input type="email" class="settings-input" value="admin@partsform.com">
              </div>
              <div class="settings-form-group">
                <label class="settings-label">Timezone</label>
                <select class="settings-input">
                  <option>UTC</option>
                  <option>(GMT+2) Cairo</option>
                  <option>(GMT+1) London</option>
                  <option>(GMT-5) New York</option>
                </select>
              </div>
            </div>

            <!-- Notification Settings -->
            <div class="settings-section">
              <h3 class="settings-section-title">Notification Settings</h3>
              <p class="settings-section-desc">Manage how you receive notifications.</p>
              
              <div class="settings-toggle">
                <div class="settings-toggle-info">
                  <h4>Email Notifications</h4>
                  <p>Receive email notifications for new orders</p>
                </div>
                <div class="toggle-switch active"></div>
              </div>
              <div class="settings-toggle">
                <div class="settings-toggle-info">
                  <h4>Ticket Alerts</h4>
                  <p>Get notified when new support tickets are created</p>
                </div>
                <div class="toggle-switch active"></div>
              </div>
              <div class="settings-toggle">
                <div class="settings-toggle-info">
                  <h4>AOG Notifications</h4>
                  <p>Receive alerts for new AOG cases (Aviation)</p>
                </div>
                <div class="toggle-switch active"></div>
              </div>
              <div class="settings-toggle">
                <div class="settings-toggle-info">
                  <h4>Weekly Reports</h4>
                  <p>Receive weekly performance reports via email</p>
                </div>
                <div class="toggle-switch"></div>
              </div>
            </div>

            <!-- Security Settings -->
            <div class="settings-section">
              <h3 class="settings-section-title">Security Settings</h3>
              <p class="settings-section-desc">Manage your account security preferences.</p>
              
              <div class="settings-form-group">
                <label class="settings-label">Current Password</label>
                <input type="password" class="settings-input" placeholder="Enter current password">
              </div>
              <div class="settings-form-group">
                <label class="settings-label">New Password</label>
                <input type="password" class="settings-input" placeholder="Enter new password">
              </div>
              <div class="settings-form-group">
                <label class="settings-label">Confirm New Password</label>
                <input type="password" class="settings-input" placeholder="Confirm new password">
              </div>
            </div>

            <!-- Actions -->
            <div class="settings-actions">
              <button class="admin-btn admin-btn-primary">
                <i data-lucide="save"></i>
                Save Changes
              </button>
              <button class="admin-btn admin-btn-secondary">
                <i data-lucide="x"></i>
                Cancel
              </button>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>

  <script>
    // Toggle Switch Functionality
    document.querySelectorAll('.toggle-switch').forEach(toggle => {
      toggle.addEventListener('click', () => {
        toggle.classList.toggle('active');
      });
    });
  </script>

<%- include('partials/footer') %>
