  <script>
    // Tab Switching
    document.querySelectorAll('.settings-nav-item').forEach(function(item) {
      item.addEventListener('click', function() {
        var tabName = this.dataset.tab;
        
        // Update nav items
        document.querySelectorAll('.settings-nav-item').forEach(function(nav) {
          nav.classList.remove('active');
        });
        this.classList.add('active');
        
        // Update panels
        document.querySelectorAll('.settings-panel').forEach(function(panel) {
          panel.classList.remove('active');
        });
        document.getElementById('panel-' + tabName).classList.add('active');
        
        // Reinitialize icons
        if (typeof lucide !== 'undefined') {
          lucide.createIcons();
        }
      });
    });
    
    // Toggle Switch Functionality
    document.querySelectorAll('.toggle-switch').forEach(function(toggle) {
      toggle.addEventListener('click', function() {
        this.classList.toggle('active');
        
        // Update payment status labels if in payment section
        var parentCard = this.closest('.payment-method-card');
        if (parentCard) {
          var statusLabel = parentCard.querySelector('.payment-method-status');
          if (statusLabel) {
            if (this.classList.contains('active')) {
              statusLabel.textContent = 'Enabled';
              statusLabel.classList.remove('disabled');
              statusLabel.classList.add('enabled');
            } else {
              statusLabel.textContent = 'Disabled';
              statusLabel.classList.remove('enabled');
              statusLabel.classList.add('disabled');
            }
          }
        }
      });
    });

    // ========================
    // MARKUP SETTINGS
    // ========================
    
    // Live example calculation
    var markupInput = document.getElementById('defaultMarkupInput');
    if (markupInput) {
      markupInput.addEventListener('input', function() {
        var markup = parseFloat(this.value) || 0;
        document.getElementById('exampleMarkupPercent').textContent = markup;
        document.getElementById('exampleMarkupAmount').textContent = markup.toFixed(2);
        document.getElementById('exampleBuyerPrice').textContent = (100 + markup).toFixed(2);
      });
    }
    
    // Save default markup
    function saveDefaultMarkup() {
      var markup = parseFloat(document.getElementById('defaultMarkupInput').value);
      var statusEl = document.getElementById('markupSaveStatus');
      var saveBtn = document.getElementById('saveMarkupBtn');
      
      if (isNaN(markup) || markup < 0 || markup > 100) {
        statusEl.style.display = 'block';
        statusEl.style.background = 'rgba(239, 68, 68, 0.1)';
        statusEl.style.color = '#ef4444';
        statusEl.textContent = '✗ Markup must be between 0% and 100%';
        return;
      }
      
      saveBtn.disabled = true;
      saveBtn.innerHTML = '<i data-lucide="loader"></i> Saving...';
      
      fetch('/admin/api/settings', {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ defaultMarkupPercentage: markup })
      }).then(function(response) {
        return response.json();
      }).then(function(data) {
        statusEl.style.display = 'block';
        if (data.success) {
          statusEl.style.background = 'rgba(16, 185, 129, 0.1)';
          statusEl.style.color = '#10b981';
          statusEl.textContent = '✓ Default markup updated successfully to ' + markup + '%';
          setTimeout(function() { statusEl.style.display = 'none'; }, 3000);
        } else {
          statusEl.style.background = 'rgba(239, 68, 68, 0.1)';
          statusEl.style.color = '#ef4444';
          statusEl.textContent = '✗ ' + (data.error || 'Failed to update');
        }
      }).catch(function(err) {
        statusEl.style.display = 'block';
        statusEl.style.background = 'rgba(239, 68, 68, 0.1)';
        statusEl.style.color = '#ef4444';
        statusEl.textContent = '✗ Error: ' + err.message;
      }).finally(function() {
        saveBtn.disabled = false;
        saveBtn.innerHTML = '<i data-lucide="save"></i> Save Markup';
        if (typeof lucide !== 'undefined') lucide.createIcons();
      });
    }
  </script>

