<%- include('partials/header') %>
<link rel="stylesheet" href="/css/adminCSS/admin-dashboard.css">
<style>
  /* ========== INTEGRATIONS PAGE - ENHANCED DESIGN ========== */
  
  .admin-content.intg-page {
    padding: 0 !important;
    padding-top: 70px !important;
    max-width: 100%;
  }
  
  .intg-container {
    padding: 1.5rem 2rem 2rem;
  }
  
  /* Page Header - Glassmorphism Style */
  .intg-header {
    background: linear-gradient(135deg, rgba(14, 165, 233, 0.06) 0%, rgba(168, 85, 247, 0.04) 100%);
    border-bottom: 1px solid var(--admin-border);
    padding: 1.5rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    backdrop-filter: blur(8px);
    position: relative;
    overflow: hidden;
  }
  .intg-header::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -10%;
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, rgba(14, 165, 233, 0.06) 0%, transparent 70%);
    border-radius: 50%;
    pointer-events: none;
  }
  
  .intg-header-left {
    display: flex;
    align-items: center;
    gap: 1rem;
    position: relative;
  }
  
  .intg-header-icon {
    width: 52px;
    height: 52px;
    border-radius: 14px;
    background: linear-gradient(135deg, #0ea5e9, #0284c7);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    box-shadow: 0 4px 16px rgba(14, 165, 233, 0.25);
  }
  
  .intg-header-icon svg { width: 24px; height: 24px; }
  
  .intg-header-text h1 {
    font-size: 1.35rem;
    font-weight: 700;
    color: var(--admin-text-primary);
    margin: 0;
    letter-spacing: -0.01em;
  }
  
  .intg-header-text p {
    font-size: 0.82rem;
    color: var(--admin-text-muted);
    margin: 0.2rem 0 0 0;
  }
  
  .intg-header-actions {
    display: flex;
    gap: 0.75rem;
    align-items: center;
    position: relative;
  }
  
  .btn-sync-all {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.65rem 1.15rem;
    border-radius: 10px;
    border: 1px solid var(--admin-border);
    background: var(--admin-bg-primary, white);
    color: var(--admin-text-primary);
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
    font-family: 'Inter', sans-serif;
  }
  
  .btn-sync-all:hover {
    background: rgba(14, 165, 233, 0.06);
    border-color: rgba(14, 165, 233, 0.3);
    color: #0ea5e9;
    box-shadow: 0 2px 8px rgba(14, 165, 233, 0.08);
  }
  
  .btn-sync-all svg { width: 16px; height: 16px; }
  
  .btn-add-connection {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.65rem 1.25rem;
    border-radius: 10px;
    border: none;
    background: linear-gradient(135deg, #0ea5e9, #0284c7);
    color: white;
    font-size: 0.875rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s;
    text-decoration: none;
    font-family: 'Inter', sans-serif;
    box-shadow: 0 2px 10px rgba(14, 165, 233, 0.2);
  }
  
  .btn-add-connection:hover {
    box-shadow: 0 4px 16px rgba(14, 165, 233, 0.3);
    transform: translateY(-1px);
  }
  .btn-add-connection svg { width: 16px; height: 16px; }
  
  .page-header { display: none; }
  .page-title { display: none; }
  .page-actions { display: none; }
  
  /* Stats Row - Card Redesign */
  .stats-row {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
    margin-bottom: 1.5rem;
  }
  
  .stat-card {
    background: var(--admin-bg-primary, var(--admin-card-bg));
    border: 1px solid var(--admin-border);
    border-radius: 16px;
    padding: 1.35rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }
  
  .stat-card::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    border-radius: 16px 16px 0 0;
    opacity: 0;
    transition: opacity 0.25s;
  }
  
  .stat-card:hover {
    box-shadow: 0 8px 24px rgba(0,0,0,0.06);
    transform: translateY(-2px);
    border-color: transparent;
  }
  .stat-card:hover::after { opacity: 1; }
  
  .stat-card:nth-child(1)::after { background: linear-gradient(90deg, #10b981, #34d399); }
  .stat-card:nth-child(2)::after { background: linear-gradient(90deg, #3b82f6, #60a5fa); }
  .stat-card:nth-child(3)::after { background: linear-gradient(90deg, #8b5cf6, #a78bfa); }
  .stat-card:nth-child(4)::after { background: linear-gradient(90deg, #f97316, #fb923c); }
  
  .stat-icon {
    width: 48px;
    height: 48px;
    border-radius: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }
  
  .stat-icon.green { background: rgba(16, 185, 129, 0.1); color: #10b981; }
  .stat-icon.blue { background: rgba(59, 130, 246, 0.1); color: #3b82f6; }
  .stat-icon.purple { background: rgba(139, 92, 246, 0.1); color: #8b5cf6; }
  .stat-icon.orange { background: rgba(249, 115, 22, 0.1); color: #f97316; }
  
  .stat-icon svg { width: 22px; height: 22px; }
  
  .stat-info .value {
    font-size: 1.75rem;
    font-weight: 800;
    color: var(--admin-text-primary);
    line-height: 1;
    letter-spacing: -0.02em;
  }
  
  .stat-info .label {
    font-size: 0.78rem;
    color: var(--admin-text-muted);
    margin-top: 0.35rem;
    font-weight: 500;
  }
  
  /* Connections Section */
  .connections-section {
    background: var(--admin-bg-primary, var(--admin-card-bg));
    border: 1px solid var(--admin-border);
    border-radius: 18px;
    overflow: hidden;
    box-shadow: 0 1px 4px rgba(0,0,0,0.03);
  }
  
  .section-header {
    padding: 1.25rem 1.5rem;
    border-bottom: 1px solid var(--admin-border);
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: var(--admin-bg-secondary, var(--admin-bg));
  }
  
  .section-title {
    font-size: 1rem;
    font-weight: 600;
    color: var(--admin-text-primary);
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .section-title svg { width: 18px; height: 18px; color: var(--admin-text-muted); }
  
  .connection-count {
    background: var(--admin-bg-primary, white);
    border: 1px solid var(--admin-border);
    padding: 0.35rem 0.875rem;
    border-radius: 20px;
    font-size: 0.75rem;
    color: var(--admin-text-secondary);
    font-weight: 500;
  }
  
  /* Connection Item - Enhanced Cards */
  .connection-item {
    border-bottom: 1px solid var(--admin-border);
    transition: background 0.15s;
  }
  
  .connection-item:last-child { border-bottom: none; }
  
  .connection-row {
    padding: 1.25rem 1.5rem;
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr auto;
    align-items: center;
    gap: 1.5rem;
    cursor: pointer;
    transition: background 0.2s;
  }
  
  .connection-row:hover { background: rgba(14, 165, 233, 0.02); }
  
  .conn-info {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  
  .conn-icon {
    width: 46px;
    height: 46px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    transition: transform 0.2s;
  }
  .conn-icon.ftp-icon { background: linear-gradient(135deg, rgba(14, 165, 233, 0.12), rgba(59, 130, 246, 0.06)); color: #0ea5e9; }
  .conn-icon.api-icon { background: linear-gradient(135deg, rgba(168, 85, 247, 0.12), rgba(139, 92, 246, 0.06)); color: #a855f7; }
  .conn-icon.sheets-icon { background: linear-gradient(135deg, rgba(34, 197, 94, 0.12), rgba(16, 185, 129, 0.06)); color: #22c55e; }
  
  .connection-row:hover .conn-icon { transform: scale(1.05); }
  
  .conn-icon svg { width: 20px; height: 20px; }
  
  .conn-details h4 {
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--admin-text-primary);
    margin: 0 0 0.3rem 0;
  }
  
  .conn-details .meta {
    font-size: 0.78rem;
    color: var(--admin-text-muted);
    display: flex;
    align-items: center;
    gap: 0.35rem;
  }
  
  .conn-details .meta svg { width: 12px; height: 12px; }
  
  .conn-type-badge {
    display: inline-flex;
    align-items: center;
    padding: 0.15rem 0.5rem;
    border-radius: 5px;
    font-size: 0.65rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-left: 0.5rem;
  }
  .conn-type-badge.ftp { background: rgba(14, 165, 233, 0.1); color: #0ea5e9; }
  .conn-type-badge.api { background: rgba(168, 85, 247, 0.1); color: #a855f7; }
  .conn-type-badge.google-sheets { background: rgba(34, 197, 94, 0.1); color: #22c55e; }
  
  .conn-stats {
    display: flex;
    gap: 2rem;
  }
  
  .conn-stat {
    text-align: center;
  }
  
  .conn-stat .value {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--admin-text-primary);
  }
  
  .conn-stat .label {
    font-size: 0.68rem;
    color: var(--admin-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-top: 0.15rem;
  }
  
  .conn-status-section {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  
  .status-badge {
    padding: 0.35rem 0.75rem;
    border-radius: 8px;
    font-size: 0.75rem;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 0.35rem;
  }
  
  .status-badge svg { width: 12px; height: 12px; }
  
  .status-badge.active { background: rgba(16, 185, 129, 0.1); color: #059669; }
  .status-badge.syncing { background: rgba(37, 99, 235, 0.1); color: #2563eb; }
  .status-badge.error { background: rgba(239, 68, 68, 0.1); color: #dc2626; }
  .status-badge.pending { background: rgba(107, 114, 128, 0.1); color: #6b7280; }
  .status-badge.inactive { background: rgba(107, 114, 128, 0.1); color: #6b7280; }
  
  .last-sync-time {
    font-size: 0.78rem;
    color: var(--admin-text-muted);
    display: flex;
    align-items: center;
    gap: 0.35rem;
  }
  
  .last-sync-time svg { width: 14px; height: 14px; }
  
  .conn-actions {
    display: flex;
    gap: 0.5rem;
  }
  
  .action-btn {
    width: 36px;
    height: 36px;
    border-radius: 10px;
    border: 1px solid var(--admin-border);
    background: var(--admin-bg-primary, white);
    color: var(--admin-text-secondary);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s;
  }
  
  .action-btn:hover {
    background: linear-gradient(135deg, #0ea5e9, #0284c7);
    border-color: transparent;
    color: white;
    box-shadow: 0 3px 10px rgba(14, 165, 233, 0.2);
    transform: translateY(-1px);
  }
  
  .action-btn.danger:hover {
    background: linear-gradient(135deg, #ef4444, #dc2626);
    box-shadow: 0 3px 10px rgba(239, 68, 68, 0.2);
  }
  
  .action-btn svg { width: 16px; height: 16px; }
  
  .action-btn.syncing svg {
    animation: spin 1s linear infinite;
  }
  
  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
  
  /* Sync Details Panel */
  .sync-panel {
    max-height: 0;
    overflow: hidden;
    background: var(--admin-bg-secondary, #f8fafc);
    border-top: 1px solid var(--admin-border);
    transition: max-height 0.35s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .sync-panel.expanded {
    max-height: 800px;
  }
  
  .sync-panel-content {
    padding: 1.5rem;
  }
  
  .sync-panel-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
  }
  
  .sync-panel-title {
    font-size: 1rem;
    font-weight: 600;
    color: var(--admin-text-primary);
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .sync-panel-title svg { width: 18px; height: 18px; color: #0ea5e9; }
  
  .sync-tabs {
    display: flex;
    gap: 0.35rem;
    background: var(--admin-bg-primary, white);
    padding: 0.25rem;
    border-radius: 10px;
    border: 1px solid var(--admin-border);
  }
  
  .sync-tab {
    padding: 0.45rem 0.9rem;
    border-radius: 8px;
    font-size: 0.78rem;
    font-weight: 500;
    border: none;
    background: transparent;
    color: var(--admin-text-secondary);
    cursor: pointer;
    transition: all 0.2s;
    font-family: 'Inter', sans-serif;
  }
  
  .sync-tab.active {
    background: linear-gradient(135deg, #0ea5e9, #0284c7);
    color: white;
    box-shadow: 0 2px 6px rgba(14, 165, 233, 0.2);
  }
  
  .sync-tab:hover:not(.active) {
    background: rgba(14, 165, 233, 0.06);
    color: #0ea5e9;
  }
  
  /* Live Sync Progress */
  .sync-progress-section {
    background: var(--admin-bg-primary, white);
    border: 1px solid var(--admin-border);
    border-radius: 14px;
    padding: 1.5rem;
    margin-bottom: 1rem;
  }
  
  .progress-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }
  
  .progress-status {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }
  
  .progress-icon {
    width: 44px;
    height: 44px;
    border-radius: 12px;
    background: rgba(59, 130, 246, 0.1);
    color: #3b82f6;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .progress-icon.success { background: rgba(16, 185, 129, 0.1); color: #10b981; }
  .progress-icon.error { background: rgba(239, 68, 68, 0.1); color: #ef4444; }
  
  .progress-icon svg { width: 20px; height: 20px; }
  
  .progress-text h5 {
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--admin-text-primary);
    margin: 0;
  }
  
  .progress-text p {
    font-size: 0.78rem;
    color: var(--admin-text-muted);
    margin: 0.15rem 0 0 0;
  }
  
  .progress-percentage {
    font-size: 1.5rem;
    font-weight: 800;
    background: linear-gradient(135deg, #0ea5e9, #0284c7);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .progress-bar-container {
    height: 8px;
    background: rgba(14, 165, 233, 0.08);
    border-radius: 8px;
    overflow: hidden;
    margin-bottom: 1rem;
  }
  
  .progress-bar-fill {
    height: 100%;
    background: linear-gradient(90deg, #0ea5e9, #0284c7);
    border-radius: 8px;
    transition: width 0.4s ease;
    position: relative;
  }
  .progress-bar-fill::after {
    content: '';
    position: absolute;
    top: 0; left: 0; right: 0; bottom: 0;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
    animation: shimmer 2s infinite;
  }
  @keyframes shimmer {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100%); }
  }
  
  .progress-stats {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 0.75rem;
  }
  
  .progress-stat {
    text-align: center;
    padding: 0.75rem;
    background: var(--admin-bg-secondary, #f9fafb);
    border-radius: 10px;
    border: 1px solid var(--admin-border);
  }
  
  .progress-stat .value {
    font-size: 1.15rem;
    font-weight: 700;
    color: var(--admin-text-primary);
  }
  
  .progress-stat .label {
    font-size: 0.68rem;
    color: var(--admin-text-muted);
    text-transform: uppercase;
    margin-top: 0.25rem;
    letter-spacing: 0.3px;
  }
  
  /* Current File */
  .current-file {
    background: rgba(59, 130, 246, 0.04);
    border: 1px solid rgba(59, 130, 246, 0.12);
    border-radius: 10px;
    padding: 0.85rem 1rem;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }
  
  .current-file-icon {
    width: 36px;
    height: 36px;
    border-radius: 8px;
    background: rgba(59, 130, 246, 0.1);
    color: #3b82f6;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .current-file-icon svg { width: 18px; height: 18px; }
  
  .current-file-info {
    flex: 1;
  }
  
  .current-file-info strong {
    display: block;
    font-size: 0.85rem;
    color: var(--admin-text-primary);
  }
  
  .current-file-info span {
    font-size: 0.72rem;
    color: var(--admin-text-muted);
  }
  
  /* Sync History */
  .sync-history {
    background: var(--admin-bg-primary, white);
    border: 1px solid var(--admin-border);
    border-radius: 14px;
    overflow: hidden;
  }
  
  .history-header {
    padding: 1rem 1.25rem;
    border-bottom: 1px solid var(--admin-border);
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--admin-text-primary);
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .history-header svg { width: 16px; height: 16px; color: var(--admin-text-muted); }
  
  .history-list {
    max-height: 300px;
    overflow-y: auto;
  }
  
  .history-item {
    padding: 1rem 1.25rem;
    border-bottom: 1px solid var(--admin-border);
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
    transition: background 0.2s;
  }
  
  .history-item:last-child { border-bottom: none; }
  .history-item:hover { background: rgba(14, 165, 233, 0.02); }
  
  .history-info {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }
  
  .history-status {
    width: 8px;
    height: 8px;
    border-radius: 50%;
  }
  
  .history-status.success { background: #10b981; box-shadow: 0 0 6px rgba(16, 185, 129, 0.3); }
  .history-status.error { background: #ef4444; box-shadow: 0 0 6px rgba(239, 68, 68, 0.3); }
  .history-status.warning { background: #f59e0b; box-shadow: 0 0 6px rgba(245, 158, 11, 0.3); }
  
  .history-details h6 {
    font-size: 0.85rem;
    font-weight: 500;
    color: var(--admin-text-primary);
    margin: 0;
  }
  
  .history-details span {
    font-size: 0.75rem;
    color: var(--admin-text-muted);
  }
  
  .history-stats {
    display: flex;
    gap: 1.5rem;
    font-size: 0.8rem;
    color: var(--admin-text-secondary);
  }
  
  /* Empty State */
  .empty-state {
    padding: 5rem 2rem;
    text-align: center;
  }
  
  .empty-icon {
    width: 88px;
    height: 88px;
    border-radius: 50%;
    background: linear-gradient(135deg, rgba(14, 165, 233, 0.08), rgba(168, 85, 247, 0.06));
    color: var(--admin-text-muted);
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
  }
  
  .empty-icon svg { width: 40px; height: 40px; }
  
  .empty-state h3 {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--admin-text-primary);
    margin: 0 0 0.5rem 0;
  }
  
  .empty-state p {
    color: var(--admin-text-muted);
    margin: 0 0 1.75rem 0;
    max-width: 400px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
  }
  
  /* Modals - Enhanced */
  .modal-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.45);
    backdrop-filter: blur(4px);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
    opacity: 0;
    visibility: hidden;
    transition: all 0.25s;
  }
  
  .modal-overlay.active {
    opacity: 1;
    visibility: visible;
  }
  
  .modal-box {
    background: var(--admin-bg-primary, white);
    border-radius: 20px;
    width: 90%;
    max-width: 440px;
    box-shadow: 0 25px 60px rgba(0, 0, 0, 0.12);
    transform: scale(0.95) translateY(10px);
    transition: transform 0.25s cubic-bezier(0.34, 1.56, 0.64, 1);
  }
  
  .modal-overlay.active .modal-box {
    transform: scale(1) translateY(0);
  }
  
  .modal-header {
    padding: 1.5rem 1.5rem 0;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }
  
  .modal-icon {
    width: 56px;
    height: 56px;
    border-radius: 14px;
