                          <span class="stat-value" id="stat-pending-<%= conn._id %>">0</span>
                          <span class="stat-label">Pending</span>
                        </div>
                        <div class="stat-item">
                          <span class="stat-value" id="stat-avg-duration-<%= conn._id %>">-</span>
                          <span class="stat-label">Avg Duration</span>
