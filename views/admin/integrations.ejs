<body>
  <div class="admin-wrapper">
    <%- include('partials/sidebar', { activePage: 'integrations' }) %>
    
    <main class="admin-main">
      <%- include('partials/topbar', { pageTitle: 'Integrations' }) %>
      
      <div class="admin-content intg-page">
        <!-- Page Header Bar -->
        <div class="intg-header">
          <div class="intg-header-left">
            <div class="intg-header-icon">
              <i data-lucide="plug"></i>
            </div>
            <div class="intg-header-text">
              <h1>Data Integrations</h1>
              <p>Manage FTP and API connections for Parts</p>
            </div>
          </div>
          <div class="intg-header-actions">
            <button class="btn-sync-all" onclick="syncAllConnections()">
              <i data-lucide="refresh-cw"></i>
              Sync All
            </button>
            <a href="/admin/integrations/create" class="btn-add-connection">
              <i data-lucide="plus"></i>
              Add Connection
            </a>
          </div>
        </div>

        <div class="intg-container">
          <!-- Stats -->
          <div class="stats-row">
            <div class="stat-card">
              <div class="stat-icon green">
                <i data-lucide="check-circle"></i>
              </div>
              <div class="stat-info">
                <div class="value"><%= typeof stats !== 'undefined' ? stats.activeConnections : 0 %></div>
                <div class="label">Active Connections</div>
              </div>
            </div>
            <div class="stat-card">
              <div class="stat-icon blue">
                <i data-lucide="database"></i>
              </div>
              <div class="stat-info">
                <div class="value"><%= typeof stats !== 'undefined' && stats.totalRecords ? (stats.totalRecords >= 1000000 ? (stats.totalRecords / 1000000).toFixed(1) + 'M' : stats.totalRecords >= 1000 ? Math.floor(stats.totalRecords / 1000) + 'K' : stats.totalRecords) : '0' %></div>
                <div class="label">Total Parts</div>
              </div>
            </div>
            <div class="stat-card">
              <div class="stat-icon purple">
                <i data-lucide="clock"></i>
              </div>
              <div class="stat-info">
                <div class="value"><%= typeof stats !== 'undefined' && stats.lastSync ? (function() { var d = new Date(stats.lastSync); var now = new Date(); var diff = Math.floor((now - d) / 60000); if (diff < 60) return diff + 'm ago'; if (diff < 1440) return Math.floor(diff / 60) + 'h ago'; return Math.floor(diff / 1440) + 'd ago'; })() : 'Never' %></div>
                <div class="label">Last Sync</div>
              </div>
            </div>
            <div class="stat-card">
              <div class="stat-icon orange">
                <i data-lucide="link"></i>
              </div>
              <div class="stat-info">
                <div class="value"><%= typeof stats !== 'undefined' ? stats.totalConnections : 0 %></div>
                <div class="label">Total Connections</div>
              </div>
            </div>
          </div>

          <!-- Connections List -->
          <div class="connections-section">
            <div class="section-header">
              <div class="section-title">
                <i data-lucide="server"></i>
                All Connections
              </div>
              <span class="connection-count"><%= typeof integrations !== 'undefined' ? integrations.length : 0 %> connections</span>
            </div>
            
            <% 
            var allConnections = typeof integrations !== 'undefined' ? integrations : [];
            if (allConnections.length === 0) { 
            %>
            <div class="empty-state">
              <div class="empty-icon">
                <i data-lucide="plug"></i>
              </div>
              <h3>No Connections Yet</h3>
              <p>Add your first FTP or API connection to start importing parts data automatically.</p>
              <a href="/admin/integrations/create" class="btn-add-connection">
                <i data-lucide="plus"></i>
                Add Your First Connection
            </a>
          </div>
          <% } else { %>
          <% allConnections.forEach(function(conn) { 
            var statusClass = conn.status === 'active' ? 'active' : conn.status === 'syncing' ? 'syncing' : conn.status === 'error' ? 'error' : 'pending';
            var statusText = conn.status === 'active' ? 'Active' : conn.status === 'syncing' ? 'Syncing' : conn.status === 'error' ? 'Error' : 'Pending';
            var statusIcon = conn.status === 'active' ? 'check-circle' : conn.status === 'syncing' ? 'loader-2' : conn.status === 'error' ? 'alert-circle' : 'circle';
            
            var lastSyncText = 'Never';
            if (conn.lastSync && conn.lastSync.date) {
              var d = new Date(conn.lastSync.date);
              var now = new Date();
              var diff = Math.floor((now - d) / 60000);
              if (diff < 1) lastSyncText = 'Just now';
              else if (diff < 60) lastSyncText = diff + 'm ago';
              else if (diff < 1440) lastSyncText = Math.floor(diff / 60) + 'h ago';
              else lastSyncText = Math.floor(diff / 1440) + 'd ago';
            }
            
            var filesCount = conn.lastSync && conn.lastSync.files ? conn.lastSync.files.length : 0;
            var recordsCount = conn.stats && conn.stats.totalRecords ? conn.stats.totalRecords : 0;
            var recordsFormatted = recordsCount >= 1000000 ? (recordsCount / 1000000).toFixed(1) + 'M' : recordsCount >= 1000 ? Math.floor(recordsCount / 1000) + 'K' : recordsCount;
            
            var hostInfo = conn.type === 'ftp' && conn.ftp ? conn.ftp.host : conn.type === 'api' && conn.api ? conn.api.baseUrl : 'N/A';
            var scheduleText = conn.syncSchedule && conn.syncSchedule.enabled ? conn.syncSchedule.frequency : 'Manual';
          %>
          <div class="connection-item" id="conn-item-<%= conn._id %>">
            <div class="connection-row" onclick="toggleSyncPanel('<%= conn._id %>')">
              <div class="conn-info">
                <div class="conn-icon <%= conn.type === 'ftp' ? 'ftp-icon' : conn.type === 'api' ? 'api-icon' : 'sheets-icon' %>">
                  <i data-lucide="<%= conn.type === 'ftp' ? 'hard-drive' : conn.type === 'api' ? 'code-2' : 'file-spreadsheet' %>"></i>
                </div>
                <div class="conn-details">
                  <h4><%= conn.name %> <span class="conn-type-badge <%= conn.type %>"><%= conn.type %></span></h4>
                  <div class="meta">
                    <i data-lucide="server"></i>
                    <span><%= hostInfo %></span>
                  </div>
                </div>
              </div>
              
              <div class="conn-stats">
                <div class="conn-stat">
                  <div class="value" id="files-<%= conn._id %>"><%= filesCount %></div>
                  <div class="label">Files</div>
                </div>
                <div class="conn-stat">
                  <div class="value" id="records-<%= conn._id %>"><%= recordsFormatted %></div>
                  <div class="label">Records</div>
                </div>
                <div class="conn-stat">
                  <div class="value"><%= scheduleText %></div>
                  <div class="label">Schedule</div>
                </div>
              </div>
              
              <div class="conn-status-section">
                <div class="status-badge <%= statusClass %>" id="status-<%= conn._id %>">
                  <i data-lucide="<%= statusIcon %>"></i>
                  <span><%= statusText %></span>
                </div>
                <div class="last-sync-time" id="lastsync-<%= conn._id %>">
                  <i data-lucide="clock"></i>
                  <span><%= lastSyncText %></span>
                </div>
              </div>
              
              <div class="conn-actions" onclick="event.stopPropagation()">
                <button class="action-btn" title="Sync Now" onclick="syncConnection('<%= conn._id %>')" id="sync-btn-<%= conn._id %>">
                  <i data-lucide="refresh-cw"></i>
                </button>
                <button class="action-btn" title="Test Connection" onclick="testConnection('<%= conn._id %>')">
                  <i data-lucide="play"></i>
                </button>
                <button class="action-btn" title="Edit" onclick="editConnection('<%= conn._id %>')">
                  <i data-lucide="edit-2"></i>
                </button>
                <button class="action-btn danger" title="Delete" onclick="deleteConnection('<%= conn._id %>', '<%= conn.name %>')">
                  <i data-lucide="trash-2"></i>
                </button>
              </div>
            </div>
            
            <!-- Expandable Sync Panel -->
            <div class="sync-panel" id="sync-panel-<%= conn._id %>">
              <div class="sync-panel-content">
                <div class="sync-panel-header">
                  <div class="sync-panel-title">
                    <i data-lucide="activity"></i>
                    Sync Details
                  </div>
                  <div class="sync-tabs">
                    <button class="sync-tab active" onclick="showSyncTab('<%= conn._id %>', 'progress')">Live Progress</button>
                    <button class="sync-tab" onclick="showSyncTab('<%= conn._id %>', 'history')">History</button>
                  </div>
                </div>
                
                <!-- Progress Tab -->
                <div class="sync-tab-content" id="progress-tab-<%= conn._id %>">
                  <div class="sync-progress-section" id="progress-section-<%= conn._id %>">
                    <div class="progress-header">
                      <div class="progress-status">
                        <div class="progress-icon" id="progress-icon-<%= conn._id %>">
                          <i data-lucide="<%= conn.status === 'syncing' ? 'loader-2' : 'check-circle' %>"></i>
                        </div>
                        <div class="progress-text">
                          <h5 id="progress-title-<%= conn._id %>"><%= conn.status === 'syncing' ? 'Syncing...' : 'Last Sync Completed' %></h5>
                          <p id="progress-subtitle-<%= conn._id %>"><%= conn.lastSync && conn.lastSync.date ? 'Completed ' + lastSyncText : 'No sync yet' %></p>
                        </div>
                      </div>
                      <div class="progress-percentage" id="progress-percent-<%= conn._id %>">
                        <%= conn.status === 'syncing' ? '0%' : '100%' %>
                      </div>
                    </div>
                    
                    <div class="progress-bar-container">
                      <div class="progress-bar-fill" id="progress-bar-<%= conn._id %>" style="width: <%= conn.status === 'syncing' ? '0%' : '100%' %>"></div>
                    </div>
                    
                    <div class="current-file" id="current-file-<%= conn._id %>" style="display: none;">
                      <div class="current-file-icon">
                        <i data-lucide="file-text"></i>
                      </div>
                      <div class="current-file-info">
                        <strong id="current-file-name-<%= conn._id %>">file.csv</strong>
                        <span>Processing...</span>
                      </div>
                    </div>
                    
                    <div class="progress-stats">
                      <div class="progress-stat">
                        <div class="value" id="pstat-files-<%= conn._id %>"><%= filesCount %></div>
                        <div class="label">Files</div>
                      </div>
                      <div class="progress-stat">
                        <div class="value" id="pstat-records-<%= conn._id %>"><%= conn.lastSync && conn.lastSync.recordsProcessed ? conn.lastSync.recordsProcessed.toLocaleString() : '0' %></div>
                        <div class="label">Records</div>
                      </div>
                      <div class="progress-stat">
                        <div class="value" id="pstat-inserted-<%= conn._id %>"><%= conn.lastSync && conn.lastSync.recordsInserted ? conn.lastSync.recordsInserted.toLocaleString() : '0' %></div>
                        <div class="label">Inserted</div>
                      </div>
                      <div class="progress-stat">
                        <div class="value" id="pstat-duration-<%= conn._id %>"><%= conn.lastSync && conn.lastSync.duration ? Math.ceil(conn.lastSync.duration / 1000) + 's' : '-' %></div>
                        <div class="label">Duration</div>
                      </div>
                    </div>
                  </div>
                </div>
                
                <!-- History Tab -->
                <div class="sync-tab-content" id="history-tab-<%= conn._id %>" style="display: none;">
                  <div class="sync-history">
                    <div class="history-header">
                      <i data-lucide="history"></i>
                      Sync History
                    </div>
                    <div class="history-list" id="history-list-<%= conn._id %>">
                      <% if (conn.lastSync && conn.lastSync.date) { %>
                      <div class="history-item">
                        <div class="history-info">
                          <div class="history-status <%= conn.lastSync.status === 'success' ? 'success' : conn.lastSync.status === 'error' ? 'error' : 'warning' %>"></div>
                          <div class="history-details">
                            <h6><%= new Date(conn.lastSync.date).toLocaleDateString() %> at <%= new Date(conn.lastSync.date).toLocaleTimeString() %></h6>
                            <span><%= conn.lastSync.status === 'success' ? 'Completed successfully' : conn.lastSync.error || 'Completed with issues' %></span>
                          </div>
                        </div>
                        <div class="history-stats">
                          <span><%= conn.lastSync.files ? conn.lastSync.files.length : 0 %> files</span>
                          <span><%= conn.lastSync.recordsProcessed || 0 %> records</span>
                          <span><%= conn.lastSync.duration ? Math.ceil(conn.lastSync.duration / 1000) + 's' : '-' %></span>
                        </div>
                      </div>
                      <% } else { %>
                      <div style="padding: 2rem; text-align: center; color: var(--admin-text-muted);">
                        <i data-lucide="inbox" style="width: 32px; height: 32px; margin-bottom: 0.5rem; opacity: 0.5;"></i>
                        <p style="margin: 0;">No sync history yet</p>
                      </div>
                      <% } %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% }); %>
          <% } %>
          </div>
        </div>
      </div>
    </main>
  </div>

  <!-- Test Connection Modal -->
  <div class="modal-overlay" id="testModal">
    <div class="modal-box">
      <div class="modal-header">
        <div class="modal-icon testing" id="testModalIcon">
          <i data-lucide="wifi"></i>
        </div>
        <button class="modal-close" onclick="closeTestModal()">
          <i data-lucide="x"></i>
        </button>
      </div>
      <div class="modal-body">
        <h3 class="modal-title" id="testModalTitle">Testing Connection</h3>
        <p class="modal-subtitle" id="testModalSubtitle">Verifying server credentials...</p>
        <div class="modal-result" id="testModalResult" style="display: none;">
          <div class="modal-result-item">
            <div class="value" id="testFilesCount">0</div>
            <div class="label">Files Found</div>
          </div>
          <div class="modal-result-item">
            <div class="value" id="testResponseTime">0ms</div>
            <div class="label">Response Time</div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button class="modal-btn secondary" onclick="closeTestModal()">Close</button>
      </div>
    </div>
  </div>

  <!-- Delete Modal -->
  <div class="modal-overlay" id="deleteModal">
    <div class="modal-box">
      <div class="delete-modal-body">
        <div class="delete-icon">
          <i data-lucide="trash-2"></i>
        </div>
        <h3>Delete Connection?</h3>
        <p>Are you sure you want to delete <strong id="deleteConnName"></strong>? This action cannot be undone.</p>
      </div>
      <div class="delete-actions">
        <button class="modal-btn secondary" onclick="closeDeleteModal()">Cancel</button>
        <button class="modal-btn btn-delete" onclick="confirmDelete()">Delete</button>
      </div>
    </div>
  </div>

  <!-- Toast -->
  <div class="toast" id="toast">
    <i data-lucide="check-circle"></i>
    <span id="toastText"></span>
  </div>

  <script>
    let pendingDeleteId = null;
    let activeSyncs = new Map();
    
    // Init icons
    if (typeof lucide !== 'undefined') lucide.createIcons();

    // Toast
    function showToast(message, type = 'success') {
      const toast = document.getElementById('toast');
      document.getElementById('toastText').textContent = message;
      toast.className = 'toast ' + type + ' show';
      const iconEl = toast.querySelector('[data-lucide]');
      if (iconEl) {
        iconEl.setAttribute('data-lucide', type === 'success' ? 'check-circle' : 'alert-circle');
        if (typeof lucide !== 'undefined') lucide.createIcons();
      }
      setTimeout(() => toast.classList.remove('show'), 4000);
    }

    // Toggle Sync Panel
    function toggleSyncPanel(id) {
      const panel = document.getElementById('sync-panel-' + id);
      if (panel) {
        panel.classList.toggle('expanded');
        if (typeof lucide !== 'undefined') lucide.createIcons();
      }
    }

    // Show Sync Tab
    function showSyncTab(id, tab) {
      const progressTab = document.getElementById('progress-tab-' + id);
      const historyTab = document.getElementById('history-tab-' + id);
      const tabs = document.querySelectorAll('#sync-panel-' + id + ' .sync-tab');
      
      tabs.forEach(t => t.classList.remove('active'));
      
      if (tab === 'progress') {
        progressTab.style.display = 'block';
        historyTab.style.display = 'none';
        tabs[0].classList.add('active');
      } else {
        progressTab.style.display = 'none';
        historyTab.style.display = 'block';
        tabs[1].classList.add('active');
      }
    }

    // Edit
    function editConnection(id) {
      window.location.href = '/admin/integrations/' + id + '/edit';
    }

    // Delete
    function deleteConnection(id, name) {
      pendingDeleteId = id;
      document.getElementById('deleteConnName').textContent = name;
      document.getElementById('deleteModal').classList.add('active');
      if (typeof lucide !== 'undefined') lucide.createIcons();
    }

    function closeDeleteModal() {
      document.getElementById('deleteModal').classList.remove('active');
      pendingDeleteId = null;
    }

    async function confirmDelete() {
      if (!pendingDeleteId) return;
      closeDeleteModal();
      
      try {
        const response = await fetch('/admin/api/integrations/' + pendingDeleteId, { method: 'DELETE' });
        const result = await response.json();
        
        if (result.success) {
          showToast('Connection deleted', 'success');
          const item = document.getElementById('conn-item-' + pendingDeleteId);
          if (item) {
            item.style.opacity = '0';
            item.style.transform = 'translateX(-20px)';
            setTimeout(() => item.remove(), 300);
          }
        } else {
          showToast('Failed: ' + (result.error || 'Unknown error'), 'error');
        }
      } catch (error) {
        showToast('Error: ' + error.message, 'error');
      }
      pendingDeleteId = null;
    }

    // Test Connection
    async function testConnection(id) {
      const modal = document.getElementById('testModal');
      const icon = document.getElementById('testModalIcon');
      const title = document.getElementById('testModalTitle');
      const subtitle = document.getElementById('testModalSubtitle');
      const result = document.getElementById('testModalResult');
      
      icon.className = 'modal-icon testing';
      icon.innerHTML = '<i data-lucide="loader-2" class="spin"></i>';
      title.textContent = 'Testing Connection';
      subtitle.textContent = 'Verifying server credentials...';
      result.style.display = 'none';
      
      modal.classList.add('active');
      if (typeof lucide !== 'undefined') lucide.createIcons();
      
      const startTime = Date.now();
      
      try {
        const getResponse = await fetch('/admin/api/integrations/' + id);
        const integrationData = await getResponse.json();
        
        if (!integrationData.success) throw new Error('Failed to get integration');

        const response = await fetch('/admin/api/integrations/test', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(integrationData.integration)
        });
        
        const testResult = await response.json();
        const elapsed = Date.now() - startTime;
        
        if (testResult.success) {
          icon.className = 'modal-icon success';
          icon.innerHTML = '<i data-lucide="check-circle"></i>';
          title.textContent = 'Connection Successful';
          subtitle.textContent = 'Server is responding correctly';
          document.getElementById('testFilesCount').textContent = testResult.data?.filesCount || 0;
          document.getElementById('testResponseTime').textContent = elapsed + 'ms';
          result.style.display = 'grid';
        } else {
          icon.className = 'modal-icon error';
          icon.innerHTML = '<i data-lucide="x-circle"></i>';
          title.textContent = 'Connection Failed';
          subtitle.textContent = testResult.error || 'Could not connect to server';
        }
      } catch (error) {
        icon.className = 'modal-icon error';
        icon.innerHTML = '<i data-lucide="x-circle"></i>';
        title.textContent = 'Test Failed';
        subtitle.textContent = error.message;
      }
      
      if (typeof lucide !== 'undefined') lucide.createIcons();
    }

    function closeTestModal() {
      document.getElementById('testModal').classList.remove('active');
    }

    // Sync Connection
    async function syncConnection(id) {
      if (activeSyncs.has(id)) {
        showToast('Sync already in progress', 'error');
        return;
      }
      
      // Expand panel
      const panel = document.getElementById('sync-panel-' + id);
      if (panel && !panel.classList.contains('expanded')) {
        panel.classList.add('expanded');
      }
      
      // Show progress tab
      showSyncTab(id, 'progress');
      
      // Update UI
      updateConnectionStatus(id, 'syncing');
      updateProgressUI(id, { status: 'syncing', message: 'Starting...', progress: 0 });
      
      const syncBtn = document.getElementById('sync-btn-' + id);
      if (syncBtn) syncBtn.classList.add('syncing');
      
      try {
        const response = await fetch('/admin/api/integrations/' + id + '/sync', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' }
        });
        
        const result = await response.json();
        
        if (result.success) {
          activeSyncs.set(id, true);
          startPolling(id);
        } else {
          updateProgressUI(id, { status: 'error', message: result.error || 'Failed to start', progress: 0 });
          updateConnectionStatus(id, 'error');
          if (syncBtn) syncBtn.classList.remove('syncing');
        }
      } catch (error) {
        updateProgressUI(id, { status: 'error', message: error.message, progress: 0 });
        updateConnectionStatus(id, 'error');
        if (syncBtn) syncBtn.classList.remove('syncing');
      }
      
      if (typeof lucide !== 'undefined') lucide.createIcons();
    }

    // Polling
    function startPolling(id) {
      const interval = setInterval(async () => {
        try {
          const response = await fetch('/admin/api/integrations/' + id + '/progress');
          const data = await response.json();
          
          if (data.success && data.progress) {
            const p = data.progress;
            
            let percent = 0;
            if (p.filesTotal > 0) {
              percent = Math.round((p.filesProcessed / p.filesTotal) * 100);
            }
            
            updateProgressUI(id, {
              status: p.status,
              message: p.currentFile ? 'Processing: ' + p.currentFile : (p.message || 'Processing...'),
              progress: percent,
              files: p.filesProcessed || 0,
              filesTotal: p.filesTotal || 0,
              records: p.recordsProcessed || 0,
              inserted: p.recordsInserted || 0,
              currentFile: p.currentFile,
              duration: p.elapsedMs ? Math.ceil(p.elapsedMs / 1000) : 0
            });
            
            if (p.status === 'completed' || p.status === 'error') {
              clearInterval(interval);
              activeSyncs.delete(id);
              
              const syncBtn = document.getElementById('sync-btn-' + id);
              if (syncBtn) syncBtn.classList.remove('syncing');
              
              updateConnectionStatus(id, p.status === 'completed' ? 'active' : 'error');
              
              // Refresh card data
              await refreshCardData(id);
              
              if (p.status === 'completed') {
                showToast('Sync completed: ' + (p.recordsInserted || 0) + ' records', 'success');
              }
            }
          } else if (!data.isSyncing) {
            clearInterval(interval);
            activeSyncs.delete(id);
            
            const syncBtn = document.getElementById('sync-btn-' + id);
            if (syncBtn) syncBtn.classList.remove('syncing');
            
            await refreshCardData(id);
          }
        } catch (error) {
          console.error('Polling error:', error);
        }
      }, 1500);
      
      // Timeout
      setTimeout(() => {
        if (activeSyncs.has(id)) {
          clearInterval(interval);
          activeSyncs.delete(id);
        }
      }, 1800000);
    }

    // Update Progress UI
    function updateProgressUI(id, data) {
      const icon = document.getElementById('progress-icon-' + id);
      const title = document.getElementById('progress-title-' + id);
      const subtitle = document.getElementById('progress-subtitle-' + id);
      const percent = document.getElementById('progress-percent-' + id);
      const bar = document.getElementById('progress-bar-' + id);
      const currentFile = document.getElementById('current-file-' + id);
      const currentFileName = document.getElementById('current-file-name-' + id);
      
      if (data.status === 'syncing') {
        icon.className = 'progress-icon';
        icon.innerHTML = '<i data-lucide="loader-2" class="spin"></i>';
        title.textContent = 'Syncing...';
      } else if (data.status === 'completed') {
        icon.className = 'progress-icon success';
        icon.innerHTML = '<i data-lucide="check-circle"></i>';
        title.textContent = 'Sync Complete';
      } else if (data.status === 'error') {
        icon.className = 'progress-icon error';
        icon.innerHTML = '<i data-lucide="alert-circle"></i>';
        title.textContent = 'Sync Failed';
      }
      
      subtitle.textContent = data.message || '';
      percent.textContent = data.progress + '%';
      bar.style.width = data.progress + '%';
      
      if (data.currentFile && data.status === 'syncing') {
        currentFile.style.display = 'flex';
        currentFileName.textContent = data.currentFile;
      } else {
        currentFile.style.display = 'none';
      }
      
      // Update stats
      const files = document.getElementById('pstat-files-' + id);
      const records = document.getElementById('pstat-records-' + id);
      const inserted = document.getElementById('pstat-inserted-' + id);
      const duration = document.getElementById('pstat-duration-' + id);
      
      if (files && data.files !== undefined) files.textContent = (data.files || 0) + '/' + (data.filesTotal || 0);
      if (records && data.records !== undefined) records.textContent = (data.records || 0).toLocaleString();
      if (inserted && data.inserted !== undefined) inserted.textContent = (data.inserted || 0).toLocaleString();
      if (duration && data.duration !== undefined) duration.textContent = data.duration + 's';
      
      if (typeof lucide !== 'undefined') lucide.createIcons();
    }

    // Update connection status badge
    function updateConnectionStatus(id, status) {
      const badge = document.getElementById('status-' + id);
      if (badge) {
        const statusClass = status === 'active' ? 'active' : status === 'syncing' ? 'syncing' : status === 'error' ? 'error' : 'pending';
        const statusText = status === 'active' ? 'Active' : status === 'syncing' ? 'Syncing' : status === 'error' ? 'Error' : 'Pending';
        const statusIcon = status === 'active' ? 'check-circle' : status === 'syncing' ? 'loader-2' : status === 'error' ? 'alert-circle' : 'circle';
        
        badge.className = 'status-badge ' + statusClass;
        badge.innerHTML = '<i data-lucide="' + statusIcon + '"></i><span>' + statusText + '</span>';
        if (typeof lucide !== 'undefined') lucide.createIcons();
      }
    }

    // Refresh card data
    async function refreshCardData(id) {
      try {
        const response = await fetch('/admin/api/integrations/' + id);
        const data = await response.json();
        
        if (data.success && data.integration) {
          const conn = data.integration;
          
          // Update status
          updateConnectionStatus(id, conn.status);
          
          // Update files
          const filesEl = document.getElementById('files-' + id);
          if (filesEl) filesEl.textContent = conn.lastSync && conn.lastSync.files ? conn.lastSync.files.length : 0;
          
          // Update records
          const recordsEl = document.getElementById('records-' + id);
          if (recordsEl) {
            const count = conn.stats && conn.stats.totalRecords ? conn.stats.totalRecords : 0;
            recordsEl.textContent = count >= 1000000 ? (count / 1000000).toFixed(1) + 'M' : count >= 1000 ? Math.floor(count / 1000) + 'K' : count;
          }
          
          // Update last sync
          const lastSyncEl = document.getElementById('lastsync-' + id);
          if (lastSyncEl && conn.lastSync && conn.lastSync.date) {
            const d = new Date(conn.lastSync.date);
            const now = new Date();
            const diff = Math.floor((now - d) / 60000);
            let text = 'Just now';
            if (diff >= 1 && diff < 60) text = diff + 'm ago';
            else if (diff >= 60 && diff < 1440) text = Math.floor(diff / 60) + 'h ago';
            else if (diff >= 1440) text = Math.floor(diff / 1440) + 'd ago';
            lastSyncEl.querySelector('span').textContent = text;
          }
          
          // Update progress stats
          if (conn.lastSync) {
            document.getElementById('pstat-files-' + id).textContent = conn.lastSync.files ? conn.lastSync.files.length : 0;
            document.getElementById('pstat-records-' + id).textContent = (conn.lastSync.recordsProcessed || 0).toLocaleString();
            document.getElementById('pstat-inserted-' + id).textContent = (conn.lastSync.recordsInserted || 0).toLocaleString();
            document.getElementById('pstat-duration-' + id).textContent = conn.lastSync.duration ? Math.ceil(conn.lastSync.duration / 1000) + 's' : '-';
          }
        }
      } catch (error) {
        console.error('Error refreshing:', error);
      }
    }

    // Sync all
    async function syncAllConnections() {
      const items = document.querySelectorAll('.connection-item');
      if (items.length === 0) {
        showToast('No connections to sync', 'error');
        return;
      }
      
      showToast('Starting sync for all connections...', 'success');
      
      for (const item of items) {
        const id = item.id.replace('conn-item-', '');
        if (id && !activeSyncs.has(id)) {
          await syncConnection(id);
          // Wait a bit between syncs
          await new Promise(r => setTimeout(r, 2000));
        }
      }
    }

    // Check ongoing syncs on load
    (async function() {
      const items = document.querySelectorAll('.connection-item');
      for (const item of items) {
        const id = item.id.replace('conn-item-', '');
        const statusBadge = document.getElementById('status-' + id);
        if (statusBadge && statusBadge.classList.contains('syncing')) {
          console.log('Resuming sync for:', id);
          const syncBtn = document.getElementById('sync-btn-' + id);
          if (syncBtn) syncBtn.classList.add('syncing');
          
          const panel = document.getElementById('sync-panel-' + id);
          if (panel) panel.classList.add('expanded');
          
          activeSyncs.set(id, true);
          startPolling(id);
        }
      }
      
      // Check for syncStarted param
      const urlParams = new URLSearchParams(window.location.search);
      const syncStartedId = urlParams.get('syncStarted');
      
      if (syncStartedId) {
        showToast('Auto-sync started!', 'success');
        
        // Expand panel
        const panel = document.getElementById('sync-panel-' + syncStartedId);
        if (panel) panel.classList.add('expanded');
        
        // Start polling if not already
        if (!activeSyncs.has(syncStartedId)) {
          activeSyncs.set(syncStartedId, true);
          updateConnectionStatus(syncStartedId, 'syncing');
          const syncBtn = document.getElementById('sync-btn-' + syncStartedId);
          if (syncBtn) syncBtn.classList.add('syncing');
          startPolling(syncStartedId);
        }
        
        // Clean URL
        window.history.replaceState({}, '', window.location.pathname);
      }
    })();

    // Spin animation
    const style = document.createElement('style');
    style.textContent = '.spin { animation: spin 1s linear infinite; }';
    document.head.appendChild(style);
  </script>

