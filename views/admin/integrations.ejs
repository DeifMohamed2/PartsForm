                    <div class="sync-tabs">
                      <button class="sync-tab active" onclick="showSyncTab('<%= conn._id %>', 'progress')">Live Progress</button>
                      <button class="sync-tab" onclick="showSyncTab('<%= conn._id %>', 'history')">History</button>
