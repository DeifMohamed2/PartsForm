                          <%= conn.status === 'syncing' ? '0%' : '100%' %>
                        </div>
                      </div>

                      <div class="progress-bar-container">
                        <div class="progress-bar-fill" id="progress-bar-<%= conn._id %>" style="width: <%= conn.status === 'syncing' ? '0%' : '100%' %>"></div>
                      </div>

                      <div class="current-file" id="current-file-<%= conn._id %>" style="display: none;">
                        <div class="current-file-icon">
                          <i data-lucide="file-text"></i>
                        </div>
                        <div class="current-file-info">
                          <strong id="current-file-name-<%= conn._id %>">file.csv</strong>
                          <span>Processing...</span>
                        </div>
