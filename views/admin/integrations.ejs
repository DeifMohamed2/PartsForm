                            <i data-lucide="trash-2"></i>
                          </button>
                          <button class="btn-refresh-history" onclick="loadSyncHistory('<%= conn._id %>')" title="Refresh History">
                            <i data-lucide="refresh-cw"></i>
                          </button>
                        </div>
                      </div>
                      
                      <!-- History Stats Summary -->
                      <div class="history-stats-summary" id="history-stats-<%= conn._id %>" style="display: none;">
                        <div class="stat-item">
                          <span class="stat-value" id="stat-total-<%= conn._id %>">0</span>
                          <span class="stat-label">Total Syncs</span>
                        </div>
                        <div class="stat-item success">
                          <span class="stat-value" id="stat-completed-<%= conn._id %>">0</span>
                          <span class="stat-label">Completed</span>
                        </div>
                        <div class="stat-item error">
                          <span class="stat-value" id="stat-failed-<%= conn._id %>">0</span>
                          <span class="stat-label">Failed</span>
                        </div>
