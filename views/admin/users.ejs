<%- include('partials/header') %>
<link rel="stylesheet" href="/css/adminCSS/admin-dashboard.css">
<link rel="stylesheet" href="/css/adminCSS/admin-users.css">
</head>
<body class="<%= typeof currentModule !== 'undefined' && currentModule ? 'module-' + currentModule : '' %>">
  <div class="admin-wrapper">
    <%- include('partials/sidebar', { activePage: 'users', currentModule: currentModule }) %>
    
    <main class="admin-main">
      <%- include('partials/topbar', { pageTitle: 'Users', currentModule: currentModule }) %>
      
      <div class="admin-content">
        <!-- Page Header -->
        <div class="users-page-header">
          <h2>Users Management</h2>
          <div class="users-header-actions">
            <div class="users-search-container">
              <i data-lucide="search" class="search-icon"></i>
              <input type="text" id="usersSearch" placeholder="Search users..." autocomplete="off">
            </div>
            <a href="/admin/users/create" class="admin-btn admin-btn-primary">
              <i data-lucide="user-plus"></i>
              Add User
            </a>
          </div>
        </div>

        <!-- Stats Cards -->
        <div class="stats-grid" style="margin-bottom: 1.5rem;">
          <%
            var activeCount = 0, inactiveCount = 0, totalOrders = 0, totalSpent = 0;
            users.forEach(function(u) {
              if (u.status === 'active') activeCount++;
              else inactiveCount++;
              totalOrders += u.orders || 0;
              totalSpent += u.totalSpent || 0;
            });
          %>
          <div class="stat-card module-themed">
            <div class="stat-icon">
              <i data-lucide="users"></i>
            </div>
            <div class="stat-content">
              <div class="stat-value"><%= users.length %></div>
              <div class="stat-label">Total Users</div>
            </div>
          </div>
          <div class="stat-card green">
            <div class="stat-icon">
              <i data-lucide="user-check"></i>
            </div>
            <div class="stat-content">
              <div class="stat-value"><%= activeCount %></div>
              <div class="stat-label">Active Users</div>
            </div>
          </div>
          <div class="stat-card orange">
            <div class="stat-icon">
              <i data-lucide="user-x"></i>
            </div>
            <div class="stat-content">
              <div class="stat-value"><%= inactiveCount %></div>
              <div class="stat-label">Inactive Users</div>
            </div>
          </div>
          <div class="stat-card purple">
            <div class="stat-icon">
              <i data-lucide="shopping-bag"></i>
            </div>
            <div class="stat-content">
              <div class="stat-value"><%= totalOrders %></div>
              <div class="stat-label">Total Orders</div>
            </div>
          </div>
        </div>

        <!-- Filters -->
        <div class="users-filters">
          <div class="filter-group">
            <span class="filter-label">Status:</span>
            <select class="filter-select" id="filterStatus">
              <option value="">All Status</option>
              <option value="active">Active</option>
              <option value="inactive">Inactive</option>
            </select>
          </div>
          <div class="filter-group">
            <span class="filter-label">Sort By:</span>
            <select class="filter-select" id="sortBy">
              <option value="recent">Most Recent</option>
              <option value="orders">Most Orders</option>
              <option value="spent">Highest Spent</option>
              <option value="name">Name A-Z</option>
            </select>
          </div>
          <div class="filters-spacer"></div>
          <button class="filter-clear-btn" onclick="clearFilters()">
            <i data-lucide="x"></i>
            Clear
          </button>
        </div>

        <!-- Bulk Action Bar -->
        <div class="bulk-action-bar" id="bulkActionBar">
          <span class="selected-count">
            <i data-lucide="check-square"></i>
            <span id="selectedCount">0</span> users selected
          </span>
          <div class="bulk-actions">
            <button class="bulk-action-btn" onclick="bulkUpdateStatus('active')">
              <i data-lucide="user-check"></i>
              Activate
            </button>
            <button class="bulk-action-btn danger" onclick="bulkUpdateStatus('inactive')">
              <i data-lucide="user-x"></i>
              Deactivate
            </button>
            <button class="bulk-action-btn" onclick="clearSelection()">
              <i data-lucide="x"></i>
              Cancel
            </button>
          </div>
        </div>

        <!-- Users Table -->
        <% if (users.length === 0) { %>
        <div class="users-empty">
          <div class="users-empty-icon">
            <i data-lucide="users"></i>
          </div>
          <h3>No Users Found</h3>
          <p>There are no users matching your criteria.</p>
        </div>
        <% } else { %>
        <div class="users-table-card">
          <table class="users-table">
            <thead>
              <tr>
                <th>
                  <div class="user-checkbox" id="selectAll" onclick="toggleSelectAll()"></div>
                </th>
                <th>User</th>
                <th>Company</th>
                <th>Orders</th>
                <th>Total Spent</th>
                <th>Joined</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody id="usersTableBody">
              <% users.forEach(function(user) { %>
              <tr data-user-id="<%= user.id %>" data-status="<%= user.status %>" onclick="handleRowClick(event, '<%= user.id %>')">
                <td onclick="event.stopPropagation()">
                  <div class="user-checkbox" data-id="<%= user.id %>" onclick="toggleUserSelection('<%= user.id %>')"></div>
                </td>
                <td>
                  <div class="user-cell">
                    <div class="user-avatar"><%= user.name.charAt(0) %></div>
                    <div class="user-info">
                      <h4><%= user.name %></h4>
                      <p><%= user.email %></p>
                    </div>
                  </div>
                </td>
                <td><%= user.company %></td>
                <td class="user-stat-cell">
                  <div class="user-stat-value"><%= user.orders %></div>
                </td>
                <td class="user-stat-cell">
                  <div class="user-stat-value">$<%= (user.totalSpent / 1000).toFixed(0) %>K</div>
                </td>
                <td><%= new Date(user.joined).toLocaleDateString() %></td>
                <td>
                  <span class="user-status-badge <%= user.status %>">
                    <% if (user.status === 'active') { %>
                      <i data-lucide="check-circle"></i>
                    <% } else { %>
                      <i data-lucide="x-circle"></i>
                    <% } %>
                    <%= user.status.charAt(0).toUpperCase() + user.status.slice(1) %>
                  </span>
                </td>
                <td onclick="event.stopPropagation()">
                  <div class="user-actions">
                    <a href="/admin/users/<%= user.id %>" class="user-action-btn view" title="View Details">
                      <i data-lucide="eye"></i>
                    </a>
                    <a href="/admin/users/<%= user.id %>/edit" class="user-action-btn edit" title="Edit User">
                      <i data-lucide="edit-2"></i>
                    </a>
                    <% if (user.status === 'active') { %>
                    <button class="user-action-btn deactivate" title="Deactivate User" onclick="toggleUserStatus('<%= user.id %>', '<%= user.status %>')">
                      <i data-lucide="user-x"></i>
                    </button>
                    <% } else { %>
                    <button class="user-action-btn activate" title="Activate User" onclick="toggleUserStatus('<%= user.id %>', '<%= user.status %>')">
                      <i data-lucide="user-check"></i>
                    </button>
                    <% } %>
                  </div>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
        <% } %>
      </div>
    </main>
  </div>

  <script>
    var selectedUsers = [];
    
    // Handle row click to navigate to user details
    function handleRowClick(event, userId) {
      window.location.href = '/admin/users/' + userId;
    }
    
    // Toggle single user selection
    function toggleUserSelection(userId) {
      var checkbox = document.querySelector('.user-checkbox[data-id="' + userId + '"]');
      var row = document.querySelector('tr[data-user-id="' + userId + '"]');
      var index = selectedUsers.indexOf(userId);
      
      if (index > -1) {
        selectedUsers.splice(index, 1);
        checkbox.classList.remove('checked');
        row.classList.remove('selected');
      } else {
        selectedUsers.push(userId);
        checkbox.classList.add('checked');
        row.classList.add('selected');
      }
      
      updateBulkActionBar();
    }
    
    // Toggle select all
    function toggleSelectAll() {
      var selectAllCheckbox = document.getElementById('selectAll');
      var allCheckboxes = document.querySelectorAll('.user-checkbox[data-id]');
      var allRows = document.querySelectorAll('#usersTableBody tr');
      
      if (selectAllCheckbox.classList.contains('checked')) {
        // Deselect all
        selectAllCheckbox.classList.remove('checked');
        selectedUsers = [];
        allCheckboxes.forEach(function(cb) { cb.classList.remove('checked'); });
        allRows.forEach(function(row) { row.classList.remove('selected'); });
      } else {
        // Select all visible
        selectAllCheckbox.classList.add('checked');
        selectedUsers = [];
        allRows.forEach(function(row) {
          if (row.style.display !== 'none') {
            var userId = row.dataset.userId;
            selectedUsers.push(userId);
            row.classList.add('selected');
            document.querySelector('.user-checkbox[data-id="' + userId + '"]').classList.add('checked');
          }
        });
      }
      
      updateBulkActionBar();
    }
    
    // Update bulk action bar visibility
    function updateBulkActionBar() {
      var bar = document.getElementById('bulkActionBar');
      var countEl = document.getElementById('selectedCount');
      
      if (selectedUsers.length > 0) {
        bar.classList.add('active');
        countEl.textContent = selectedUsers.length;
      } else {
        bar.classList.remove('active');
      }
      
      // Re-initialize lucide icons
      if (typeof lucide !== 'undefined') {
        lucide.createIcons();
      }
    }
    
    // Clear selection
    function clearSelection() {
      var selectAllCheckbox = document.getElementById('selectAll');
      var allCheckboxes = document.querySelectorAll('.user-checkbox[data-id]');
      var allRows = document.querySelectorAll('#usersTableBody tr');
      
      selectAllCheckbox.classList.remove('checked');
      selectedUsers = [];
      allCheckboxes.forEach(function(cb) { cb.classList.remove('checked'); });
      allRows.forEach(function(row) { row.classList.remove('selected'); });
      updateBulkActionBar();
    }
    
    // Bulk update status
    function bulkUpdateStatus(newStatus) {
      if (selectedUsers.length === 0) return;
      
      fetch('/admin/api/users/bulk', {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ userIds: selectedUsers, status: newStatus })
      }).then(function(response) {
        if (response.ok) {
          location.reload();
        }
      }).catch(function(err) {
        console.error('Error updating users:', err);
      });
    }
    
    // Toggle single user status
    function toggleUserStatus(userId, currentStatus) {
      var newStatus = currentStatus === 'active' ? 'inactive' : 'active';
      
      fetch('/admin/api/users/' + userId + '/status', {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ status: newStatus })
      }).then(function(response) {
        if (response.ok) {
          location.reload();
        }
      }).catch(function(err) {
        console.error('Error updating user:', err);
      });
    }
    
    // Approve user
    function approveUser(userId) {
      if (!confirm('Are you sure you want to approve this user? They will be able to access their buyer dashboard.')) {
        return;
      }
      
      fetch('/admin/api/users/' + userId + '/approve', {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ notes: 'Approved by admin' })
      }).then(function(response) {
        if (response.ok) {
          location.reload();
        } else {
          alert('Failed to approve user');
        }
      }).catch(function(err) {
        console.error('Error approving user:', err);
        alert('Failed to approve user');
      });
    }
    
    // Reject user
    function rejectUser(userId) {
      var reason = prompt('Please provide a reason for rejection (optional):');
      if (reason === null) return; // User cancelled
      
      fetch('/admin/api/users/' + userId + '/reject', {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ reason: reason || 'Application rejected by admin' })
      }).then(function(response) {
        if (response.ok) {
          location.reload();
        } else {
          alert('Failed to reject user');
        }
      }).catch(function(err) {
        console.error('Error rejecting user:', err);
        alert('Failed to reject user');
      });
    }
    
    // Search functionality
    document.getElementById('usersSearch').addEventListener('input', function(e) {
      var searchTerm = e.target.value.toLowerCase();
      var rows = document.querySelectorAll('#usersTableBody tr');
      
      rows.forEach(function(row) {
        var text = row.textContent.toLowerCase();
        row.style.display = text.includes(searchTerm) ? '' : 'none';
      });
    });
    
    // Filter by status
    document.getElementById('filterStatus').addEventListener('change', function(e) {
      var status = e.target.value;
      var rows = document.querySelectorAll('#usersTableBody tr');
      
      rows.forEach(function(row) {
        if (!status || row.dataset.status === status) {
          row.style.display = '';
        } else {
          row.style.display = 'none';
        }
      });
    });
    
    // Clear filters
    function clearFilters() {
      document.getElementById('filterStatus').value = '';
      document.getElementById('sortBy').value = 'recent';
      document.getElementById('usersSearch').value = '';
      var rows = document.querySelectorAll('#usersTableBody tr');
      rows.forEach(function(row) { row.style.display = ''; });
    }
  </script>

  <style>
    /* Pending status badge */
    .user-status-badge.pending {
      background: rgba(245, 158, 11, 0.12);
      color: #d97706;
    }
    .user-status-badge.rejected {
      background: rgba(239, 68, 68, 0.12);
      color: #dc2626;
    }
    /* Approve/Reject/Activate/Deactivate buttons */
    .user-action-btn.approve,
    .user-action-btn.activate {
      background: rgba(16, 185, 129, 0.1);
      color: #10b981;
    }
    .user-action-btn.approve:hover,
    .user-action-btn.activate:hover {
      background: #10b981;
      color: white;
    }
    .user-action-btn.reject,
    .user-action-btn.deactivate {
      background: rgba(239, 68, 68, 0.1);
      color: #ef4444;
    }
    .user-action-btn.reject:hover,
    .user-action-btn.deactivate:hover {
      background: #ef4444;
      color: white;
    }
  </style>

<%- include('partials/footer') %>
