<%- include('partials/header') %>
<link rel="stylesheet" href="/css/adminCSS/admin-dashboard.css">
<link rel="stylesheet" href="/css/adminCSS/admin-users.css">
</head>

<body>
  <div class="admin-wrapper">
    <%- include('partials/sidebar', { activePage: 'users' }) %>

    <main class="admin-main">
      <%- include('partials/topbar', { pageTitle: 'Users' }) %>

      <div class="admin-content">
        <!-- Page Header -->
        <div class="users-page-header">
          <h2>Users Management</h2>
          <div class="users-header-actions">
            <div class="users-search-container">
              <i data-lucide="search" class="search-icon"></i>
              <input type="text" id="usersSearch" placeholder="Search users..." autocomplete="off">
            </div>
            <a href="/admin/users/create" class="admin-btn admin-btn-primary">
              <i data-lucide="user-plus"></i>
              Add User
            </a>
          </div>
        </div>

        <!-- Default Markup Banner -->
        <div class="default-markup-banner" style="margin-bottom: 1.25rem; background: linear-gradient(135deg, rgba(139, 92, 246, 0.08), rgba(59, 130, 246, 0.08)); border: 1px solid rgba(139, 92, 246, 0.2); border-radius: 14px; padding: 1rem 1.25rem; display: flex; align-items: center; justify-content: space-between; gap: 1rem;">
          <div style="display: flex; align-items: center; gap: 0.75rem;">
            <div style="width: 40px; height: 40px; border-radius: 10px; background: rgba(139, 92, 246, 0.15); display: flex; align-items: center; justify-content: center;">
              <i data-lucide="percent" style="width: 20px; height: 20px; color: #8b5cf6;"></i>
            </div>
            <div>
              <div style="font-size: 0.85rem; font-weight: 600; color: var(--admin-text-primary);">Default Price Markup</div>
              <div style="font-size: 0.75rem; color: var(--admin-text-muted);">Applied to users without a custom markup. Change in <a href="/admin/settings" style="color: #8b5cf6;">Settings</a>.</div>
            </div>
          </div>
          <div style="display: flex; align-items: center; gap: 0.5rem;">
            <span style="font-size: 1.5rem; font-weight: 700; color: #8b5cf6;" id="defaultMarkupValue"><%= typeof defaultMarkup !== 'undefined' ? defaultMarkup : 0 %>%</span>
          </div>
        </div>

        <!-- Stats Cards -->
        <div class="stats-grid" style="margin-bottom: 1.5rem;">
          <%
            var activeCount = 0, inactiveCount = 0, totalOrders = 0, totalSpent = 0;
            users.forEach(function(u) {
              if (u.status === 'active') activeCount++;
              else inactiveCount++;
              totalOrders += u.orders || 0;
              totalSpent += u.totalSpent || 0;
            });
          %>
          <div class="stat-card module-themed">
            <div class="stat-icon">
              <i data-lucide="users"></i>
            </div>
            <div class="stat-content">
              <div class="stat-value"><%= users.length %></div>
              <div class="stat-label">Total Users</div>
            </div>
          </div>
          <div class="stat-card green">
            <div class="stat-icon">
              <i data-lucide="user-check"></i>
            </div>
            <div class="stat-content">
              <div class="stat-value"><%= activeCount %></div>
              <div class="stat-label">Active Users</div>
            </div>
          </div>
          <div class="stat-card orange">
            <div class="stat-icon">
              <i data-lucide="user-x"></i>
            </div>
            <div class="stat-content">
              <div class="stat-value"><%= inactiveCount %></div>
              <div class="stat-label">Inactive Users</div>
            </div>
          </div>
          <div class="stat-card purple">
            <div class="stat-icon">
              <i data-lucide="shopping-bag"></i>
            </div>
            <div class="stat-content">
              <div class="stat-value"><%= totalOrders %></div>
              <div class="stat-label">Total Orders</div>
            </div>
          </div>
        </div>

        <!-- Filters -->
        <div class="users-filters">
          <div class="filter-group">
            <span class="filter-label">Status:</span>
            <select class="filter-select" id="filterStatus">
              <option value="">All Status</option>
              <option value="active">Active</option>
              <option value="inactive">Inactive</option>
            </select>
          </div>
          <div class="filter-group">
            <span class="filter-label">Sort By:</span>
            <select class="filter-select" id="sortBy">
              <option value="recent">Most Recent</option>
              <option value="orders">Most Orders</option>
              <option value="spent">Highest Spent</option>
              <option value="name">Name A-Z</option>
            </select>
          </div>
          <div class="filters-spacer"></div>
          <button class="filter-clear-btn" onclick="clearFilters()">
            <i data-lucide="x"></i>
            Clear
          </button>
        </div>

        <!-- Bulk Action Bar -->
        <div class="bulk-action-bar" id="bulkActionBar">
          <span class="selected-count">
            <i data-lucide="check-square"></i>
            <span id="selectedCount">0</span> users selected
          </span>
          <div class="bulk-actions">
            <button class="bulk-action-btn success" onclick="openBulkApproveModal()">
              <i data-lucide="user-check"></i>
              Approve & Set Markup
            </button>
            <button class="bulk-action-btn" onclick="bulkUpdateStatus('active', event)">
              <i data-lucide="toggle-right"></i>
              Activate
            </button>
            <button class="bulk-action-btn danger" onclick="bulkUpdateStatus('inactive', event)">
              <i data-lucide="user-x"></i>
              Deactivate
            </button>
            <button class="bulk-action-btn" onclick="clearSelection()">
              <i data-lucide="x"></i>
              Cancel
            </button>
          </div>
        </div>

        <!-- Users Table -->
        <% if (users.length === 0) { %>
        <div class="users-empty">
          <div class="users-empty-icon">
            <i data-lucide="users"></i>
          </div>
          <h3>No Users Found</h3>
          <p>There are no users matching your criteria.</p>
        </div>
        <% } else { %>
        <div class="users-table-card">
          <table class="users-table">
            <thead>
              <tr>
                <th>
                  <div class="user-checkbox" id="selectAll" onclick="toggleSelectAll()"></div>
                </th>
                <th>User</th>
                <th>Company</th>
                <th>Orders</th>
                <th>Total Spent</th>
                <th>Markup</th>
                <th>Joined</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody id="usersTableBody">
              <% users.forEach(function(user) { %>
              <tr data-user-id="<%= user.id %>" data-status="<%= user.status %>" onclick="handleRowClick(event, '<%= user.id %>')">
                <td onclick="event.stopPropagation()">
                  <div class="user-checkbox" data-id="<%= user.id %>" onclick="toggleUserSelection('<%= user.id %>')"></div>
                </td>
                <td>
                  <div class="user-cell">
                    <div class="user-avatar"><%= user.name.charAt(0) %></div>
                    <div class="user-info">
                      <h4><%= user.name %></h4>
                      <p><%= user.email %></p>
                    </div>
                  </div>
                </td>
                <td><%= user.company %></td>
                <td class="user-stat-cell">
                  <div class="user-stat-value"><%= user.orders %></div>
                </td>
                <td class="user-stat-cell">
                  <div class="user-stat-value">$<%= (user.totalSpent / 1000).toFixed(0) %>K</div>
                </td>
                <td>
                  <% if (user.markupPercentage !== null && user.markupPercentage !== undefined) { %>
                  <span class="markup-badge custom" title="Custom markup"><%= user.markupPercentage %>%</span>
                  <% } else { %>
                  <span class="markup-badge default" title="Using default markup"><%= typeof defaultMarkup !== 'undefined' ? defaultMarkup : 0 %>% <small>(def)</small></span>
                  <% } %>
                </td>
                <td><%= new Date(user.joined).toLocaleDateString() %></td>
                <td>
                  <span class="user-status-badge <%= user.status %>">
                    <% if (user.status === 'active') { %>
                    <i data-lucide="check-circle"></i>
                    <% } else { %>
                    <i data-lucide="x-circle"></i>
                    <% } %>
                    <%= user.status.charAt(0).toUpperCase() + user.status.slice(1) %>
                  </span>
                </td>
                <td onclick="event.stopPropagation()">
                  <div class="user-actions">
                    <a href="/admin/users/<%= user.id %>" class="user-action-btn view" title="View Details">
                      <i data-lucide="eye"></i>
                    </a>
                    <a href="/admin/users/<%= user.id %>/edit" class="user-action-btn edit" title="Edit User">
                      <i data-lucide="edit-2"></i>
                    </a>
                    <% if (user.status === 'active') { %>
                    <button class="user-action-btn deactivate" title="Deactivate User" onclick="toggleUserStatus('<%= user.id %>', '<%= user.status %>', event)">
                      <i data-lucide="user-x"></i>
                    </button>
                    <% } else { %>
                    <button class="user-action-btn approve" title="Approve & Set Markup" onclick="approveUser('<%= user.id %>')">
                      <i data-lucide="user-check"></i>
                    </button>
                    <% } %>
                  </div>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
        <% } %>
      </div>
    </main>
  </div>

  <script>
    var selectedUsers = [];

    // Handle row click to navigate to user details
    function handleRowClick(event, userId) {
      window.location.href = '/admin/users/' + userId;
    }

    // Toggle single user selection
    function toggleUserSelection(userId) {
      var checkbox = document.querySelector('.user-checkbox[data-id="' + userId + '"]');
      var row = document.querySelector('tr[data-user-id="' + userId + '"]');
      var index = selectedUsers.indexOf(userId);

      if (index > -1) {
        selectedUsers.splice(index, 1);
        checkbox.classList.remove('checked');
        row.classList.remove('selected');
      } else {
        selectedUsers.push(userId);
        checkbox.classList.add('checked');
        row.classList.add('selected');
      }

      updateBulkActionBar();
    }

    // Toggle select all
    function toggleSelectAll() {
      var selectAllCheckbox = document.getElementById('selectAll');
      var allCheckboxes = document.querySelectorAll('.user-checkbox[data-id]');
      var allRows = document.querySelectorAll('#usersTableBody tr');

      if (selectAllCheckbox.classList.contains('checked')) {
        // Deselect all
        selectAllCheckbox.classList.remove('checked');
        selectedUsers = [];
        allCheckboxes.forEach(function(cb) {
          cb.classList.remove('checked');
        });
        allRows.forEach(function(row) {
          row.classList.remove('selected');
        });
      } else {
        // Select all visible
        selectAllCheckbox.classList.add('checked');
        selectedUsers = [];
        allRows.forEach(function(row) {
          if (row.style.display !== 'none') {
            var userId = row.dataset.userId;
            selectedUsers.push(userId);
            row.classList.add('selected');
            document.querySelector('.user-checkbox[data-id="' + userId + '"]').classList.add('checked');
          }
        });
      }

      updateBulkActionBar();
    }

    // Update bulk action bar visibility
    function updateBulkActionBar() {
      var bar = document.getElementById('bulkActionBar');
      var countEl = document.getElementById('selectedCount');

      if (selectedUsers.length > 0) {
        bar.classList.add('active');
        countEl.textContent = selectedUsers.length;
      } else {
        bar.classList.remove('active');
      }

      // Re-initialize lucide icons
      if (typeof lucide !== 'undefined') {
        lucide.createIcons();
      }
    }

    // Clear selection
    function clearSelection() {
      var selectAllCheckbox = document.getElementById('selectAll');
      var allCheckboxes = document.querySelectorAll('.user-checkbox[data-id]');
      var allRows = document.querySelectorAll('#usersTableBody tr');

      selectAllCheckbox.classList.remove('checked');
      selectedUsers = [];
      allCheckboxes.forEach(function(cb) {
        cb.classList.remove('checked');
      });
      allRows.forEach(function(row) {
        row.classList.remove('selected');
      });
      updateBulkActionBar();
    }

    // Bulk update status
    function bulkUpdateStatus(newStatus, event) {
      if (selectedUsers.length === 0) return;

      // Find the button that was clicked and show loading
      var btn = event ? event.target.closest('.bulk-action-btn') : null;
      var originalContent = '';
      
      if (btn) {
        originalContent = btn.innerHTML;
        btn.disabled = true;
        btn.innerHTML = '<i data-lucide="loader-2" class="spin"></i> Processing...';
        if (typeof lucide !== 'undefined') lucide.createIcons();
      }

      fetch('/admin/api/users/bulk', {
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          userIds: selectedUsers,
          status: newStatus
        })
      }).then(function(response) {
        if (response.ok) {
          location.reload();
        } else {
          throw new Error('Failed to update');
        }
      }).catch(function(err) {
        console.error('Error updating users:', err);
        alert('Failed to update users');
        if (btn) {
          btn.disabled = false;
          btn.innerHTML = originalContent;
          if (typeof lucide !== 'undefined') lucide.createIcons();
        }
      });
    }

    // Toggle single user status
    function toggleUserStatus(userId, currentStatus, event) {
      var newStatus = currentStatus === 'active' ? 'inactive' : 'active';
      
      // Find the button that was clicked
      var btn = event ? event.target.closest('.user-action-btn') : null;
      var originalContent = '';
      
      if (btn) {
        originalContent = btn.innerHTML;
        btn.disabled = true;
        btn.innerHTML = '<i data-lucide="loader-2" class="spin"></i>';
        btn.style.pointerEvents = 'none';
        if (typeof lucide !== 'undefined') lucide.createIcons();
      }

      fetch('/admin/api/users/' + userId + '/status', {
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          status: newStatus
        })
      }).then(function(response) {
        if (response.ok) {
          location.reload();
        } else {
          throw new Error('Failed to update status');
        }
      }).catch(function(err) {
        console.error('Error updating user:', err);
        alert('Failed to update user status');
        // Restore button on error
        if (btn) {
          btn.disabled = false;
          btn.innerHTML = originalContent;
          btn.style.pointerEvents = '';
          if (typeof lucide !== 'undefined') lucide.createIcons();
        }
      });
    }

    // Approve user
    function approveUser(userId) {
      if (!confirm('Are you sure you want to approve this user? They will be able to access their buyer dashboard.')) {
        return;
      }

      fetch('/admin/api/users/' + userId + '/approve', {
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          notes: 'Approved by admin'
        })
      }).then(function(response) {
        if (response.ok) {
          location.reload();
        } else {
          alert('Failed to approve user');
        }
      }).catch(function(err) {
        console.error('Error approving user:', err);
        alert('Failed to approve user');
      });
    }

    // Reject user
    function rejectUser(userId) {
      var reason = prompt('Please provide a reason for rejection (optional):');
      if (reason === null) return; // User cancelled

      fetch('/admin/api/users/' + userId + '/reject', {
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          reason: reason || 'Application rejected by admin'
        })
      }).then(function(response) {
        if (response.ok) {
          location.reload();
        } else {
          alert('Failed to reject user');
        }
      }).catch(function(err) {
        console.error('Error rejecting user:', err);
        alert('Failed to reject user');
      });
    }

    // Search functionality
    document.getElementById('usersSearch').addEventListener('input', function(e) {
      var searchTerm = e.target.value.toLowerCase();
      var rows = document.querySelectorAll('#usersTableBody tr');

      rows.forEach(function(row) {
        var text = row.textContent.toLowerCase();
        row.style.display = text.includes(searchTerm) ? '' : 'none';
      });
    });

    // Filter by status
    document.getElementById('filterStatus').addEventListener('change', function(e) {
      var status = e.target.value;
      var rows = document.querySelectorAll('#usersTableBody tr');

      rows.forEach(function(row) {
        if (!status || row.dataset.status === status) {
          row.style.display = '';
        } else {
          row.style.display = 'none';
        }
      });
    });

    // Clear filters
    function clearFilters() {
      document.getElementById('filterStatus').value = '';
      document.getElementById('sortBy').value = 'recent';
      document.getElementById('usersSearch').value = '';
      var rows = document.querySelectorAll('#usersTableBody tr');
      rows.forEach(function(row) {
        row.style.display = '';
      });
    }
  </script>

  <style>
    /* Markup badges */
    .markup-badge {
      display: inline-flex;
      align-items: center;
      gap: 0.25rem;
      padding: 0.25rem 0.6rem;
      border-radius: 8px;
      font-size: 0.8rem;
      font-weight: 600;
      white-space: nowrap;
    }

    .markup-badge.custom {
      background: rgba(139, 92, 246, 0.12);
      color: #8b5cf6;
    }

    .markup-badge.default {
      background: var(--admin-bg-tertiary, rgba(100, 116, 139, 0.1));
      color: var(--admin-text-muted, #64748b);
    }

    .markup-badge small {
      font-size: 0.65rem;
      opacity: 0.7;
    }

    /* Pending status badge */
    .user-status-badge.pending {
      background: rgba(245, 158, 11, 0.12);
      color: #d97706;
    }

    .user-status-badge.rejected {
      background: rgba(239, 68, 68, 0.12);
      color: #dc2626;
    }

    /* Approve/Reject/Activate/Deactivate buttons */
    .user-action-btn.approve,
    .user-action-btn.activate {
      background: rgba(16, 185, 129, 0.1);
      color: #10b981;
    }

    .user-action-btn.approve:hover,
    .user-action-btn.activate:hover {
      background: #10b981;
      color: white;
    }

    .user-action-btn.reject,
    .user-action-btn.deactivate {
      background: rgba(239, 68, 68, 0.1);
      color: #ef4444;
    }

    .user-action-btn.reject:hover,
    .user-action-btn.deactivate:hover {
      background: #ef4444;
      color: white;
    }

    /* Bulk action success button */
    .bulk-action-btn.success {
      background: rgba(16, 185, 129, 0.1);
      color: #10b981;
    }

    .bulk-action-btn.success:hover {
      background: #10b981;
      color: white;
    }
  </style>

  <!-- Approve User Modal with Markup Settings -->
  <div class="approve-modal-overlay" id="approveModalOverlay" onclick="closeApproveModal()">
    <div class="approve-modal" onclick="event.stopPropagation()">
      <div class="approve-modal-header">
        <div class="approve-modal-icon">
          <i data-lucide="user-check"></i>
        </div>
        <div>
          <h3 id="approveModalTitle">Approve User</h3>
          <p id="approveModalSubtitle" style="color: var(--admin-text-muted); font-size: 0.85rem;">Set pricing markup for this user</p>
        </div>
        <button class="approve-modal-close" onclick="closeApproveModal()">
          <i data-lucide="x"></i>
        </button>
      </div>
      
      <div class="approve-modal-body">
        <!-- User info preview (for single user) -->
        <div class="approve-user-preview" id="approveUserPreview">
          <div class="preview-avatar" id="previewAvatar">M</div>
          <div class="preview-info">
            <h4 id="previewName">User Name</h4>
            <p id="previewEmail">user@email.com</p>
          </div>
        </div>
        
        <!-- Bulk users info (for multiple users) -->
        <div class="approve-bulk-preview" id="approveBulkPreview" style="display: none;">
          <div class="bulk-preview-icon">
            <i data-lucide="users"></i>
          </div>
          <div class="bulk-preview-info">
            <h4><span id="bulkUserCount">0</span> users selected</h4>
            <p>The markup will be applied to all selected inactive users</p>
          </div>
        </div>
        
        <!-- Markup Settings -->
        <div class="markup-settings">
          <label class="markup-setting-label">
            <i data-lucide="percent"></i>
            Price Markup Configuration
          </label>
          
          <div class="markup-options">
            <label class="markup-option" id="markupOptionDefault">
              <input type="radio" name="markupType" value="default" checked onchange="handleMarkupTypeChange()">
              <div class="markup-option-content">
                <div class="markup-option-header">
                  <span class="markup-option-title">Use Default Markup</span>
                  <span class="markup-option-value" id="defaultMarkupDisplay"><%= typeof defaultMarkup !== 'undefined' ? defaultMarkup : 0 %>%</span>
                </div>
                <p class="markup-option-desc">Apply the system default markup percentage</p>
              </div>
            </label>
            
            <label class="markup-option" id="markupOptionCustom">
              <input type="radio" name="markupType" value="custom" onchange="handleMarkupTypeChange()">
              <div class="markup-option-content">
                <div class="markup-option-header">
                  <span class="markup-option-title">Set Custom Markup</span>
                </div>
                <p class="markup-option-desc">Define a specific markup for this user</p>
              </div>
            </label>
          </div>
          
          <!-- Custom markup input -->
          <div class="custom-markup-input" id="customMarkupInput" style="display: none;">
            <div class="custom-markup-wrapper">
              <input type="number" id="customMarkupValue" min="0" max="100" step="0.5" value="15" placeholder="Enter markup %">
              <span class="markup-suffix">%</span>
            </div>
            <div class="markup-input-hint">
              <i data-lucide="info"></i>
              Enter a value between 0% and 100%
            </div>
          </div>
        </div>
        
        <!-- Preview calculation -->
        <div class="markup-preview-calc">
          <div class="calc-header">
            <i data-lucide="calculator"></i>
            Price Preview
          </div>
          <div class="calc-content">
            <div class="calc-row">
              <span>Base Price</span>
              <span>$100.00</span>
            </div>
            <div class="calc-row markup-row">
              <span>Markup (<span id="calcMarkupPercent"><%= typeof defaultMarkup !== 'undefined' ? defaultMarkup : 0 %></span>%)</span>
              <span id="calcMarkupAmount">+$<%= typeof defaultMarkup !== 'undefined' ? defaultMarkup : 0 %>.00</span>
            </div>
            <div class="calc-row total-row">
              <span>Final Price</span>
              <span id="calcFinalPrice">$<%= typeof defaultMarkup !== 'undefined' ? (100 + defaultMarkup) : 100 %>.00</span>
            </div>
          </div>
        </div>
      </div>
      
      <div class="approve-modal-footer">
        <button class="admin-btn admin-btn-secondary" onclick="closeApproveModal()">Cancel</button>
        <button class="admin-btn admin-btn-success" id="approveConfirmBtn" onclick="confirmApprove()">
          <i data-lucide="check"></i>
          <span id="approveConfirmText">Approve User</span>
        </button>
      </div>
    </div>
  </div>

  <style>
    /* Approve Modal Styles */
    .approve-modal-overlay {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.5);
      backdrop-filter: blur(4px);
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 9999;
      opacity: 0;
      visibility: hidden;
      transition: all 0.25s ease;
    }

    .approve-modal-overlay.active {
      opacity: 1;
      visibility: visible;
    }

    .approve-modal {
      background: var(--admin-bg-primary, #fff);
      border-radius: 20px;
      width: 100%;
      max-width: 480px;
      box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
      transform: scale(0.9) translateY(20px);
      transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
