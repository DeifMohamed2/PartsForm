  <script>
    // Approve modal state
    var approveModalState = {
      mode: 'single', // 'single' or 'bulk'
      userId: null,
      userName: '',
      userEmail: '',
      userIds: [],
      defaultMarkup: <%= typeof defaultMarkup !== 'undefined' ? defaultMarkup : 0 %>
    };

    // Open approve modal for single user
    function openApproveModal(userId, userName, userEmail) {
      approveModalState.mode = 'single';
      approveModalState.userId = userId;
      approveModalState.userName = userName || 'User';
      approveModalState.userEmail = userEmail || '';
      approveModalState.userIds = [];

      // Update modal UI for single user
      document.getElementById('approveModalTitle').textContent = 'Approve User';
      document.getElementById('approveModalSubtitle').textContent = 'Set pricing markup for this user';
      document.getElementById('approveUserPreview').style.display = 'flex';
      document.getElementById('approveBulkPreview').style.display = 'none';
      document.getElementById('previewAvatar').textContent = userName ? userName.charAt(0).toUpperCase() : 'U';
      document.getElementById('previewName').textContent = userName || 'User';
      document.getElementById('previewEmail').textContent = userEmail || '';
      document.getElementById('approveConfirmText').textContent = 'Approve User';

      // Reset to default markup
      document.querySelector('input[name="markupType"][value="default"]').checked = true;
      handleMarkupTypeChange();

      // Show modal
      document.getElementById('approveModalOverlay').classList.add('active');
      
      if (typeof lucide !== 'undefined') {
        lucide.createIcons();
      }
    }

    // Open approve modal for bulk users
    function openBulkApproveModal() {
      if (selectedUsers.length === 0) {
        alert('Please select users to approve');
        return;
      }

      // Filter only inactive users
      var inactiveUsers = selectedUsers.filter(function(userId) {
        var row = document.querySelector('tr[data-user-id="' + userId + '"]');
        return row && row.dataset.status !== 'active';
      });

      if (inactiveUsers.length === 0) {
        alert('All selected users are already active');
        return;
      }

      approveModalState.mode = 'bulk';
      approveModalState.userId = null;
      approveModalState.userIds = inactiveUsers;

      // Update modal UI for bulk
      document.getElementById('approveModalTitle').textContent = 'Bulk Approve Users';
      document.getElementById('approveModalSubtitle').textContent = 'Set markup for selected users';
      document.getElementById('approveUserPreview').style.display = 'none';
      document.getElementById('approveBulkPreview').style.display = 'flex';
      document.getElementById('bulkUserCount').textContent = inactiveUsers.length;
      document.getElementById('approveConfirmText').textContent = 'Approve ' + inactiveUsers.length + ' Users';

      // Reset to default markup
      document.querySelector('input[name="markupType"][value="default"]').checked = true;
      handleMarkupTypeChange();

      // Show modal
      document.getElementById('approveModalOverlay').classList.add('active');
      
      if (typeof lucide !== 'undefined') {
        lucide.createIcons();
      }
    }

    // Close approve modal
    function closeApproveModal() {
      document.getElementById('approveModalOverlay').classList.remove('active');
    }

    // Handle markup type change
    function handleMarkupTypeChange() {
      var markupType = document.querySelector('input[name="markupType"]:checked').value;
      var customInput = document.getElementById('customMarkupInput');
      var defaultOption = document.getElementById('markupOptionDefault');
      var customOption = document.getElementById('markupOptionCustom');

      if (markupType === 'custom') {
        customInput.style.display = 'block';
        defaultOption.classList.remove('selected');
        customOption.classList.add('selected');
        updateMarkupPreview(parseFloat(document.getElementById('customMarkupValue').value) || 0);
      } else {
        customInput.style.display = 'none';
        defaultOption.classList.add('selected');
        customOption.classList.remove('selected');
        updateMarkupPreview(approveModalState.defaultMarkup);
      }
    }

    // Update markup preview calculation
    function updateMarkupPreview(percentage) {
      var basePrice = 100;
      var markupAmount = basePrice * (percentage / 100);
      var finalPrice = basePrice + markupAmount;

      document.getElementById('calcMarkupPercent').textContent = percentage;
      document.getElementById('calcMarkupAmount').textContent = '+$' + markupAmount.toFixed(2);
      document.getElementById('calcFinalPrice').textContent = '$' + finalPrice.toFixed(2);
    }

    // Listen for custom markup input changes
    document.getElementById('customMarkupValue').addEventListener('input', function(e) {
      var value = parseFloat(e.target.value) || 0;
      if (value < 0) value = 0;
      if (value > 100) value = 100;
      updateMarkupPreview(value);
    });

    // Confirm approve
    function confirmApprove() {
      var markupType = document.querySelector('input[name="markupType"]:checked').value;
      var markupPercentage = null; // null means use default

      if (markupType === 'custom') {
        markupPercentage = parseFloat(document.getElementById('customMarkupValue').value);
        if (isNaN(markupPercentage) || markupPercentage < 0 || markupPercentage > 100) {
          alert('Please enter a valid markup percentage between 0 and 100');
          return;
        }
      }

      var btn = document.getElementById('approveConfirmBtn');
      btn.disabled = true;
      btn.innerHTML = '<i data-lucide="loader-2" class="spin"></i> Processing...';
      if (typeof lucide !== 'undefined') lucide.createIcons();

      if (approveModalState.mode === 'single') {
        // Single user approve
        fetch('/admin/api/users/' + approveModalState.userId + '/approve', {
          method: 'PUT',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            markupPercentage: markupPercentage
          })
        }).then(function(response) {
          return response.json();
        }).then(function(data) {
          if (data.success) {
            closeApproveModal();
            location.reload();
          } else {
            alert(data.error || 'Failed to approve user');
            btn.disabled = false;
            btn.innerHTML = '<i data-lucide="check"></i> <span>Approve User</span>';
            if (typeof lucide !== 'undefined') lucide.createIcons();
          }
        }).catch(function(err) {
          console.error('Error approving user:', err);
          alert('Failed to approve user');
          btn.disabled = false;
          btn.innerHTML = '<i data-lucide="check"></i> <span>Approve User</span>';
          if (typeof lucide !== 'undefined') lucide.createIcons();
        });
      } else {
        // Bulk approve
        fetch('/admin/api/users/bulk-approve', {
          method: 'PUT',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            userIds: approveModalState.userIds,
            markupPercentage: markupPercentage
          })
        }).then(function(response) {
          return response.json();
        }).then(function(data) {
          if (data.success) {
            closeApproveModal();
            clearSelection();
            location.reload();
          } else {
            alert(data.error || 'Failed to approve users');
            btn.disabled = false;
            btn.innerHTML = '<i data-lucide="check"></i> <span>Approve Users</span>';
            if (typeof lucide !== 'undefined') lucide.createIcons();
          }
        }).catch(function(err) {
          console.error('Error approving users:', err);
          alert('Failed to approve users');
          btn.disabled = false;
          btn.innerHTML = '<i data-lucide="check"></i> <span>Approve Users</span>';
          if (typeof lucide !== 'undefined') lucide.createIcons();
        });
      }
    }

    // Override the old approveUser function
    function approveUser(userId) {
      // Get user info from the row
      var row = document.querySelector('tr[data-user-id="' + userId + '"]');
      var userName = '', userEmail = '';
      if (row) {
        var nameEl = row.querySelector('.user-info h4');
        var emailEl = row.querySelector('.user-info p');
        if (nameEl) userName = nameEl.textContent.trim();
        if (emailEl) userEmail = emailEl.textContent.trim();
      }
      openApproveModal(userId, userName, userEmail);
    }

    // Close modal with Escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        closeApproveModal();
      }
    });

    // Initialize markup option selection state
    document.addEventListener('DOMContentLoaded', function() {
      document.getElementById('markupOptionDefault').classList.add('selected');
    });
  </script>

