<%- include('partials/header') %>
<link rel="stylesheet" href="/css/adminCSS/admin-dashboard.css">
<style>
  .aog-priority {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.35rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
  }
  .aog-priority.critical {
    background: rgba(239, 68, 68, 0.15);
    color: #dc2626;
    animation: pulse-critical 2s infinite;
  }
  .aog-priority.high {
    background: rgba(245, 158, 11, 0.15);
    color: #d97706;
  }
  .aog-priority.medium {
    background: rgba(59, 130, 246, 0.15);
    color: #2563eb;
  }
  @keyframes pulse-critical {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.7; }
  }
  .aog-card {
    background: var(--admin-bg-primary);
    border: 1px solid var(--admin-border);
    border-radius: var(--admin-radius-xl);
    padding: 1.5rem;
    margin-bottom: 1rem;
    display: grid;
    grid-template-columns: auto 1fr auto;
    gap: 1.5rem;
    align-items: center;
    transition: var(--admin-transition);
    box-shadow: var(--admin-shadow-sm);
  }
  .aog-card:hover {
    border-color: var(--module-primary);
    box-shadow: var(--admin-shadow-md);
  }
  .aog-card.critical {
    border-left: 4px solid #ef4444;
  }
  .aog-card.high {
    border-left: 4px solid #f59e0b;
  }
  .aog-card.medium {
    border-left: 4px solid #3b82f6;
  }
  .aog-icon {
    width: 56px;
    height: 56px;
    background: rgba(14, 165, 233, 0.12);
    border-radius: var(--admin-radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #0ea5e9;
  }
  .aog-icon i {
    width: 28px;
    height: 28px;
  }
  .aog-info h4 {
    font-size: 1rem;
    font-weight: 700;
    color: var(--admin-text-primary);
    margin-bottom: 0.25rem;
  }
  .aog-info p {
    font-size: 0.85rem;
    color: var(--admin-text-muted);
    margin: 0;
  }
  .aog-meta {
    display: flex;
    gap: 1.5rem;
    margin-top: 0.75rem;
    font-size: 0.8rem;
    color: var(--admin-text-secondary);
  }
  .aog-meta span {
    display: flex;
    align-items: center;
    gap: 0.375rem;
  }
  .aog-meta i {
    width: 14px;
    height: 14px;
    color: var(--admin-text-muted);
  }
  .aog-right {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 0.75rem;
  }
  .aog-eta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(16, 185, 129, 0.12);
    border-radius: var(--admin-radius-md);
    color: #059669;
    font-weight: 600;
    font-size: 0.875rem;
  }
  .aog-eta i {
    width: 16px;
    height: 16px;
  }
  .aog-status {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.35rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
  }
  .aog-status.in_progress {
    background: rgba(59, 130, 246, 0.12);
    color: #2563eb;
  }
  .aog-status.sourcing {
    background: rgba(139, 92, 246, 0.12);
    color: #7c3aed;
  }
  .aog-status.shipped {
    background: rgba(245, 158, 11, 0.12);
    color: #d97706;
  }
  .aog-status.delivered {
    background: rgba(16, 185, 129, 0.12);
    color: #059669;
  }
</style>
</head>
<body class="module-aviation">
  <div class="admin-wrapper">
    <%- include('partials/sidebar', { activePage: 'aog', currentModule: 'aviation' }) %>
    
    <main class="admin-main">
      <%- include('partials/topbar', { pageTitle: 'AOG Cases', currentModule: 'aviation' }) %>
      
      <div class="admin-content">
        <!-- Aviation Module Banner -->
        <div class="module-info-banner">
          <div class="module-info-icon">
            <i data-lucide="alert-triangle"></i>
          </div>
          <div class="module-info-content">
            <div class="module-info-title">AOG (Aircraft On Ground) Cases</div>
            <div class="module-info-desc">Critical aircraft parts requiring immediate attention</div>
          </div>
          <div class="module-info-stats">
            <div class="module-info-stat">
              <div class="module-info-stat-value" style="color: #ef4444;"><%= aogCases.filter(c => c.priority === 'critical').length %></div>
              <div class="module-info-stat-label">Critical</div>
            </div>
            <div class="module-info-stat">
              <div class="module-info-stat-value"><%= aogCases.length %></div>
              <div class="module-info-stat-label">Total Cases</div>
            </div>
          </div>
        </div>

        <div class="page-header">
          <h2>Active AOG Cases</h2>
          <button class="admin-btn admin-btn-primary">
            <i data-lucide="plus"></i>
            Create AOG Case
          </button>
        </div>

        <!-- Stats Cards -->
        <div class="stats-grid" style="margin-bottom: 2rem;">
          <div class="stat-card red">
            <div class="stat-icon">
              <i data-lucide="alert-circle"></i>
            </div>
            <div class="stat-content">
              <div class="stat-value"><%= aogCases.filter(c => c.priority === 'critical').length %></div>
              <div class="stat-label">Critical Priority</div>
            </div>
          </div>
          <div class="stat-card orange">
            <div class="stat-icon">
              <i data-lucide="alert-triangle"></i>
            </div>
            <div class="stat-content">
              <div class="stat-value"><%= aogCases.filter(c => c.priority === 'high').length %></div>
              <div class="stat-label">High Priority</div>
            </div>
          </div>
          <div class="stat-card cyan">
            <div class="stat-icon">
              <i data-lucide="truck"></i>
            </div>
            <div class="stat-content">
              <div class="stat-value"><%= aogCases.filter(c => c.status === 'shipped').length %></div>
              <div class="stat-label">In Transit</div>
            </div>
          </div>
          <div class="stat-card green">
            <div class="stat-icon">
              <i data-lucide="check-circle"></i>
            </div>
            <div class="stat-content">
              <div class="stat-value"><%= aogCases.filter(c => c.status === 'delivered').length %></div>
              <div class="stat-label">Delivered Today</div>
            </div>
          </div>
        </div>

        <!-- AOG Cases List -->
        <% aogCases.forEach(aog => { %>
          <div class="aog-card <%= aog.priority %>">
            <div class="aog-icon">
              <i data-lucide="plane"></i>
            </div>
            <div class="aog-info">
              <h4><%= aog.id %> - <%= aog.aircraft %></h4>
              <p><%= aog.description %> (P/N: <%= aog.partNumber %>)</p>
              <div class="aog-meta">
                <span>
                  <i data-lucide="tag"></i>
                  <%= aog.registration %>
                </span>
                <span>
                  <i data-lucide="building"></i>
                  <%= aog.customer %>
                </span>
                <span>
                  <i data-lucide="calendar"></i>
                  <%= aog.created %>
                </span>
              </div>
            </div>
            <div class="aog-right">
              <div class="aog-priority <%= aog.priority %>">
                <i data-lucide="<%= aog.priority === 'critical' ? 'alert-circle' : 'alert-triangle' %>" style="width: 12px; height: 12px;"></i>
                <%= aog.priority.toUpperCase() %>
              </div>
              <div class="aog-eta">
                <i data-lucide="clock"></i>
                ETA: <%= aog.eta %>
              </div>
              <div class="aog-status <%= aog.status %>">
                <%= aog.status.replace('_', ' ').split(' ').map(w => w.charAt(0).toUpperCase() + w.slice(1)).join(' ') %>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    </main>
  </div>

<%- include('partials/footer') %>
