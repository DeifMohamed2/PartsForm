<%- include('partials/header') %>
<link rel="stylesheet" href="/css/adminCSS/admin-dashboard.css">
<style>
  .ticket-card {
    background: var(--admin-bg-primary);
    border: 1px solid var(--admin-border);
    border-radius: var(--admin-radius-lg);
    padding: 1.25rem;
    margin-bottom: 1rem;
    display: grid;
    grid-template-columns: auto 1fr auto auto;
    gap: 1.5rem;
    align-items: center;
    transition: var(--admin-transition);
    box-shadow: var(--admin-shadow-sm);
  }
  .ticket-card:hover {
    border-color: var(--module-primary);
    box-shadow: var(--admin-shadow-md);
  }
  .ticket-priority {
    width: 4px;
    height: 60px;
    border-radius: 2px;
  }
  .ticket-priority.urgent { background: var(--admin-danger); }
  .ticket-priority.high { background: var(--admin-warning); }
  .ticket-priority.medium { background: var(--admin-info); }
  .ticket-priority.low { background: var(--admin-success); }
  .ticket-info h4 {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 1rem;
    font-weight: 600;
    color: var(--admin-text-primary);
    margin-bottom: 0.25rem;
  }
  .ticket-info h4 span {
    font-weight: 600;
    color: var(--module-primary);
    font-size: 0.85rem;
  }
  .ticket-info p {
    font-size: 0.85rem;
    color: var(--admin-text-muted);
    margin: 0;
  }
  .ticket-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: 0.8rem;
    color: var(--admin-text-muted);
    margin-top: 0.5rem;
  }
  .ticket-meta span {
    display: flex;
    align-items: center;
    gap: 0.375rem;
  }
  .ticket-meta i {
    width: 14px;
    height: 14px;
  }
  .ticket-status {
    padding: 0.35rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
  }
  .ticket-status.open {
    background: rgba(245, 158, 11, 0.12);
    color: #d97706;
  }
  .ticket-status.in-progress {
    background: rgba(59, 130, 246, 0.12);
    color: #2563eb;
  }
  .ticket-status.resolved {
    background: rgba(16, 185, 129, 0.12);
    color: #059669;
  }
  .ticket-actions {
    display: flex;
    gap: 0.5rem;
  }
</style>
</head>
<body class="<%= typeof currentModule !== 'undefined' && currentModule ? 'module-' + currentModule : '' %>">
  <div class="admin-wrapper">
    <%- include('partials/sidebar', { activePage: 'tickets', currentModule: currentModule }) %>
    
    <main class="admin-main">
      <%- include('partials/topbar', { pageTitle: 'Tickets', currentModule: currentModule }) %>
      
      <div class="admin-content">
        <% if (currentModule && moduleConfig) { %>
        <div class="module-info-banner">
          <div class="module-info-icon">
            <i data-lucide="<%= moduleConfig.icon %>"></i>
          </div>
          <div class="module-info-content">
            <div class="module-info-title"><%= moduleConfig.name %> Tickets</div>
            <div class="module-info-desc">Viewing <%= moduleConfig.name.toLowerCase() %> support tickets</div>
          </div>
        </div>
        <% } %>

        <div class="page-header">
          <h2><%= currentModule ? moduleConfig.name + ' Tickets' : 'Support Tickets' %></h2>
          <button class="admin-btn admin-btn-secondary">
            <i data-lucide="download"></i>
            Export
          </button>
        </div>

        <!-- Stats Cards -->
        <div class="stats-grid" style="margin-bottom: 2rem;">
          <div class="stat-card orange">
            <div class="stat-icon">
              <i data-lucide="inbox"></i>
            </div>
            <div class="stat-content">
              <div class="stat-value"><%= tickets.filter(t => t.status === 'open').length %></div>
              <div class="stat-label">Open Tickets</div>
            </div>
          </div>
          <div class="stat-card module-themed">
            <div class="stat-icon">
              <i data-lucide="loader"></i>
            </div>
            <div class="stat-content">
              <div class="stat-value"><%= tickets.filter(t => t.status === 'in-progress').length %></div>
              <div class="stat-label">In Progress</div>
            </div>
          </div>
          <div class="stat-card green">
            <div class="stat-icon">
              <i data-lucide="check-circle"></i>
            </div>
            <div class="stat-content">
              <div class="stat-value"><%= tickets.filter(t => t.status === 'resolved').length %></div>
              <div class="stat-label">Resolved</div>
            </div>
          </div>
          <div class="stat-card purple">
            <div class="stat-icon">
              <i data-lucide="ticket"></i>
            </div>
            <div class="stat-content">
              <div class="stat-value"><%= tickets.length %></div>
              <div class="stat-label">Total Tickets</div>
            </div>
          </div>
        </div>

        <!-- Filters -->
        <div class="filters-row">
          <div class="filter-group">
            <span class="filter-label">Status:</span>
            <select class="filter-select">
              <option value="">All Status</option>
              <option value="open">Open</option>
              <option value="in-progress">In Progress</option>
              <option value="resolved">Resolved</option>
            </select>
          </div>
          <div class="filter-group">
            <span class="filter-label">Priority:</span>
            <select class="filter-select">
              <option value="">All Priorities</option>
              <option value="urgent">Urgent</option>
              <option value="high">High</option>
              <option value="medium">Medium</option>
              <option value="low">Low</option>
            </select>
          </div>
        </div>

        <!-- Tickets List -->
        <% if (tickets.length === 0) { %>
          <div style="padding: 3rem; text-align: center; color: var(--admin-text-muted); background: var(--admin-bg-primary); border-radius: var(--admin-radius-lg);">
            No tickets found.
          </div>
        <% } else { %>
          <% tickets.forEach(ticket => { %>
            <div class="ticket-card">
              <div class="ticket-priority <%= ticket.priority || 'medium' %>"></div>
              <div class="ticket-info">
                <h4>
                  <span><%= ticket.id %></span>
                  <%= ticket.subject %>
                </h4>
                <div class="ticket-meta">
                  <span>
                    <i data-lucide="shopping-bag"></i>
                    <%= ticket.orderNumber %>
                  </span>
                  <span>
                    <i data-lucide="folder"></i>
                    <%= ticket.category %>
                  </span>
                  <span>
                    <i data-lucide="clock"></i>
                    <%= new Date(ticket.createdAt).toLocaleDateString() %>
                  </span>
                  <span>
                    <i data-lucide="message-circle"></i>
                    <%= ticket.messages ? ticket.messages.length : 0 %> messages
                  </span>
                </div>
              </div>
              <div class="ticket-status <%= ticket.status %>">
                <%= ticket.status.split('-').map(w => w.charAt(0).toUpperCase() + w.slice(1)).join(' ') %>
              </div>
              <div class="ticket-actions">
                <button class="order-action-btn" title="View Ticket">
                  <i data-lucide="eye"></i>
                </button>
                <button class="order-action-btn" title="Reply">
                  <i data-lucide="reply"></i>
                </button>
                <button class="order-action-btn" title="Close Ticket">
                  <i data-lucide="x-circle"></i>
                </button>
              </div>
            </div>
          <% }); %>
        <% } %>
      </div>
    </main>
  </div>

<%- include('partials/footer') %>
