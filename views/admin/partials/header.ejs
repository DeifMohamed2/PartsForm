<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="PARTSFORM Admin Panel - Enterprise Industrial Parts Management">
  <title><%= title %></title>
  
  <!-- Favicon -->
  <link rel="icon" type="image/png" href="/images/favicon.png">
  
  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
  
  <!-- Lucide Icons -->
  <script src="https://unpkg.com/lucide@latest"></script>
  
  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  
  <!-- Admin CSS -->
  <link rel="stylesheet" href="/css/adminCSS/admin-main.css">
  
  <!-- Notification Manager Script -->
  <script src="/js/notifications.js"></script>

  <!-- Module Transition Loader Styles -->
  <style>
    /* Loader Overlay - Visible by default on page load */
    .module-loader-overlay {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      z-index: 99999;
      display: flex;
      align-items: center;
      justify-content: center;
      opacity: 1;
      visibility: visible;
      transition: opacity 0.4s ease, visibility 0.4s ease;
    }
    
    .module-loader-overlay.hidden {
      opacity: 0;
      visibility: hidden;
      pointer-events: none;
    }
    
    /* Loader Background - Semi-transparent with blur */
    .module-loader-overlay.loader-default,
    .module-loader-overlay.loader-automotive {
      background: rgba(12, 74, 110, 0.45);
      backdrop-filter: blur(6px);
      -webkit-backdrop-filter: blur(6px);
    }
    
    /* Loader Content - Only icon visible */
    .module-loader-content {
      text-align: center;
      color: white;
    }
    
    /* Hide text and progress bar - only show icon */
    .loader-title,
    .loader-subtitle,
    .loader-progress,
    .loader-particles {
      display: none !important;
    }
    
    /* Animated Icon Container */
    .loader-icon-container {
      width: 120px;
      height: 120px;
      margin: 0 auto;
      position: relative;
    }
    
    /* Spinning Ring */
    .loader-ring {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      border: 4px solid rgba(255, 255, 255, 0.2);
      border-top-color: white;
      border-radius: 50%;
      animation: loaderSpin 1s linear infinite;
    }
    
    /* Icon Inside */
    .loader-icon {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 48px;
      height: 48px;
      color: white;
      animation: loaderPulse 1.5s ease-in-out infinite;
    }
    
    /* Module-Specific Animations */
    .loader-automotive .loader-icon {
      animation: loaderDrive 1s ease-in-out infinite;
    }
    .loader-aviation .loader-icon {
      animation: loaderFly 2s ease-in-out infinite;
    }
    .loader-machinery .loader-icon {
      animation: loaderBuild 1.5s ease-in-out infinite;
    }
    
    /* Keyframes */
    @keyframes loaderSpin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }
    
    @keyframes loaderPulse {
      0%, 100% { transform: translate(-50%, -50%) scale(1); opacity: 1; }
      50% { transform: translate(-50%, -50%) scale(1.1); opacity: 0.8; }
    }
    
    @keyframes loaderDrive {
      0%, 100% { transform: translate(-50%, -50%) translateX(0); }
      25% { transform: translate(-50%, -50%) translateX(-5px) rotate(-3deg); }
      75% { transform: translate(-50%, -50%) translateX(5px) rotate(3deg); }
    }
    
    @keyframes loaderFly {
      0%, 100% { transform: translate(-50%, -50%) translateY(0) rotate(0deg); }
      25% { transform: translate(-50%, -50%) translateY(-8px) rotate(-5deg); }
      50% { transform: translate(-50%, -50%) translateY(0) rotate(0deg); }
      75% { transform: translate(-50%, -50%) translateY(-4px) rotate(5deg); }
    }
    
    @keyframes loaderBuild {
      0%, 100% { transform: translate(-50%, -50%) rotate(0deg); }
      25% { transform: translate(-50%, -50%) rotate(-10deg); }
      75% { transform: translate(-50%, -50%) rotate(10deg); }
    }
    
    /* Particles Effect - Hidden */
    .loader-particles {
      display: none;
    }
    
    .loader-particle {
      display: none;
    }
  </style>
</head>
<body>
  <!-- Module Transition Loader -->
  <div class="module-loader-overlay loader-default" id="moduleLoaderOverlay">
    <div class="loader-particles">
      <div class="loader-particle"></div>
      <div class="loader-particle"></div>
      <div class="loader-particle"></div>
      <div class="loader-particle"></div>
      <div class="loader-particle"></div>
      <div class="loader-particle"></div>
    </div>
    <div class="module-loader-content">
      <div class="loader-icon-container">
        <div class="loader-ring"></div>
        <i data-lucide="layers" class="loader-icon" id="loaderIcon"></i>
      </div>
      <div class="loader-title" id="loaderTitle">Loading Dashboard</div>
      <div class="loader-subtitle" id="loaderSubtitle">Please wait...</div>
      <div class="loader-progress">
        <div class="loader-progress-bar"></div>
      </div>
    </div>
  </div>

  <script>
    // Page Loader System - Simplified
    var PageLoader = {
      overlay: null,
      hideTimer: null,
      
      init: function() {
        this.overlay = document.getElementById('moduleLoaderOverlay');
      },
      
      hide: function() {
        if (this.overlay) {
          this.overlay.classList.add('hidden');
        }
      }
    };
    
    // Initialize on DOM ready
    document.addEventListener('DOMContentLoaded', function() {
      PageLoader.init();
      // Hide loader after brief delay
      setTimeout(function() {
        PageLoader.hide();
      }, 500);
    });
  </script>
</body>
