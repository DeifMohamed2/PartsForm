<!-- Sidebar Overlay for Mobile -->
<div class="sidebar-overlay" id="sidebarOverlay"></div>

<!-- Admin Sidebar Navigation - Light Mode -->
<aside class="admin-sidebar" id="adminSidebar">
  <!-- Mobile Close Button -->
  <button class="sidebar-close-btn" id="sidebarCloseBtn" aria-label="Close menu">
    <i data-lucide="x"></i>
  </button>

  <!-- Sidebar Header -->
  <div class="sidebar-header">
    <a href="/admin" class="sidebar-logo">
      <img src="/images/PARTSFORM-LOGO.webp" alt="PartsForm Logo">
      <span class="sidebar-logo-badge">Admin</span>
    </a>
  </div>

  <!-- Sidebar Navigation -->
  <nav class="sidebar-nav">
    <!-- Main Section -->
    <div class="sidebar-nav-section">
      <div class="sidebar-nav-title">Main</div>
      <a href="/admin" class="sidebar-nav-item <%= typeof activePage !== 'undefined' && activePage === 'dashboard' ? 'active' : '' %>">
        <i data-lucide="layout-dashboard"></i>
        <span>Dashboard</span>
      </a>
      <a href="/admin/parts-analytics" class="sidebar-nav-item <%= typeof activePage !== 'undefined' && activePage === 'parts-analytics' ? 'active' : '' %>">
        <i data-lucide="bar-chart-3"></i>
        <span>Parts Analytics</span>
        <span class="sidebar-nav-badge" style="background: linear-gradient(135deg, #8b5cf6, #7c3aed);">AI</span>
      </a>
    </div>

    <!-- Management Section -->
    <div class="sidebar-nav-section">
      <div class="sidebar-nav-title">Management</div>
      <a href="/admin/orders" class="sidebar-nav-item <%= typeof activePage !== 'undefined' && activePage === 'orders' ? 'active' : '' %>">
        <i data-lucide="shopping-cart"></i>
        <span>Orders</span>
        <% if (typeof sidebarCounts !== 'undefined' && sidebarCounts.newOrders > 0) { %>
        <span class="sidebar-nav-badge" id="sidebarOrdersBadge"><%= sidebarCounts.newOrders %></span>
        <% } %>
      </a>
      <a href="/admin/email-inquiries" class="sidebar-nav-item <%= typeof activePage !== 'undefined' && activePage === 'email-inquiries' ? 'active' : '' %>">
        <i data-lucide="mail"></i>
        <span>Email Inquiries</span>
        <% if (typeof sidebarCounts !== 'undefined' && sidebarCounts.unreadInquiries > 0) { %>
        <span class="sidebar-nav-badge" style="background: linear-gradient(135deg, #667eea, #764ba2);" id="sidebarInquiriesBadge"><%= sidebarCounts.unreadInquiries %></span>
        <% } %>
      </a>
      <a href="/admin/tickets" class="sidebar-nav-item <%= typeof activePage !== 'undefined' && activePage === 'tickets' ? 'active' : '' %>">
        <i data-lucide="ticket"></i>
        <span>Tickets</span>
        <% if (typeof sidebarCounts !== 'undefined' && sidebarCounts.openTickets > 0) { %>
        <span class="sidebar-nav-badge" id="sidebarTicketsBadge"><%= sidebarCounts.openTickets %></span>
        <% } %>
      </a>
      <a href="/admin/users" class="sidebar-nav-item <%= typeof activePage !== 'undefined' && activePage === 'users' ? 'active' : '' %>">
        <i data-lucide="users"></i>
        <span>Users</span>
      </a>
      <a href="/admin/payments" class="sidebar-nav-item <%= typeof activePage !== 'undefined' && activePage === 'payments' ? 'active' : '' %>">
        <i data-lucide="credit-card"></i>
        <span>Payments</span>
      </a>
    </div>

    <!-- System Section -->
    <div class="sidebar-nav-section">
      <div class="sidebar-nav-title">System</div>
      <a href="/admin/integrations" class="sidebar-nav-item <%= typeof activePage !== 'undefined' && activePage === 'integrations' ? 'active' : '' %>">
        <i data-lucide="plug"></i>
        <span>Integrations</span>
      </a>
      <a href="/admin/admins" class="sidebar-nav-item <%= typeof activePage !== 'undefined' && activePage === 'admins' ? 'active' : '' %>">
        <i data-lucide="shield"></i>
        <span>Administrators</span>
      </a>
    </div>
  </nav>

  <!-- Sidebar Footer - Clickable Admin User -->
  <div class="sidebar-footer">
    <div class="sidebar-user-wrapper" id="sidebarUserWrapper">
      <div class="sidebar-user" id="sidebarUserBtn">
        <div class="sidebar-user-avatar">
          <span>A</span>
        </div>
        <div class="sidebar-user-info">
          <div class="sidebar-user-name">Admin User</div>
          <div class="sidebar-user-role">Administrator</div>
        </div>
        <i data-lucide="chevron-up" class="sidebar-user-chevron" style="width: 18px; height: 18px; color: var(--admin-text-muted); transition: transform 0.2s;"></i>
      </div>
      
      <!-- User Dropdown Menu -->
      <div class="sidebar-user-dropdown" id="sidebarUserDropdown">
        <a href="/admin/profile" class="sidebar-user-menu-item">
          <i data-lucide="user"></i>
          <span>My Profile</span>
        </a>
        <a href="/admin/admins" class="sidebar-user-menu-item">
          <i data-lucide="shield"></i>
          <span>Administrators</span>
        </a>
        <a href="/admin/activity" class="sidebar-user-menu-item">
          <i data-lucide="activity"></i>
          <span>Activity Log</span>
        </a>
        <div class="sidebar-user-menu-divider"></div>
        <button class="sidebar-user-menu-item logout" id="sidebarLogoutBtn">
          <i data-lucide="log-out"></i>
          <span>Logout</span>
        </button>
      </div>
    </div>
  </div>
</aside>

<style>
/* Sidebar User Wrapper */
.sidebar-user-wrapper {
  position: relative;
}

.sidebar-user {
  cursor: pointer;
  transition: background 0.2s;
  border-radius: var(--admin-radius-lg);
  padding: 0.5rem;
  margin: -0.5rem;
}

.sidebar-user:hover {
  background: var(--admin-bg-secondary);
}

.sidebar-user-wrapper.open .sidebar-user {
  background: var(--admin-bg-secondary);
}

.sidebar-user-wrapper.open .sidebar-user-chevron {
  transform: rotate(180deg);
}

/* User Dropdown */
.sidebar-user-dropdown {
  position: absolute;
  bottom: calc(100% + 8px);
  left: 0;
  right: 0;
  background: var(--admin-bg-primary);
  border: 1px solid var(--admin-border);
  border-radius: var(--admin-radius-lg);
  box-shadow: 0 -10px 40px rgba(0, 0, 0, 0.12);
  padding: 0.5rem;
  opacity: 0;
  visibility: hidden;
  transform: translateY(10px);
  transition: all 0.2s ease;
}

.sidebar-user-wrapper.open .sidebar-user-dropdown {
  opacity: 1;
  visibility: visible;
  transform: translateY(0);
}

.sidebar-user-menu-item {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 0.625rem 0.75rem;
  border-radius: var(--admin-radius-md);
  color: var(--admin-text-primary);
  text-decoration: none;
  font-size: 0.875rem;
  font-weight: 500;
  transition: all 0.2s;
  width: 100%;
  background: none;
  border: none;
  cursor: pointer;
  text-align: left;
}

.sidebar-user-menu-item:hover {
  background: var(--admin-bg-secondary);
}

.sidebar-user-menu-item i {
  width: 18px;
  height: 18px;
  color: var(--admin-text-muted);
}

.sidebar-user-menu-item.logout {
  color: #ef4444;
}

.sidebar-user-menu-item.logout i {
  color: #ef4444;
}

.sidebar-user-menu-item.logout:hover {
  background: rgba(239, 68, 68, 0.08);
}

.sidebar-user-menu-divider {
  height: 1px;
  background: var(--admin-border);
  margin: 0.5rem 0;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Sidebar User Dropdown
  const sidebarUserWrapper = document.getElementById('sidebarUserWrapper');
  const sidebarUserBtn = document.getElementById('sidebarUserBtn');
  const sidebarLogoutBtn = document.getElementById('sidebarLogoutBtn');
  const logoutModalOverlay = document.getElementById('logoutModalOverlay');

  if (sidebarUserBtn) {
    sidebarUserBtn.addEventListener('click', function(e) {
      e.stopPropagation();
      sidebarUserWrapper.classList.toggle('open');
    });
  }

  // Close dropdown on outside click
  document.addEventListener('click', function(e) {
    if (!sidebarUserWrapper?.contains(e.target)) {
      sidebarUserWrapper?.classList.remove('open');
    }
  });

  // Sidebar logout button
  if (sidebarLogoutBtn) {
    sidebarLogoutBtn.addEventListener('click', function(e) {
      e.preventDefault();
      sidebarUserWrapper.classList.remove('open');
      logoutModalOverlay?.classList.add('open');
      lucide.createIcons();
    });
  }

  // Mobile Menu Toggle
  var mobileMenuToggle = document.getElementById('mobileMenuToggle');
  var sidebar = document.getElementById('adminSidebar');
  var sidebarOverlay = document.getElementById('sidebarOverlay');
  var sidebarCloseBtn = document.getElementById('sidebarCloseBtn');

  function openSidebar() {
    sidebar?.classList.add('open');
    sidebarOverlay?.classList.add('active');
    document.body.classList.add('sidebar-open');
    document.body.style.overflow = 'hidden';
  }

  function closeSidebar() {
    sidebar?.classList.remove('open');
    sidebarOverlay?.classList.remove('active');
    document.body.classList.remove('sidebar-open');
    document.body.style.overflow = '';
  }

  if (mobileMenuToggle) {
    mobileMenuToggle.addEventListener('click', openSidebar);
  }

  if (sidebarCloseBtn) {
    sidebarCloseBtn.addEventListener('click', closeSidebar);
  }

  if (sidebarOverlay) {
    sidebarOverlay.addEventListener('click', closeSidebar);
  }

  // Close sidebar on navigation link click (mobile)
  var navItems = document.querySelectorAll('.sidebar-nav-item');
  navItems.forEach(function(item) {
    item.addEventListener('click', function() {
      if (window.innerWidth < 1200) {
        closeSidebar();
      }
    });
  });

  // Close sidebar on Escape key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape' && sidebar?.classList.contains('open')) {
      closeSidebar();
    }
  });

  // Handle resize - close sidebar if resizing to desktop
  window.addEventListener('resize', function() {
    if (window.innerWidth >= 1200) {
      closeSidebar();
    }
  });

  // ===== Sidebar Notification Counts - Real-time Updates =====
  
  /**
   * Update sidebar badge counts from API
   */
  async function updateSidebarCounts() {
    try {
      const response = await fetch('/admin/api/sidebar-counts');
      if (!response.ok) return;
      
      const data = await response.json();
      if (!data.success) return;
      
      const { newOrders, openTickets, unreadInquiries } = data.counts;
      
      // Update Orders badge
      const ordersBadge = document.getElementById('sidebarOrdersBadge');
      const ordersNavItem = document.querySelector('a[href*="/admin/orders"]');
      
      if (newOrders > 0) {
        if (ordersBadge) {
          ordersBadge.textContent = newOrders;
        } else if (ordersNavItem) {
          // Create badge if it doesn't exist
          const badge = document.createElement('span');
          badge.className = 'sidebar-nav-badge';
          badge.id = 'sidebarOrdersBadge';
          badge.textContent = newOrders;
          ordersNavItem.appendChild(badge);
        }
      } else if (ordersBadge) {
        ordersBadge.remove();
      }
      
      // Update Tickets badge
      const ticketsBadge = document.getElementById('sidebarTicketsBadge');
      const ticketsNavItem = document.querySelector('a[href*="/admin/tickets"]');
      
      if (openTickets > 0) {
        if (ticketsBadge) {
          ticketsBadge.textContent = openTickets;
        } else if (ticketsNavItem) {
          // Create badge if it doesn't exist
          const badge = document.createElement('span');
          badge.className = 'sidebar-nav-badge';
          badge.id = 'sidebarTicketsBadge';
          badge.textContent = openTickets;
          ticketsNavItem.appendChild(badge);
        }
      } else if (ticketsBadge) {
        ticketsBadge.remove();
      }
      
      // Update Email Inquiries badge
      const inquiriesBadge = document.getElementById('sidebarInquiriesBadge');
      const inquiriesNavItem = document.querySelector('a[href*="/admin/email-inquiries"]');
      
      if (unreadInquiries > 0) {
        if (inquiriesBadge) {
          inquiriesBadge.textContent = unreadInquiries;
        } else if (inquiriesNavItem) {
          // Create badge if it doesn't exist
          const badge = document.createElement('span');
          badge.className = 'sidebar-nav-badge';
          badge.id = 'sidebarInquiriesBadge';
          badge.style.background = 'linear-gradient(135deg, #667eea, #764ba2)';
          badge.textContent = unreadInquiries;
          inquiriesNavItem.appendChild(badge);
        }
      } else if (inquiriesBadge) {
        inquiriesBadge.remove();
      }
    } catch (error) {
      console.error('Failed to update sidebar counts:', error);
    }
  }
  
  // Update counts every 30 seconds for real-time updates
  setInterval(updateSidebarCounts, 30000);
  
  // Also update when page becomes visible again (user returns to tab)
  document.addEventListener('visibilitychange', function() {
    if (document.visibilityState === 'visible') {
      updateSidebarCounts();
    }
  });
});
</script>
