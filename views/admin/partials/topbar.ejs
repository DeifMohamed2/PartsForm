}
.dropdown-item-content {
  flex: 1;
  min-width: 0;
}
.dropdown-item-text {
  font-size: 0.85rem;
  color: var(--admin-text-primary);
  line-height: 1.4;
}
.dropdown-item-time {
  font-size: 0.75rem;
  color: var(--admin-text-muted);
  margin-top: 0.25rem;
}
.topbar-dropdown-footer {
  display: block;
  padding: 0.875rem 1rem;
  text-align: center;
  font-size: 0.85rem;
  font-weight: 500;
  color: var(--admin-primary);
  text-decoration: none;
  border-top: 1px solid var(--admin-border);
}
.topbar-dropdown-footer:hover {
  background: var(--admin-bg-secondary);
}

/* Logout Modal */
.logout-modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.2s ease;
  z-index: 9999;
}
.logout-modal-overlay.open {
  opacity: 1;
  visibility: visible;
}
.logout-modal {
  background: var(--admin-bg-primary);
  border-radius: var(--admin-radius-xl);
  padding: 2rem;
  width: 380px;
  text-align: center;
  transform: scale(0.9);
  transition: transform 0.2s ease;
}
.logout-modal-overlay.open .logout-modal {
  transform: scale(1);
}
.logout-modal-icon {
  width: 60px;
  height: 60px;
  background: rgba(239, 68, 68, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 1rem;
  color: #ef4444;
}
.logout-modal-icon i {
  width: 28px;
  height: 28px;
}
.logout-modal-title {
  font-size: 1.25rem;
  font-weight: 700;
  color: var(--admin-text-primary);
  margin-bottom: 0.5rem;
}
.logout-modal-text {
  font-size: 0.9rem;
  color: var(--admin-text-muted);
  margin-bottom: 1.5rem;
}
.logout-modal-actions {
  display: flex;
  gap: 0.75rem;
}
.logout-modal-btn {
  flex: 1;
  padding: 0.75rem 1rem;
  border-radius: var(--admin-radius-lg);
  font-weight: 600;
  font-size: 0.9rem;
  cursor: pointer;
  transition: all 0.2s;
}
.logout-modal-btn.cancel {
  background: var(--admin-bg-secondary);
  border: 1px solid var(--admin-border);
  color: var(--admin-text-primary);
}
.logout-modal-btn.cancel:hover {
  background: var(--admin-border);
}
.logout-modal-btn.confirm {
  background: #ef4444;
  border: none;
  color: white;
}
.logout-modal-btn.confirm:hover {
  background: #dc2626;
}
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Module Selector Functionality
    const moduleSelector = document.getElementById('moduleSelector');
    const moduleSelectorBtn = document.getElementById('moduleSelectorBtn');
    const moduleOptions = document.querySelectorAll('.module-option');

    // Toggle dropdown
    if (moduleSelectorBtn) {
      moduleSelectorBtn.addEventListener('click', function(e) {
        e.stopPropagation();
        moduleSelector.classList.toggle('open');
        closeAllDropdowns('moduleSelector');
      });
    }

    // Handle module selection
    moduleOptions.forEach(option => {
      option.addEventListener('click', function() {
        const module = this.dataset.module;
        const currentUrl = new URL(window.location.href);
        
        if (module) {
          currentUrl.searchParams.set('module', module);
        } else {
          currentUrl.searchParams.delete('module');
        }
        
        window.location.href = currentUrl.toString();
      });
    });

    // Notifications Dropdown
    const notificationsWrapper = document.getElementById('notificationsWrapper');
    const notificationsBtn = document.getElementById('notificationsBtn');
    
    if (notificationsBtn) {
      notificationsBtn.addEventListener('click', function(e) {
        e.stopPropagation();
        notificationsWrapper.classList.toggle('open');
        closeAllDropdowns('notificationsWrapper');
      });
    }

    // Messages Dropdown
    const messagesWrapper = document.getElementById('messagesWrapper');
    const messagesBtn = document.getElementById('messagesBtn');
    
    if (messagesBtn) {
      messagesBtn.addEventListener('click', function(e) {
        e.stopPropagation();
        messagesWrapper.classList.toggle('open');
        closeAllDropdowns('messagesWrapper');
      });
    }

    // Close all dropdowns except the one specified
    function closeAllDropdowns(except) {
      if (except !== 'moduleSelector') moduleSelector?.classList.remove('open');
      if (except !== 'notificationsWrapper') notificationsWrapper?.classList.remove('open');
      if (except !== 'messagesWrapper') messagesWrapper?.classList.remove('open');
    }

    // Close dropdowns when clicking outside
    document.addEventListener('click', function(e) {
      if (!moduleSelector?.contains(e.target)) moduleSelector?.classList.remove('open');
      if (!notificationsWrapper?.contains(e.target)) notificationsWrapper?.classList.remove('open');
      if (!messagesWrapper?.contains(e.target)) messagesWrapper?.classList.remove('open');
    });

    // Logout Modal
    const logoutBtn = document.getElementById('logoutBtn');
    const logoutModalOverlay = document.getElementById('logoutModalOverlay');
    const logoutCancelBtn = document.getElementById('logoutCancelBtn');
    const logoutConfirmBtn = document.getElementById('logoutConfirmBtn');

    if (logoutBtn) {
      logoutBtn.addEventListener('click', function(e) {
        e.preventDefault();
        logoutModalOverlay.classList.add('open');
        lucide.createIcons();
      });
    }

    if (logoutCancelBtn) {
      logoutCancelBtn.addEventListener('click', function() {
        logoutModalOverlay.classList.remove('open');
      });
    }

    if (logoutConfirmBtn) {
      logoutConfirmBtn.addEventListener('click', function() {
        window.location.href = '/';
      });
    }

    // Close modal on overlay click
    logoutModalOverlay?.addEventListener('click', function(e) {
      if (e.target === logoutModalOverlay) {
        logoutModalOverlay.classList.remove('open');
      }
    });

    // Keyboard shortcut for search (Cmd+K / Ctrl+K)
    document.addEventListener('keydown', function(e) {
      if ((e.metaKey || e.ctrlKey) && e.key === 'k') {
        e.preventDefault();
        document.getElementById('globalSearchInput')?.focus();
      }
      // Close modal on Escape
      if (e.key === 'Escape') {
        logoutModalOverlay?.classList.remove('open');
        closeAllDropdowns();
      }
    });

    // Apply module theme to body
    const currentModule = '<%= typeof currentModule !== "undefined" ? currentModule : "" %>';
    if (currentModule) {
      document.body.classList.add('module-' + currentModule);
    }
  });
</script>
