<%- include('partials/header') %>
<link rel="stylesheet" href="/css/adminCSS/admin-dashboard.css">
<link rel="stylesheet" href="/css/adminCSS/admin-users.css">
</head>
<body>
  <div class="admin-wrapper">
    <%- include('partials/sidebar', { activePage: 'users' }) %>
    
    <main class="admin-main">
      <%- include('partials/topbar', { pageTitle: 'User Details' }) %>
      
      <div class="admin-content">
        <!-- Breadcrumb -->
        <div style="margin-bottom: 1.5rem;">
          <a href="/admin/users" class="breadcrumb-link">
            <i data-lucide="arrow-left"></i>
            Back to Users
          </a>
        </div>

        <!-- User Header - Enhanced -->
        <div class="user-profile-header">
          <% if (user.avatar) { %>
          <img src="<%= user.avatar %>" alt="<%= user.name %>" class="user-profile-avatar-img">
          <% } else { %>
          <div class="user-profile-avatar"><%= user.name.charAt(0) %></div>
          <% } %>
          <div class="user-profile-main">
            <div class="user-profile-name-row">
              <h1><%= user.name %></h1>
              <span class="user-status-badge <%= user.status %>">
                <% if (user.status === 'active') { %>
                  <i data-lucide="check-circle"></i>
                <% } else { %>
                  <i data-lucide="x-circle"></i>
                <% } %>
                <%= user.status.charAt(0).toUpperCase() + user.status.slice(1) %>
              </span>
            </div>
            <p class="user-profile-email"><%= user.email %></p>
            <div class="user-profile-tags">
              <span class="user-tag">
                <i data-lucide="building"></i>
                <%= user.company || user.companyName %>
              </span>
              <span class="user-tag">
                <i data-lucide="map-pin"></i>
                <%= user.city %>, <%= user.country %>
              </span>
              <span class="user-tag">
                <i data-lucide="phone"></i>
                <%= user.phone %>
              </span>
              <span class="user-tag">
                <i data-lucide="calendar"></i>
                Member since <%= new Date(user.joined).toLocaleDateString('en-US', { month: 'short', year: 'numeric' }) %>
              </span>
            </div>
          </div>
          <div class="user-profile-actions">
            <a href="/admin/users/<%= user.id %>/edit" class="admin-btn admin-btn-primary">
              <i data-lucide="edit-2"></i>
              Edit Profile
            </a>
            <button class="admin-btn admin-btn-secondary" onclick="toggleUserStatus('<%= user.id %>', '<%= user.status %>')">
              <i data-lucide="<%= user.status === 'active' ? 'user-x' : 'user-check' %>"></i>
              <%= user.status === 'active' ? 'Deactivate' : 'Activate' %>
            </button>
            <button class="admin-btn icon-only" title="More Actions" onclick="toggleActionsMenu()">
              <i data-lucide="more-vertical"></i>
            </button>
          </div>
        </div>

        <!-- Stats Row - Enhanced with icons -->
        <div class="user-quick-stats">
          <div class="quick-stat-card blue">
            <div class="quick-stat-icon">
              <i data-lucide="shopping-bag"></i>
            </div>
            <div class="quick-stat-content">
              <div class="quick-stat-value"><%= user.orders %></div>
              <div class="quick-stat-label">Total Orders</div>
            </div>
          </div>
          <div class="quick-stat-card green">
            <div class="quick-stat-icon">
              <i data-lucide="dollar-sign"></i>
            </div>
            <div class="quick-stat-content">
              <div class="quick-stat-value">$<%= (user.totalSpent / 1000).toFixed(1) %>K</div>
              <div class="quick-stat-label">Total Spent</div>
            </div>
          </div>
          <div class="quick-stat-card orange">
            <div class="quick-stat-icon">
              <i data-lucide="ticket"></i>
            </div>
            <div class="quick-stat-content">
              <div class="quick-stat-value"><%= user.tickets || 0 %></div>
              <div class="quick-stat-label">Support Tickets</div>
            </div>
          </div>
          <div class="quick-stat-card purple">
            <div class="quick-stat-icon">
              <i data-lucide="clock"></i>
            </div>
            <div class="quick-stat-content">
              <div class="quick-stat-value"><%= Math.floor((new Date() - new Date(user.joined)) / (1000 * 60 * 60 * 24)) %></div>
              <div class="quick-stat-label">Days as Customer</div>
            </div>
          </div>
          <div class="quick-stat-card teal">
            <div class="quick-stat-icon">
              <i data-lucide="trending-up"></i>
            </div>
            <div class="quick-stat-content">
              <div class="quick-stat-value">$<%= user.orders > 0 ? ((user.totalSpent / user.orders) / 1000).toFixed(1) : '0' %>K</div>
              <div class="quick-stat-label">Avg Order Value</div>
            </div>
          </div>
        </div>

        <!-- Tabs -->
        <div class="user-tabs">
          <button class="user-tab active" data-tab="overview">
            <i data-lucide="user"></i>
            Overview
          </button>
          <button class="user-tab" data-tab="orders">
            <i data-lucide="shopping-bag"></i>
            Orders (<%= user.orders %>)
          </button>
          <button class="user-tab" data-tab="payments">
            <i data-lucide="credit-card"></i>
            Payments
          </button>
          <button class="user-tab" data-tab="tickets">
            <i data-lucide="ticket"></i>
            Tickets
          </button>
          <button class="user-tab" data-tab="activity">
            <i data-lucide="activity"></i>
            Activity
          </button>
        </div>

        <!-- Overview Tab - Enhanced -->
        <div class="user-tab-content active" id="tab-overview">
          <div class="user-overview-layout">
            <!-- Left Column -->
            <div class="user-overview-main">
              <!-- Contact Info -->
              <div class="info-card">
                <div class="info-card-header">
                  <i data-lucide="phone"></i>
                  <h3>Contact Information</h3>
                </div>
                <div class="info-card-body">
                  <div class="info-item">
                    <div class="info-icon"><i data-lucide="mail"></i></div>
                    <div class="info-content">
                      <span class="info-label">Email Address</span>
                      <span class="info-value"><%= user.email %></span>
                    </div>
                    <a href="mailto:<%= user.email %>" class="info-action" title="Send Email">
                      <i data-lucide="send"></i>
                    </a>
                  </div>
                  <div class="info-item">
                    <div class="info-icon"><i data-lucide="phone"></i></div>
                    <div class="info-content">
                      <span class="info-label">Phone Number</span>
                      <span class="info-value"><%= user.phone || 'Not provided' %></span>
                    </div>
                    <% if (user.phone) { %>
                    <a href="tel:<%= user.phone %>" class="info-action" title="Call">
                      <i data-lucide="phone-call"></i>
                    </a>
                    <% } %>
                  </div>
                  <div class="info-item">
                    <div class="info-icon"><i data-lucide="globe"></i></div>
                    <div class="info-content">
                      <span class="info-label">Country</span>
                      <span class="info-value"><%= user.country || 'Not provided' %></span>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Company Info -->
              <div class="info-card">
                <div class="info-card-header">
                  <i data-lucide="building"></i>
                  <h3>Company Details</h3>
                </div>
                <div class="info-card-body">
                  <div class="info-item">
                    <div class="info-icon"><i data-lucide="briefcase"></i></div>
                    <div class="info-content">
                      <span class="info-label">Company Name</span>
                      <span class="info-value"><%= user.company %></span>
                    </div>
                  </div>
                  <div class="info-item">
                    <div class="info-icon"><i data-lucide="map-pin"></i></div>
                    <div class="info-content">
                      <span class="info-label">City</span>
                      <span class="info-value"><%= user.city || 'Not provided' %></span>
                    </div>
                  </div>
                  <div class="info-item">
                    <div class="info-icon"><i data-lucide="truck"></i></div>
                    <div class="info-content">
                      <span class="info-label">Shipping Address</span>
                      <span class="info-value"><%= user.shippingAddress || 'Not provided' %></span>
                    </div>
                  </div>
                  <div class="info-item">
                    <div class="info-icon"><i data-lucide="mail"></i></div>
                    <div class="info-content">
                      <span class="info-label">Newsletter</span>
                      <span class="info-value"><%= user.newsletter ? 'Subscribed' : 'Not subscribed' %></span>
                    </div>
                  </div>
                  <div class="info-item">
                    <div class="info-icon"><i data-lucide="coins"></i></div>
                    <div class="info-content">
                      <span class="info-label">Preferred Currency</span>
                      <span class="info-value"><%= user.preferredCurrency || 'USD' %></span>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Right Column -->
            <div class="user-overview-side">
              <!-- Account Info -->
              <div class="info-card">
                <div class="info-card-header">
                  <i data-lucide="settings"></i>
                  <h3>Account Information</h3>
                </div>
                <div class="info-card-body compact">
                  <div class="account-row">
                    <span>User ID</span>
                    <strong>#<%= user.id %></strong>
                  </div>
                  <div class="account-row">
                    <span>Status</span>
                    <span class="user-status-badge <%= user.status %>">
                      <%= user.status.charAt(0).toUpperCase() + user.status.slice(1) %>
                    </span>
                  </div>
                  <div class="account-row">
                    <span>Joined</span>
                    <strong><%= new Date(user.joined).toLocaleDateString() %></strong>
                  </div>
                  <div class="account-row">
                    <span>Last Login</span>
                    <strong><%= user.lastLogin ? new Date(user.lastLogin).toLocaleDateString() : 'Never' %></strong>
                  </div>
                </div>
              </div>

              <!-- Saved Addresses -->
              <div class="info-card">
                <div class="info-card-header">
                  <i data-lucide="map-pin"></i>
                  <h3>Saved Addresses (<%= user.addresses ? user.addresses.length : 0 %>)</h3>
                </div>
                <div class="info-card-body">
                  <% if (user.addresses && user.addresses.length > 0) { %>
                  <div class="addresses-list">
                    <% user.addresses.forEach(function(addr, index) { %>
                    <div class="address-card <%= addr.isDefault ? 'default' : '' %>">
                      <div class="address-header">
                        <span class="address-label">
                          <i data-lucide="<%= addr.label.toLowerCase().includes('home') ? 'home' : (addr.label.toLowerCase().includes('office') ? 'building' : 'map-pin') %>"></i>
                          <%= addr.label %>
                        </span>
                        <% if (addr.isDefault) { %>
                        <span class="default-badge">Default</span>
                        <% } %>
                      </div>
                      <div class="address-body">
                        <p class="address-name"><%= addr.fullName %></p>
                        <p class="address-line"><%= addr.street %></p>
                        <p class="address-line"><%= addr.city %>, <%= addr.state %> <%= addr.postalCode %></p>
                        <p class="address-line"><%= addr.country %></p>
                        <p class="address-phone"><i data-lucide="phone"></i> <%= addr.phone %></p>
                        <% if (addr.notes) { %>
                        <p class="address-notes"><i data-lucide="info"></i> <%= addr.notes %></p>
                        <% } %>
                      </div>
                    </div>
                    <% }); %>
                  </div>
                  <% } else { %>
                  <div class="empty-state-small">
                    <i data-lucide="map-pin-off"></i>
                    <p>No saved addresses</p>
                  </div>
                  <% } %>
                </div>
              </div>

              <!-- Quick Actions -->
              <div class="info-card">
                <div class="info-card-header">
                  <i data-lucide="zap"></i>
                  <h3>Quick Actions</h3>
                </div>
                <div class="info-card-body">
                  <div class="quick-actions-grid">
                    <a href="mailto:<%= user.email %>" class="quick-action-btn">
                      <i data-lucide="mail"></i>
                      <span>Send Email</span>
                    </a>
                    <a href="#" class="quick-action-btn" onclick="document.querySelector('[data-tab=orders]').click(); return false;">
                      <i data-lucide="shopping-bag"></i>
                      <span>View Orders</span>
                    </a>
                    <a href="/admin/users/<%= user.id %>/edit" class="quick-action-btn">
                      <i data-lucide="edit-2"></i>
                      <span>Edit User</span>
                    </a>
                    <button class="quick-action-btn danger" onclick="toggleUserStatus('<%= user.id %>', '<%= user.status %>')">
                      <i data-lucide="<%= user.status === 'active' ? 'user-x' : 'user-check' %>"></i>
                      <span><%= user.status === 'active' ? 'Deactivate' : 'Activate' %></span>
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Orders Tab -->
        <div class="user-tab-content" id="tab-orders">
          <div class="users-table-card">
            <table class="users-table">
              <thead>
                <tr>
                  <th>Order ID</th>
                  <th>Date</th>
                  <th>Items</th>
                  <th>Amount</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% if (user.recentOrders && user.recentOrders.length > 0) { %>
                <% user.recentOrders.forEach(function(order) { %>
                <tr>
                  <td><span class="id-badge order"><i data-lucide="shopping-bag"></i><%= order.id %></span></td>
                  <td><%= new Date(order.date).toLocaleDateString() %></td>
                  <td><%= order.items %> items</td>
                  <td><strong>$<%= order.amount.toLocaleString() %></strong></td>
                  <td>
                    <span class="order-status <%= order.status %>"><%= order.status.charAt(0).toUpperCase() + order.status.slice(1) %></span>
                  </td>
                  <td>
                    <a href="/admin/orders/<%= order.id %>" class="user-action-btn view">
                      <i data-lucide="eye"></i>
                    </a>
                  </td>
                </tr>
                <% }); %>
                <% } else { %>
                <tr>
                  <td colspan="6" style="text-align: center; padding: 2rem; color: #64748b;">
                    No orders found for this user
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>

        <!-- Payments Tab -->
        <div class="user-tab-content" id="tab-payments">
          <div class="users-table-card">
            <table class="users-table">
              <thead>
                <tr>
                  <th>Payment ID</th>
                  <th>Order</th>
                  <th>Date</th>
                  <th>Amount</th>
                  <th>Method</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody>
                <!-- Payments will be loaded from real data when Payment model is implemented -->
                <tr>
                  <td colspan="6" style="text-align: center; padding: 2rem; color: #64748b;">
                    No payments found for this user
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>

        <!-- Tickets Tab -->
        <div class="user-tab-content" id="tab-tickets">
          <div class="users-table-card">
            <table class="users-table">
              <thead>
                <tr>
                  <th>Ticket ID</th>
                  <th>Subject</th>
                  <th>Category</th>
                  <th>Date</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <!-- Tickets will be loaded from database when Ticket model is implemented -->
                <tr>
                  <td colspan="6" style="text-align: center; padding: 2rem; color: #64748b;">
                    No tickets found for this user
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>

        <!-- Activity Tab -->
        <div class="user-tab-content" id="tab-activity">
          <div class="activity-feed-card">
            <div class="activity-feed">
              <% 
              // Build real activity from orders and account events
              var activities = [];
              
              // Add registration activity
              activities.push({
                icon: 'user-plus',
                text: 'Account created',
                detail: 'Registered as ' + user.companyName,
                time: new Date(user.createdAt).toLocaleDateString(),
                color: 'blue'
              });
              
              // Add orders as activities
              if (user.recentOrders && user.recentOrders.length > 0) {
                user.recentOrders.forEach(function(order) {
                  activities.push({
                    icon: 'shopping-bag',
                    text: 'Placed order ' + order.id,
                    detail: order.items + ' items, $' + order.amount.toLocaleString(),
                    time: new Date(order.date).toLocaleDateString(),
                    color: 'purple'
                  });
                });
              }
              
              // Add last login
              if (user.lastLogin) {
                activities.push({
                  icon: 'log-in',
                  text: 'Last login',
                  detail: 'Accessed account',
                  time: new Date(user.lastLogin).toLocaleDateString(),
                  color: 'gray'
                });
              }
              
              // Sort by date (most recent first) - simple reverse since we added in order
              activities.reverse();
              %>
              
              <% if (activities.length > 0) { %>
              <% activities.forEach(function(activity) { %>
              <div class="activity-feed-item">
                <div class="activity-feed-icon <%= activity.color %>">
                  <i data-lucide="<%= activity.icon %>"></i>
                </div>
                <div class="activity-feed-content">
                  <div class="activity-feed-text"><%= activity.text %></div>
                  <div class="activity-feed-detail"><%= activity.detail %></div>
                </div>
                <div class="activity-feed-time"><%= activity.time %></div>
              </div>
              <% }); %>
              <% } else { %>
              <div class="empty-state-small" style="padding: 2rem; text-align: center;">
                <i data-lucide="activity"></i>
                <p>No activity recorded yet</p>
              </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>

  <style>
    /* Enhanced User Details Styles */
    .breadcrumb-link {
      color: var(--admin-text-muted);
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      font-size: 0.9rem;
      transition: color 0.2s;
    }
    .breadcrumb-link:hover { color: var(--admin-text-primary); }
    .breadcrumb-link i { width: 16px; height: 16px; }

    /* Profile Header */
    .user-profile-header {
      display: flex;
      align-items: flex-start;
      gap: 1.5rem;
      padding: 1.75rem;
      background: var(--admin-bg-secondary);
      border: 1px solid var(--admin-border);
      border-radius: 20px;
      margin-bottom: 1.5rem;
    }
    .user-profile-avatar {
      width: 90px;
      height: 90px;
      background: linear-gradient(135deg, var(--module-primary, #3b82f6), var(--module-primary-dark, #2563eb));
      border-radius: 20px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-weight: 700;
      font-size: 2.25rem;
      flex-shrink: 0;
    }
    .user-profile-main { flex: 1; }
    .user-profile-name-row {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-bottom: 0.35rem;
    }
    .user-profile-name-row h1 {
      font-size: 1.75rem;
      font-weight: 700;
      color: var(--admin-text-primary);
      margin: 0;
    }
    .user-profile-email {
      font-size: 0.95rem;
      color: var(--admin-text-muted);
      margin: 0 0 0.75rem;
    }
    .user-profile-tags {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
    }
    .user-tag {
      display: inline-flex;
      align-items: center;
      gap: 0.35rem;
      padding: 0.35rem 0.75rem;
      background: var(--admin-bg-tertiary);
      border-radius: 8px;
      font-size: 0.8rem;
      color: var(--admin-text-secondary);
    }
    .user-tag i { width: 14px; height: 14px; }
    .user-profile-actions {
      display: flex;
      gap: 0.5rem;
      align-items: flex-start;
    }
    .admin-btn.icon-only {
      width: 42px;
      height: 42px;
      padding: 0;
      justify-content: center;
    }

    /* Quick Stats */
    .user-quick-stats {
      display: grid;
      grid-template-columns: repeat(5, 1fr);
      gap: 1rem;
      margin-bottom: 1.5rem;
    }
    .quick-stat-card {
      background: var(--admin-bg-secondary);
      border: 1px solid var(--admin-border);
      border-radius: 14px;
      padding: 1.25rem;
      display: flex;
      align-items: center;
      gap: 1rem;
    }
    .quick-stat-icon {
      width: 48px;
      height: 48px;
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .quick-stat-icon i { width: 24px; height: 24px; }
    .quick-stat-card.blue .quick-stat-icon { background: rgba(59, 130, 246, 0.12); color: #3b82f6; }
    .quick-stat-card.green .quick-stat-icon { background: rgba(16, 185, 129, 0.12); color: #10b981; }
    .quick-stat-card.orange .quick-stat-icon { background: rgba(245, 158, 11, 0.12); color: #f59e0b; }
    .quick-stat-card.purple .quick-stat-icon { background: rgba(139, 92, 246, 0.12); color: #8b5cf6; }
    .quick-stat-card.teal .quick-stat-icon { background: rgba(20, 184, 166, 0.12); color: #14b8a6; }
    .quick-stat-value { font-size: 1.5rem; font-weight: 700; color: var(--admin-text-primary); }
    .quick-stat-label { font-size: 0.75rem; color: var(--admin-text-muted); text-transform: uppercase; }

    /* Overview Layout */
    .user-overview-layout {
      display: grid;
      grid-template-columns: 2fr 1fr;
      gap: 1.5rem;
    }
    .user-overview-main { display: flex; flex-direction: column; gap: 1rem; }
    .user-overview-side { display: flex; flex-direction: column; gap: 1rem; }

    /* Info Cards */
    .info-card {
      background: var(--admin-bg-secondary);
      border: 1px solid var(--admin-border);
      border-radius: 16px;
      overflow: hidden;
    }
    .info-card-header {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 1rem 1.25rem;
      background: var(--admin-bg-tertiary);
      border-bottom: 1px solid var(--admin-border);
    }
    .info-card-header i { width: 18px; height: 18px; color: var(--module-primary, #3b82f6); }
    .info-card-header h3 { font-size: 0.9rem; font-weight: 600; color: var(--admin-text-primary); margin: 0; flex: 1; }
    .view-all-link { font-size: 0.8rem; color: var(--module-primary, #3b82f6); text-decoration: none; }
    .info-card-body { padding: 1rem 1.25rem; }
    .info-card-body.compact { padding: 0.75rem 1.25rem; }

    /* Info Items */
    .info-item {
      display: flex;
      align-items: center;
      gap: 1rem;
      padding: 0.875rem 0;
      border-bottom: 1px solid var(--admin-border);
    }
    .info-item:last-child { border-bottom: none; }
    .info-icon {
      width: 38px;
      height: 38px;
      background: var(--admin-bg-tertiary);
      border-radius: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .info-icon i { width: 18px; height: 18px; color: var(--admin-text-muted); }
    .info-content { flex: 1; }
