                <div class="edit-form-group">
                  <label>Connection Type</label>
                  <input type="text" class="edit-form-input" value="<%= integration.type.toUpperCase() %>" disabled style="text-transform: uppercase; font-weight: 600;">
                </div>
                <div class="edit-form-group">
                  <label>Connection ID</label>
                  <input type="text" class="edit-form-input mono" value="<%= integration._id %>" disabled>
                </div>
              </div>
            </div>
          </div>

          <!-- FTP Configuration -->
          <% if (integration.type === 'ftp') { %>
          <div class="edit-form-card">
            <div class="edit-form-card-header">
              <div class="edit-form-card-header-icon" style="background: rgba(14, 165, 233, 0.1); color: #0ea5e9;">
                <i data-lucide="hard-drive"></i>
              </div>
              <div>
                <h3>FTP Configuration</h3>
                <p>Server connection and file settings</p>
              </div>
            </div>
            <div class="edit-form-card-body">
              <div class="edit-form-grid">
                <div class="edit-form-group">
                  <label>Host <span class="required">*</span></label>
                  <input type="text" class="edit-form-input" name="ftpHost" value="<%= integration.ftp && integration.ftp.host || '' %>" placeholder="ftp.example.com" required>
                </div>
                <div class="edit-form-group">
                  <label>Port</label>
                  <input type="number" class="edit-form-input" name="ftpPort" value="<%= integration.ftp && integration.ftp.port || 21 %>" min="1" max="65535">
                </div>
                <div class="edit-form-group">
                  <label>Username <span class="required">*</span></label>
                  <input type="text" class="edit-form-input" name="ftpUsername" value="<%= integration.ftp && integration.ftp.username || '' %>" required>
                </div>
                <div class="edit-form-group">
                  <label>Password <span class="required">*</span></label>
                  <div class="password-field-wrapper">
                    <input type="password" class="edit-form-input" name="ftpPassword" id="ftpPassword" value="<%= integration.ftp && integration.ftp.password || '' %>" required>
                    <button type="button" class="toggle-password" onclick="togglePassword('ftpPassword')">
                      <i data-lucide="eye"></i>
                    </button>
                  </div>
                </div>
                <div class="edit-form-group">
                  <label>Protocol</label>
                  <select class="edit-form-select" name="ftpProtocol" id="ftpProtocol">
                    <option value="ftp" <%= (integration.ftp && !integration.ftp.secure) ? 'selected' : '' %>>FTP</option>
                    <option value="ftps" <%= (integration.ftp && integration.ftp.secure) ? 'selected' : '' %>>FTPS (Secure)</option>
                  </select>
                </div>
                <div class="edit-form-group">
                  <label>Remote Path</label>
                  <input type="text" class="edit-form-input mono" name="ftpRemotePath" value="<%= integration.ftp && integration.ftp.remotePath || '/' %>" placeholder="/">
                </div>
                <div class="edit-form-group full-width">
                  <label>File Pattern</label>
                  <input type="text" class="edit-form-input mono" name="ftpFilePattern" value="<%= integration.ftp && integration.ftp.filePattern || '*.csv' %>" placeholder="*.csv">
                  <span class="edit-form-hint">Glob pattern for matching files (e.g. *.csv, data_*.xlsx)</span>
                </div>
              </div>

              <!-- Test Connection Result -->
              <div class="test-result" id="testResult">
                <i data-lucide="check-circle"></i>
                <span id="testResultMessage"></span>
              </div>
            </div>
          </div>
          <% } %>

          <!-- API Configuration -->
          <% if (integration.type === 'api') { %>
          <div class="edit-form-card">
            <div class="edit-form-card-header">
              <div class="edit-form-card-header-icon" style="background: rgba(168, 85, 247, 0.1); color: #a855f7;">
                <i data-lucide="code-2"></i>
              </div>
              <div>
                <h3>API Configuration</h3>
                <p>Endpoint and authentication settings</p>
              </div>
            </div>
            <div class="edit-form-card-body">
              <div class="edit-form-grid">
                <div class="edit-form-group">
                  <label>API Type</label>
                  <select class="edit-form-select" name="apiType">
                    <option value="rest" <%= (integration.api && integration.api.apiType === 'rest') ? 'selected' : '' %>>REST API</option>
                    <option value="graphql" <%= (integration.api && integration.api.apiType === 'graphql') ? 'selected' : '' %>>GraphQL</option>
                  </select>
                </div>
                <div class="edit-form-group">
                  <label>Base URL <span class="required">*</span></label>
                  <input type="url" class="edit-form-input" name="apiBaseUrl" value="<%= integration.api && integration.api.baseUrl || '' %>" placeholder="https://api.example.com" required>
                </div>
                <div class="edit-form-group">
                  <label>Auth Type</label>
                  <select class="edit-form-select" name="apiAuthType">
                    <option value="api-key" <%= (integration.api && integration.api.authType === 'api-key') ? 'selected' : '' %>>API Key</option>
                    <option value="bearer" <%= (integration.api && integration.api.authType === 'bearer') ? 'selected' : '' %>>Bearer Token</option>
                    <option value="basic" <%= (integration.api && integration.api.authType === 'basic') ? 'selected' : '' %>>Basic Auth</option>
                    <option value="oauth2" <%= (integration.api && integration.api.authType === 'oauth2') ? 'selected' : '' %>>OAuth 2.0</option>
                    <option value="none" <%= (integration.api && integration.api.authType === 'none') ? 'selected' : '' %>>No Auth</option>
                  </select>
                </div>
                <div class="edit-form-group">
                  <label>API Key / Token</label>
                  <div class="password-field-wrapper">
                    <input type="password" class="edit-form-input" name="apiKey" id="apiKey" value="<%= integration.api && integration.api.apiKey || '' %>">
                    <button type="button" class="toggle-password" onclick="togglePassword('apiKey')">
                      <i data-lucide="eye"></i>
                    </button>
                  </div>
                </div>
                <div class="edit-form-group">
                  <label>Auth Header Name</label>
                  <input type="text" class="edit-form-input" name="apiAuthHeader" value="<%= integration.api && integration.api.authHeader || 'Authorization' %>" placeholder="Authorization">
                </div>
                <div class="edit-form-group">
                  <label>Rate Limit (req/min)</label>
                  <input type="number" class="edit-form-input" name="apiRateLimit" value="<%= integration.api && integration.api.rateLimit || 60 %>" min="1">
                </div>
                <div class="edit-form-group">
                  <label>Timeout (ms)</label>
                  <input type="number" class="edit-form-input" name="apiTimeout" value="<%= integration.api && integration.api.timeout || 30000 %>" min="1000" step="1000">
                </div>
              </div>
            </div>
          </div>
          <% } %>

          <!-- Google Sheets Configuration -->
          <% if (integration.type === 'google-sheets') { %>
          <div class="edit-form-card">
            <div class="edit-form-card-header">
              <div class="edit-form-card-header-icon" style="background: rgba(34, 197, 94, 0.1); color: #22c55e;">
                <i data-lucide="file-spreadsheet"></i>
              </div>
              <div>
                <h3>Google Sheets Configuration</h3>
                <p>Spreadsheet connection settings</p>
              </div>
            </div>
            <div class="edit-form-card-body">
              <div class="edit-form-grid">
                <div class="edit-form-group">
                  <label>Spreadsheet ID <span class="required">*</span></label>
                  <input type="text" class="edit-form-input mono" name="spreadsheetId" value="<%= integration.googleSheets && integration.googleSheets.spreadsheetId || '' %>" required>
                  <span class="edit-form-hint">Found in the URL: docs.google.com/spreadsheets/d/{SPREADSHEET_ID}/edit</span>
                </div>
                <div class="edit-form-group">
                  <label>Sheet Name</label>
                  <input type="text" class="edit-form-input" name="sheetName" value="<%= integration.googleSheets && integration.googleSheets.sheetName || '' %>" placeholder="Sheet1">
                </div>
              </div>
            </div>
          </div>
          <% } %>

          <!-- Sync Schedule -->
          <div class="edit-form-card">
            <div class="edit-form-card-header">
              <div class="edit-form-card-header-icon" style="background: rgba(168, 85, 247, 0.1); color: #a855f7;">
                <i data-lucide="calendar-clock"></i>
              </div>
              <div>
                <h3>Sync Schedule</h3>
                <p>Configure automatic synchronization</p>
              </div>
            </div>
            <div class="edit-form-card-body">
              <div class="edit-form-grid">
                <div class="edit-form-group">
                  <label>Schedule Enabled</label>
                  <select class="edit-form-select" name="syncEnabled">
                    <option value="true" <%= (integration.syncSchedule && integration.syncSchedule.enabled) ? 'selected' : '' %>>Enabled</option>
                    <option value="false" <%= (integration.syncSchedule && !integration.syncSchedule.enabled) ? 'selected' : '' %>>Disabled</option>
                  </select>
                </div>
                <div class="edit-form-group">
                  <label>Frequency</label>
                  <select class="edit-form-select" name="syncFrequency">
                    <option value="hourly" <%= (integration.syncSchedule && integration.syncSchedule.frequency === 'hourly') ? 'selected' : '' %>>Every Hour</option>
                    <option value="every4hours" <%= (integration.syncSchedule && integration.syncSchedule.frequency === 'every4hours') ? 'selected' : '' %>>Every 4 Hours</option>
                    <option value="every6hours" <%= (integration.syncSchedule && integration.syncSchedule.frequency === 'every6hours') ? 'selected' : '' %>>Every 6 Hours</option>
                    <option value="every12hours" <%= (integration.syncSchedule && integration.syncSchedule.frequency === 'every12hours') ? 'selected' : '' %>>Every 12 Hours</option>
                    <option value="daily" <%= (integration.syncSchedule && integration.syncSchedule.frequency === 'daily') ? 'selected' : '' %>>Daily</option>
                    <option value="weekly" <%= (integration.syncSchedule && integration.syncSchedule.frequency === 'weekly') ? 'selected' : '' %>>Weekly</option>
                  </select>
                </div>
                <div class="edit-form-group">
                  <label>Preferred Time</label>
                  <input type="time" class="edit-form-input" name="syncTime" value="<%= integration.syncSchedule && integration.syncSchedule.time || '02:00' %>">
                </div>
              </div>
            </div>
          </div>

          <!-- Options -->
          <div class="edit-form-card">
            <div class="edit-form-card-header">
              <div class="edit-form-card-header-icon" style="background: rgba(245, 158, 11, 0.1); color: #f59e0b;">
                <i data-lucide="sliders-horizontal"></i>
              </div>
              <div>
                <h3>Advanced Options</h3>
                <p>Fine-tune sync behavior</p>
              </div>
            </div>
            <div class="edit-form-card-body">
              <div class="edit-toggle-row">
                <div class="edit-toggle-info">
                  <h4>Auto Sync</h4>
                  <p>Automatically sync data when schedule triggers</p>
                </div>
                <label class="edit-toggle">
                  <input type="checkbox" name="autoSync" <%= (integration.options && integration.options.autoSync) ? 'checked' : '' %>>
                  <span class="edit-toggle-slider"></span>
                </label>
              </div>
              <div class="edit-toggle-row">
                <div class="edit-toggle-info">
                  <h4>Notify on Complete</h4>
                  <p>Send notification when sync finishes</p>
                </div>
                <label class="edit-toggle">
                  <input type="checkbox" name="notifyOnComplete" <%= (integration.options && integration.options.notifyOnComplete !== false) ? 'checked' : '' %>>
                  <span class="edit-toggle-slider"></span>
                </label>
              </div>
              <div class="edit-toggle-row">
                <div class="edit-toggle-info">
                  <h4>Delta Sync</h4>
                  <p>Only sync changes since last run (incremental)</p>
                </div>
                <label class="edit-toggle">
                  <input type="checkbox" name="deltaSync" <%= (integration.options && integration.options.deltaSync) ? 'checked' : '' %>>
                  <span class="edit-toggle-slider"></span>
                </label>
              </div>
              <div class="edit-toggle-row">
                <div class="edit-toggle-info">
                  <h4>Retry on Failure</h4>
                  <p>Automatically retry if sync fails</p>
                </div>
                <label class="edit-toggle">
                  <input type="checkbox" name="retryOnFail" <%= (integration.options && integration.options.retryOnFail !== false) ? 'checked' : '' %>>
                  <span class="edit-toggle-slider"></span>
                </label>
              </div>
            </div>
          </div>

          <!-- Form Actions -->
          <div class="edit-form-actions">
            <a href="/admin/integrations" class="btn-edit-secondary">
              <i data-lucide="x"></i>
              Cancel
            </a>
            <button type="submit" class="btn-edit-primary" id="saveBtn">
              <i data-lucide="save"></i>
              Save Changes
            </button>
          </div>
        </form>

        <!-- Danger Zone -->
        <div class="danger-zone">
          <div class="danger-zone-header">
            <i data-lucide="alert-triangle"></i>
            <h3>Danger Zone</h3>
          </div>
          <div class="danger-zone-body">
            <p>Permanently delete this connection and all its sync history. This action cannot be undone.</p>
            <button type="button" class="btn-edit-danger" onclick="confirmDelete()">
              <i data-lucide="trash-2"></i>
              Delete Connection
            </button>
          </div>
        </div>
      </div>
    </main>
  </div>

  <!-- Delete Confirmation Modal -->
  <div class="status-modal-overlay" id="deleteModalOverlay" onclick="closeDeleteModal()">
    <div class="status-modal" onclick="event.stopPropagation()" style="max-width: 440px;">
      <div class="status-modal-header">
        <div class="status-modal-icon" style="background: rgba(239, 68, 68, 0.1);">
          <i data-lucide="trash-2" style="color: #ef4444;"></i>
        </div>
        <div>
          <h3>Delete Connection</h3>
          <p style="color: var(--admin-text-muted);">This action cannot be undone</p>
        </div>
        <button class="status-modal-close" onclick="closeDeleteModal()">
          <i data-lucide="x"></i>
        </button>
      </div>
      <div class="status-modal-body">
        <p style="color: var(--admin-text-secondary);">Are you sure you want to delete <strong><%= integration.name %></strong>? All sync history and configuration will be permanently removed.</p>
      </div>
      <div class="status-modal-footer">
        <button class="btn-edit-secondary" onclick="closeDeleteModal()">Cancel</button>
        <button class="btn-edit-danger" onclick="deleteConnection()">
          <i data-lucide="trash-2"></i>
          Delete Connection
        </button>
      </div>
    </div>
  </div>

  <!-- Toast -->
  <div class="edit-toast" id="editToast">
    <i data-lucide="check-circle"></i>
    <span id="editToastMessage"></span>
  </div>

  <style>
    .status-modal-overlay {
      position: fixed;
      top: 0; left: 0; right: 0; bottom: 0;
      background: rgba(0, 0, 0, 0.5);
      backdrop-filter: blur(4px);
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 9999;
      opacity: 0;
      visibility: hidden;
      transition: all 0.25s ease;
    }
    .status-modal-overlay.active { opacity: 1; visibility: visible; }
    .status-modal {
      background: var(--admin-bg-primary);
      border-radius: 20px;
      width: 100%;
      box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
      transform: scale(0.9);
      transition: all 0.25s ease;
    }
    .status-modal-overlay.active .status-modal { transform: scale(1); }
    .status-modal-header {
      display: flex;
      align-items: center;
      gap: 1rem;
      padding: 1.25rem 1.5rem;
      border-bottom: 1px solid var(--admin-border);
    }
    .status-modal-icon {
      width: 48px; height: 48px;
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .status-modal-icon i { width: 24px; height: 24px; }
    .status-modal-header h3 {
      font-size: 1.1rem;
      font-weight: 600;
      color: var(--admin-text-primary);
      margin: 0 0 0.15rem;
    }
    .status-modal-close {
      margin-left: auto;
      width: 36px; height: 36px;
      border: none;
      background: var(--admin-bg-secondary);
      border-radius: 10px;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--admin-text-muted);
    }
    .status-modal-close i { width: 18px; height: 18px; }
    .status-modal-body { padding: 1.5rem; }
    .status-modal-footer {
      display: flex;
      justify-content: flex-end;
      gap: 0.75rem;
      padding: 1rem 1.5rem;
      background: var(--admin-bg-secondary);
      border-top: 1px solid var(--admin-border);
      border-radius: 0 0 20px 20px;
    }
  </style>

  <script>
    var integrationId = '<%= integration._id %>';
    var integrationType = '<%= integration.type %>';

    // Toggle password visibility
    function togglePassword(fieldId) {
      var field = document.getElementById(fieldId);
      var btn = field.parentElement.querySelector('.toggle-password');
      if (field.type === 'password') {
        field.type = 'text';
        btn.innerHTML = '<i data-lucide="eye-off"></i>';
      } else {
        field.type = 'password';
        btn.innerHTML = '<i data-lucide="eye"></i>';
      }
      if (typeof lucide !== 'undefined') lucide.createIcons();
    }

    // Show toast
    function showToast(message, type) {
      var toast = document.getElementById('editToast');
      var toastMsg = document.getElementById('editToastMessage');
      toast.className = 'edit-toast ' + type;
      toastMsg.textContent = message;
      var iconHtml = type === 'success' 
        ? '<i data-lucide="check-circle"></i>' 
        : '<i data-lucide="alert-circle"></i>';
      toast.innerHTML = iconHtml + '<span>' + message + '</span>';
      if (typeof lucide !== 'undefined') lucide.createIcons();
      
      setTimeout(function() { toast.classList.add('show'); }, 10);
      setTimeout(function() { toast.classList.remove('show'); }, 4000);
    }

    // Collect form data
    function collectFormData() {
      var form = document.getElementById('editIntegrationForm');
      var data = {
        name: form.querySelector('[name="name"]').value,
        status: form.querySelector('[name="status"]').value,
        isEnabled: form.querySelector('[name="status"]').value === 'active',
        syncSchedule: {
          enabled: form.querySelector('[name="syncEnabled"]').value === 'true',
          frequency: form.querySelector('[name="syncFrequency"]').value,
          time: form.querySelector('[name="syncTime"]').value,
        },
        autoSync: form.querySelector('[name="autoSync"]').checked,
        notifyOnComplete: form.querySelector('[name="notifyOnComplete"]').checked,
        deltaSync: form.querySelector('[name="deltaSync"]').checked,
        retryOnFail: form.querySelector('[name="retryOnFail"]').checked,
      };

      if (integrationType === 'ftp') {
        data.ftp = {
          host: form.querySelector('[name="ftpHost"]').value,
          port: parseInt(form.querySelector('[name="ftpPort"]').value) || 21,
          username: form.querySelector('[name="ftpUsername"]').value,
          password: form.querySelector('[name="ftpPassword"]').value,
          protocol: form.querySelector('[name="ftpProtocol"]').value,
          remotePath: form.querySelector('[name="ftpRemotePath"]').value || '/',
          filePattern: form.querySelector('[name="ftpFilePattern"]').value || '*.csv',
        };
      } else if (integrationType === 'api') {
        data.api = {
          apiType: form.querySelector('[name="apiType"]').value,
          baseUrl: form.querySelector('[name="apiBaseUrl"]').value,
          authType: form.querySelector('[name="apiAuthType"]').value,
          apiKey: form.querySelector('[name="apiKey"]').value,
          authHeader: form.querySelector('[name="apiAuthHeader"]').value,
          rateLimit: parseInt(form.querySelector('[name="apiRateLimit"]').value) || 60,
          timeout: parseInt(form.querySelector('[name="apiTimeout"]').value) || 30000,
        };
      } else if (integrationType === 'google-sheets') {
        data.googleSheets = {
          spreadsheetId: form.querySelector('[name="spreadsheetId"]').value,
          sheetName: form.querySelector('[name="sheetName"]').value,
        };
      }

      return data;
    }

    // Save form
    document.getElementById('editIntegrationForm').addEventListener('submit', function(e) {
      e.preventDefault();
      var saveBtn = document.getElementById('saveBtn');
      saveBtn.disabled = true;
      saveBtn.innerHTML = '<span class="btn-spinner"></span> Saving...';

      var data = collectFormData();

      fetch('/admin/api/integrations/' + integrationId, {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      })
      .then(function(response) { return response.json(); })
      .then(function(result) {
        saveBtn.disabled = false;
        saveBtn.innerHTML = '<i data-lucide="save"></i> Save Changes';
        if (typeof lucide !== 'undefined') lucide.createIcons();

        if (result.success) {
          showToast('Connection updated successfully', 'success');
        } else {
          showToast(result.error || 'Failed to update connection', 'error');
        }
      })
      .catch(function(err) {
        console.error('Error saving integration:', err);
        saveBtn.disabled = false;
        saveBtn.innerHTML = '<i data-lucide="save"></i> Save Changes';
        if (typeof lucide !== 'undefined') lucide.createIcons();
        showToast('Failed to save changes', 'error');
      });
    });

    // Test connection
    function testConnection() {
      var testResultEl = document.getElementById('testResult');
      var testMsgEl = document.getElementById('testResultMessage');
      
      if (testResultEl) {
        testResultEl.className = 'test-result';
        testResultEl.style.display = 'none';
      }

      var data = collectFormData();
      data._id = integrationId;
      data.type = integrationType;

      showToast('Testing connection...', 'success');

      fetch('/admin/api/integrations/test', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      })
      .then(function(response) { return response.json(); })
      .then(function(result) {
        if (testResultEl && testMsgEl) {
          testResultEl.style.display = 'flex';
          if (result.success) {
            testResultEl.className = 'test-result show success';
            var msg = result.message || 'Connection successful';
            if (result.data && result.data.filesCount) {
              msg += ' (' + result.data.filesCount + ' files found)';
            }
            testMsgEl.textContent = msg;
            testResultEl.innerHTML = '<i data-lucide="check-circle"></i><span>' + msg + '</span>';
          } else {
            testResultEl.className = 'test-result show error';
            testMsgEl.textContent = result.error || 'Connection failed';
            testResultEl.innerHTML = '<i data-lucide="alert-circle"></i><span>' + (result.error || 'Connection failed') + '</span>';
          }
          if (typeof lucide !== 'undefined') lucide.createIcons();
        }

        if (result.success) {
          showToast('Connection test passed!', 'success');
        } else {
          showToast(result.error || 'Connection test failed', 'error');
        }
      })
      .catch(function(err) {
        console.error('Error testing connection:', err);
        showToast('Connection test failed', 'error');
      });
    }

    // Sync now
    function syncNow() {
      if (!confirm('Start a sync now? This may take a while for large datasets.')) return;

      showToast('Starting sync...', 'success');

      fetch('/admin/api/integrations/' + integrationId + '/sync', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
      })
      .then(function(response) { return response.json(); })
      .then(function(result) {
        if (result.success) {
          showToast('Sync started successfully', 'success');
          // Redirect to integrations page to see progress
          setTimeout(function() {
            window.location.href = '/admin/integrations';
          }, 1500);
        } else {
          showToast(result.error || 'Failed to start sync', 'error');
        }
      })
      .catch(function(err) {
        console.error('Error starting sync:', err);
        showToast('Failed to start sync', 'error');
      });
    }

    // Delete
    function confirmDelete() {
      document.getElementById('deleteModalOverlay').classList.add('active');
      if (typeof lucide !== 'undefined') lucide.createIcons();
    }

    function closeDeleteModal() {
      document.getElementById('deleteModalOverlay').classList.remove('active');
    }

    function deleteConnection() {
      fetch('/admin/api/integrations/' + integrationId, {
        method: 'DELETE',
      })
      .then(function(response) { return response.json(); })
      .then(function(result) {
        if (result.success) {
          window.location.href = '/admin/integrations';
        } else {
          showToast(result.error || 'Failed to delete connection', 'error');
          closeDeleteModal();
        }
      })
      .catch(function(err) {
        console.error('Error deleting connection:', err);
        showToast('Failed to delete connection', 'error');
        closeDeleteModal();
      });
    }

    // Close modal with Escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') closeDeleteModal();
    });
  </script>

